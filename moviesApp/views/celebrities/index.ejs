<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title> Welcome to the Celebrity section </title>
  </head>
  <body>

    <h1>Click on the celebrity that you want to know more of: </h1> <br>

    <ul>
      <%  result.forEach((oneCeleb) => { %>
        <a href="celebrities/<%= oneCeleb._id %>"> <%= oneCeleb.name %> </a> <br/>
        <button type="button" name="button"><a href="/celebrities/<%= oneCeleb._id %>/edit"> Edit </a></button>
        <button type="button" name="button"><a href="/celebrities/<%= oneCeleb._id %>/delete"> Delete </a></button>
        <br/><br/><br/>
      <% }); %>
    </ul>

    <button type="button" name="button"><a href="/celebrities/new">Add a celebrity</a></button>
  </body>
</html>
