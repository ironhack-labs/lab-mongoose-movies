<!DOCTYPE html>
<html>
  <head>
    <title>Index</title>
    <link rel="stylesheet" href='/stylesheets.style.css' />
  </head>
  <body>
    <h2>Index</h2>

    <a href="/movies/new"> Add a new movie </a>
    <ul>
      <% movies.forEach((movie) => { %>
        <li>
          <p> <%= movie.title %> </p>
          <a href="/movies/<%= movie._id %>">
            Movie
          </a>

        <br>
          <a href="/movies/<%= movie._id %>/edit">
            Update Movie Info
          </a>

          <form action="/movies/<%= movie._id %>/delete" method="POST">
            <button type="submit">Delete Movie</button>
          </form>

        </li>
      <% }) %>
    </ul>
  </body>
</html>
