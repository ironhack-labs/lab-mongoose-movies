<h2>Edit movie information</h2>
<form action="/movies/<%= movie._id %>" method="post">

  <label for="movie-title-input">Movie title</label>
  <input id="movie-title-input" type="text" name="movieTitle" value="<%= movie.title %>" onblur=“if (this.value == ‘’) {this.value = ‘Enter celebrity name’;}” onfocus=“if (this.value == ‘Enter celebrity name’) {this.value = ‘’;}“/>

  <br><br>

  <label for="movie-genre-input">Movie genre</label>
  <input id="movie-genre-input" type="text" name="movieGenre" value="<%= movie.genre %>">
  <br><br>

  <label for="movie-plot-input">Movie plot</label>
  <textarea id="movie-plot-input" type="text" name="moviePlot"><%= movie.plot %></textarea>

  <br><br><br>
  <button>Save changes</button>

</form>
