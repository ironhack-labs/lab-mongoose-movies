<h1> Movie List </h1>
<ul>
    <% movies.forEach((movie) => { %>
        <li>
            <b>Movie Title:</b>
            <a href="/movies/<%= movie.id%>">
                <%= movie.title%>
            </a>
            <form action="movies/<%= movie.id%>/delete" method="post">
                <button>Delete Movie</button>
            </form>
            <a href="movies/<%= movie.id%>/edit">
                <button>Edit Movie</button>
            </a>
        </li>
        <% }) %>
</ul>

<a href="/movies/new">Add New Movie</a>