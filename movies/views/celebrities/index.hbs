<!--layout.hbs-->
<div class="container-fluid celebrities-index">
    <div class="celebrities-inner-index">
        <h2>Celebrities</h2>
        {{#each celebrities}}
        <ul>
            <li>
                <span class="name">{{name}}</span>  <a href="/celebrities/{{id}}" class="btn btn-secondary">m√°s info</a>
                {{#if ../currentUser}}
                <form action="/celebrities/{{id}}/edit" method="get">
                    <button type="submit" class="btn btn-secondary">edit</button>
                </form>
                <form action="/celebrities/{{id}}/delete" method="post">
                    <button type="submit" class="btn btn-secondary">delete</button>
                </form>
                {{/if}}
            </li>
        </ul>
        {{/each}}
        {{#if currentUser}}
        <a href="/celebrities/new" class="btn btn-info">Add celebrity</a>
        {{/if}}
    </div>
</div>