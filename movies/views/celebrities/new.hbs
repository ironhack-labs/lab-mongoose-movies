<div class="container-fluid movies-new">
    <div class="movies-inner-new">
        <h2>Adding new celebrity</h2>
        <form action="/celebrities" method="post">
            <label>Name:</label>
            <input type="text" name="name" placeholder="name" class="form-control">
            <label>Occupation:</label>
            <input type="text" name="occupation" placeholder="occupation" class="form-control">
            <label>catchPhrase:</label>
            <input type="text" name="catchPhrase" placeholder="catchPhrase" class="form-control">
            <button type="submit" class="btn btn-info"> Send</button>
        </form>
    </div>
</div>