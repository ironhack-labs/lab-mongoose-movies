<link rel='stylesheet' href='/stylesheets/style.css' />

<h2>List of Celebs</h2>

<ul>
  <% celebrities.forEach((celeb) => { %>
    <li>
      <a href="/celebrities/<%= celeb.id %>">Name: <%= celeb.name %></a>
      <form style="display: inline;" action="/celebrities/<%= celeb.id %>/delete" method="POST"><input type="submit"  value="Delete"></form>
      <form style="display: inline;" action="/celebrities/<%= celeb.id %>/edit" method="GET"><input type="submit"  value="Edit"></form>
    </li>

<% }) %>

</ul>
