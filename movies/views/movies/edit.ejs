<form action="/movies/<%= movies._id %>/update" method="POST">
  <label for="title">Title</label>
  <input type="text" id="title" name="title" value="<%= movies.title %>">

  <label for="genre">Genre</label>
  <input type="text" id="genre" name="genre" value="<%= movies.genre %>">

  <label for="plot">Plot</label>
  <textarea type="text" name="plot" id="plot"> <%= movies.plot %> </textarea>

  <button type="submit">Edit Movie</button>
</form>
