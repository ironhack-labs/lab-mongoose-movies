<h2>Movies</h2>
<div>
<h3>  
  <a href="/movies/new">Add a new movie</a>
  </h3>
</div>
<% movieList.forEach((oneMovie) => { %>
 <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4><i class="fa fa-fw fa-check"></i><%= oneMovie.title %></h4>
          </div>
          <div class="col-md-12 col-sm-6">
              
                  <div class="panel-body">
                  
                      <p> Genre: <%= oneMovie.genre %></p>
                      <p>Plot: <%= oneMovie.plot %></p>
                       
                      <a href="/movies/<%= oneMovie._id %>" class="btn btn-default"><button>see details</button></a>
                      <br>
                     <a href="/movies/<%= oneMovie._id %>/edit" class="btn btn-default"><button>Edit</button></a>

                      <br>

       
                  </div>
          </div>
              <form method="post" action="/movies/<%= oneMovie._id %>/delete">
                <button>Delete</button>
              </form>

        </div>
</div>
  <% }) %>
<h3>  
  <a href="/movies/new">Add a new movie</a>
</h3>
