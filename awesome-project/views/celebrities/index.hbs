
<h2>List of celebrities</h2>

 {{#each celebrity}}    
    <ul>
        <li>
            <button><a href="/celebrities/{{id}}">{{name}}</a></button>
            <form action="/celebrities/{{id}}/delete" method="POST">
                <button type="submit">Delete</button>
            </form>
            <button><a href="/celebrities/{{id}}/edit">Edit this celebrity</a></button>
        </li>
    </ul>
   
 {{/each}}
<div>
    <a href="/celebrities/new">Add a new celebrity</a>
    <a href="/">Go back to Home</a>
   
</div>