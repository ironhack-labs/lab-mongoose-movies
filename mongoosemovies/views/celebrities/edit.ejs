<form action="/celebrities/<%= celeb._id %>" method="POST">
  <label for="name">Name</label>
  <input type="text" name="name" id="name" value="<%= celeb.name %>">

  <label for="occupation">Occupation</label>
  <input type="text" name="occupation" id="occupation" value="<%= celeb.occupation %>">

  <label for="catch-phrase">Image URL</label>
  <input type="text" name="catchPhrase" id="catch-phrase" value="<%= celeb.catchPhrase %>">

  <button type="submit">Submit</button>
</form>
