<h2>Edit '{{movieInfo.name}}'</h2>


<form action="/movies/{{movieInfo._id}}/edit" method="post">
  <label for="title">Title</label><input type="text" name="title" id="title" value="{{movieInfo.title}}">
  <label for="genre">Genre</label><input type="text" name="genre" id="genre" value="{{movieInfo.genre}}">
  <label for="plot">Plot</label><textarea type="text" name="plot" id="plot">{{movieInfo.plot}}</textarea>
  <button type="submit">Update movie</button>
</form>