<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

  </head>
  <body>

    <h1> List of Movies </h1>
    <ul>
      <li>
        <a href="/movies/new"> Create a New Movie </a>

      <% movies.forEach((movie) => { %>
        <li>
          <h2> <%= movie.title %> </h2>
            <ul>
              <li><a href="/movies/<%= movie._id %>"> Movie Details </a></li>
              <li><a href="/movies/<%= movie._id %>/edit"> Edit Movie </a></li>
            </ul>
          <form action="/movies/<%= movie._id %>/delete" method="post">
            <button type="submit"> Delete </button>
          </form>

        </li>
      <% }) %>
    </ul>

  </body>
</html>
