<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h1>Create a new movie</h1>

            <form action="/peliculas/crearPeli" method="post">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input name="title" type="text" class="form-control" id="title">
                </div>
                <div class="form-group">
                    <label for="genre">Genre</label>
                    <input name="genre" type="text" class="form-control" id="genre">
                </div>
                <div class="form-group">
                    <label for="plot">Plot</label>
                    <input name="plot" type="text" class="form-control" id="plot">
                </div>

                <button type="submit" class="btn btn-dark">Create</button>
            </form>
        </div>
    </div>

    <a class="btn btn-dark non-radius" href="/peliculas/listadoPelis">Volver</a>
</div>