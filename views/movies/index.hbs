<h2>Welcome to the movies page</h2>

<div class="row justify-content-around">

    {{#each allMovies}}
        <div class="card text-center col-md-6 col-lg-3">

            <div class="card-body">
                <h5 class="card-title"><a href="/movies/{{id}}">{{title}}</a></h5>
                <a href="/movies/{{id}}/edit" class="btn btn-info">Edit movie</a>
                <form action="movies/{{id}}/delete" method="post"><button type='submit' class='btn btn-danger'>Delete movie</button>
                </form>

            </div>

        </div>
    {{/each}}

</div>


<div class="d-flex justify-content-center">
    <a class="btn btn-add" href="/movies/new">Create a new movie</a>
</div>