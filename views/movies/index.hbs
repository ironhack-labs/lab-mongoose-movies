<section class="info-list">
    <div class="container">
        <div class="row ">
            <div class="col d-flex flex-column align-items-center">
                <h2>Movies list</h2>
                <ul>
                    {{#each allTheMovies}}
                    <div class="list-cont">
                        <li>{{title}}</li>
                        <div class="buttons-manager">
                            <a class="btn btn-primary btn-sm" href="/movies/{{id}}">See details</a>
                            <form action="/movies/{{id}}/delete" method="post">
                                <button class="btn btn-primary btn-sm" type="submit">Delete</button>
                            </form>
                            <a class="btn btn-primary btn-sm" href="/movies/{{id}}/edit">Edit</a>
                        </div>
                    </div>
                    {{/each}}
                </ul>
                <div>
                    <a class="btn btn-primary btn-lg"href="/movies/new">Create a new movie</a>
                    <a href="/" class="btn btn-primary btn-lg">Go back</a>
                </div>
            </div>
        </div>
    </div>
</section>
