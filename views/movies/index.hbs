<section class="content">
  <div class="row justify-content-center">
    <div class="col-md-6">
    
      <h2>Movies List</h2>

      <hr>
    
      <ul>
        {{#each all}}
        <li>
          {{title}}
          <small>
            [<a href="/movies/details/{{_id}}">Details</a>]
            [<a href="/movies/{{_id}}/edit">Edit</a>]
            [<a href="/movies/{{_id}}/delete">Remove</a>]
          </small>
        </li>
        {{/each}}
      </ul>
    
      <a class="btn btn-info d-block" href="/movies/create-movie">Add Movie</a>
    
    </div>
  </div>
</section>
