<div class="container">
    <h2>Movie list</h2>
    <br>
    <div class="row">
        {{#each allMovies}}
        <div class="col-md-4">
            <a href="/movies/{{this.id}}"><h3>{{this.title}}</h3></a>
            <form method="POST" action="/movies/{{this.id}}/delete"></form>
            <button type="submit" class="btn btn-dark">Delete this movie!</button>
        </div>
        {{/each}}
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <a href="/movies/new" class="btn btn-dark">Create your own movie!</a>
        </div>

    </div>
</div>
