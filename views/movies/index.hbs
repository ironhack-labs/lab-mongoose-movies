<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <h2>ALL MOVIES</h2>
            <br>
            <hr>

            {{#each allMovies}}

            <a href="/movies/{{id}}">
                <h3>{{title}}</h3>
            </a>
            <form action="/movies/{{id}}/delete" method="post">
                <button type="submit" class="btn btn-outline-dark btn-sm">Delete</button>
            </form>

            {{/each}}
            <hr>
            <br>
            <a href="/movies/new">
                Create new
            </a>

        </div>
    </div>
</div>