<div class="row justify-content-center">

        <div class="col-md-7">

            <h1>Edit Movie</h1>

            <form method="POST" action="/movies/edit-movie?id={{_id}}">

                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" name="title" value="{{title}}">
                </div>
                <div class="form-group">
                    <label>Genre</label>
                    <input type="text" class="form-control" name="genre" value="{{genre}}">
                </div>
                <div class="form-group">
                    <label>Plot</label>
                    <input type="text" class="form-control" name="plot" value="{{plot}}">
                </div>
                <button type="submit" class="btn btn-dark">Edit movie</button>
            </form>
        </div>
    </div>
</div>