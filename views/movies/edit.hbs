<h1>EDIT {{movie.name}}</h1>


<form action="/movies/update/{{movie.id}}" method="POST">
<label for="title">Title</label>
<input type="textarea" name="title" value="{{movie.title}}" id="title">

<label for="genre">Genre</label>
<input type="text" name="genre" value="{{movie.genre}}" id="genre">

<label for="plot">Plot</label>
<input type="textarea" name="plot" value="{{movie.plot}}" id="plot">

<label for="image">Image</label>
<input type="textarea" name="image" value="{{movie.image}}" id="image">


