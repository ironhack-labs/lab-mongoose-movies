<section class="formulario">
    <div class="container">
        <h2>{{title}}: Edition</h2>
        <hr>
        <form action="/movies/{{id}}" method="post">
            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" type="text" name="title" id="title" placeholder="Type a title" value="{{title}}">
                <label for="genre">Genre</label>
                <input class="form-control" type="text" name="genre" id="genre" placeholder="Type a genre" value="{{genre}}">
                <label for="plot">Plot</label>
                <textarea class="form-control" name="plot" id="plot" cols="30" rows="10" placeholder="Enter a plot!">{{plot}}</textarea>
                <div>
                    <button class="btn btn-primary btn-sm" type="submit">Finish edition!</button>
                    <a class="btn btn-primary btn-sm" href="/movies" class="btn btn-primary btn-sm">Go back</a>
                </div>
            </div>
        </form>
    </div>
</section>