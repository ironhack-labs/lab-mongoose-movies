

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h2>Update {{title}}</h2>

            <form action="/movies/{{_id}}" method="post">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input name="title" type="text" class="form-control" id="title" value="{{title}}">
                </div>
                <div class="form-group">
                    <label for="genre">Genre</label>
                    <input name="genre" type="text" class="form-control" id="genre" value="{{genre}}">
                </div>
                <div class="form-group">
                    <label for="plot">Plot</label>
                    <input name="plot" type="text" class="form-control" id="plot" value="{{plot}}">
                </div>

                <button type="submit" class="btn btn-primary">Update movie</button>
            </form>
            <a class="btn btn-dark" href="/movies/show/{{_id}}">Go back</a>
        </div>
    </div>
</div>