<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-5">

            <h2>Editar pelicula</h2>

            <form method="POST" action="/movies/edit?movie_id={{_id}}">

                <div class="form-group">
                    <label>Título</label>
                    <input type="text" class="form-control" name="title" value="{{this.title}}">
                </div>
                <div class="form-group">
                    <label>Género</label>
                    <input type="text" class="form-control" name="genre" value="{{this.genre}}">
                </div>
                <div class="form-group">
                    <label>Argumento</label>
                    <input type="text" class="form-control" name="plot" value="{{this.plot}}">
                </div>

                <button type="submit" class="btn btn-dark">Editar película</button>
            </form>
        </div>
    </div>



</div>