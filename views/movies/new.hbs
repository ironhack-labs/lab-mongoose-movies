<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h1>Add new movie</h1>

            <form method="POST" action="/movies/new">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="title">
                </div>
                <div class="form-group">
                    <label>Genre</label>
                    <input type="text" class="form-control" name="genre">
                </div>
                <div class="form-group">
                    <label>Plot</label>
                    <input type="text" class="form-control" name="plot">
                </div>

                <button type="submit" class="btn btn-dark">Add new</button>
                <a href="/movies" class="btn btn-dark">Cancel</a>
            </form>
        </div>
    </div>



</div>