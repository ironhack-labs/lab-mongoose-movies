






<div class="container">
    <div class="row justify-content-center">

        <div class="col-md-6">
            <h2>Crear una película</h2>
            <form action="/movies/new" method="post">

                <div class="form-group">
                    <label>Título</label>
                    <input name="title" type="text" class="form-control">
                </div>

                <div class="form-group">
                    <label>Género</label>
                    <input name="genre" type="text" class="form-control">
                </div>

                <div class="form-group">
                    <label>Sinopsis</label>
                    <input name="plot" type="text" class="form-control">
                </div>

                
                <button type="submit" class="btn btn-dark">Añadir película a la base de datos</button>
            </form>
        </div>
    </div>
</div>