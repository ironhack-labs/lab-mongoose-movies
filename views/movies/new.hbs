<section class="formulario">
    <div class="container">
        <h2>Create a new Movie</h2>
        <hr>
        <form action="/movies/create" method="post">
            <div class="formulario-group">
                <label for="title">Title</label>
                <input type="text" class="fromulario-control" name="title" id="title" placeholder="Type a title">
            </div>

            <div class="formulario-group">
                <label for="genre">Genre</label>
                <input type="text" class="from-control" name="genre" id="genre" placeholder="type a genre">
            </div>

            <div class="formulario-group">
                <label for="plot">Plot</label>
                <input type="text" class="fromulario-control" name="plot" id="plot" placeholder="type a plot">
            </div>

            <div>
                <button type="submit" class="btn btn-primary btn-sm">Create Movie!</button>
                <a href="/movies" class="btn btn-primary btn-sm">Go back!</a>
            </div>
        </form>
    </div>
</section>