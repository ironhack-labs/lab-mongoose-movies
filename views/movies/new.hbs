<section class="formulario">
    <div class="container">
        <h2>Create a new movie</h2>
        <hr>
        <form action="/movies" method="post">
            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" type="text" name="title" id="title" placeholder="Type a title...">
                <label for="genre">Genre</label>
                <input class="form-control" type="text" name="genre" id="genre" placeholder="Type the genre...">
                <label for="plot">Plot</label>
                <textarea class="form-control" name="plot" id="plot" cols="30" rows="10"
                    placeholder="Entera  plot"></textarea>
                <div>
                    <button type="submit">Create!</button>
                    <a href="/movies" class="btn btn-primary btn-sm">Go back</a>
                </div>
            </div>
        </form>
    </div>
</section>