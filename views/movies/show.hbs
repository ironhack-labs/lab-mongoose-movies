<h2 class="details-header">Movie Details</h2>

<h3> {{movie.title}} </h3>

<h4 class="genre"> {{movie.genre}} </h4>

<span> {{movie.plot}} </span>

<span>Stars: {{movie.celebrities}} </span>
<br>
<br>
<a href="/movies/{{movie._id}}/edit">Edit Movie Details</a>
<br>
<br>
<a href="/movies">Go Back</a>

<div>
    {{#each movie.reviews}}
        <h4>{{this.reviewer}}</h4>
        <p>{{this.content}}</p>
        <form action="/movies/{{../movie._id}}/reviews/delete/{{@index}}" method= "post">
        <button>Delete Review</button>
        </form>
        <hr>
    {{/each}}
</div>