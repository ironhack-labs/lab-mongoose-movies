<div class="edit-form">


    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>Edita la peli {{title}}</h2>

            <form action="/pelis/editar/{{_id}}" method="post">
                <div class="form-group">
                    <label>Título</label>
                    <input name="title" type="text" class="form-control" value="{{title}}">

                </div>
                <div class="form-group">
                    <label>Género</label>
                    <input name="genre" type="text" class="form-control" value="{{genre}}">

                </div>
                <div class="form-group">
                    <label>Trama</label>
                    <input name="plot" type="text" class="form-control" value="{{plot}}">

                </div>

                <button type="submit" class="btn btn-dark">Editar</button>
            </form>

        </div>
    </div>
    <br>


</div>
<a class="btn btn-dark" href="/">
    Volver
</a>