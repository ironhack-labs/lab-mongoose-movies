<h1>Editar famosa</h1>

<div class="form-edit">


    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">

            <h2>Editar a {{name}}</h2>


            <form action="/famosas/editar/{{_id}}" method="post">
                <div class="form-group">
                    <label>Nombre</label>
                    <input name="name" type="text" class="form-control" value="{{name}}">

                </div>
                <div class="form-group">
                    <label>Ocupación</label>
                    <input name="occupation" type="text" class="form-control" value="{{occupation}}">

                </div>
                <div class="form-group">
                    <label>Frase</label>
                    <input name="catchPhrase" type="text" class="form-control" value="{{catchPhrase}}">

                </div>

                <button type="submit" class="btn btn-info">Guardar edición</button>
            </form>

        </div>
    </div>


</div>

<a class="btn btn-dark" href="/">
    Volver
</a>