<form action="/celebrities/edit?celebrity_id={{celebrity._id}}" method="post">
  <label for="">Name:</label>
  <input type="text" name="name" value="{{celebrity.name}}">

  <label for="">Occupation:</label>
  <input type="text" name="occupation" value="{{celebrity.occupation}}">

  <label for="catchPhrase">Phrase:</label>
  <input type="text" name="catchPhrase" id="catchPhrase" value="{{celebrity.catchPhrase}}">

  <label for="">Imagen:</label>
  <input type="text" name="img" value="{{celebrity.img}}">

  <button type="submit">EDIT</button>
</form>
