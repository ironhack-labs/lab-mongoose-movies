<h2 class="movies-head">
  Editing <em>{{ movie.title }}</em>
</h2>

<form
  action="/movies/update/{{ movie._id }}"
  method="POST"
  style="width:500px; margin-left:100px"
>
  <div class="form-group">
    <label for="movieTitle">Title</label>
    <input
      type="text"
      class="form-control"
      id="movieTitle"
      aria-describedby="nameHelp"
      value="{{ movie.title }}"
      name="theTitle"
    />
  </div>
  <div class="form-group">
    <label for="movieDirector">Director</label>
    <select class="form-control" id="movieDirector" name="theDirector">
      {{#each directors}}
      {{#if this.chosen}}
      <option selected value="{{ this._id }}">{{ this.name }}</option>
      {{else}}
      <option value="{{ this._id }}">{{ this.name }}</option>
      {{/if}}
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="theCast">Starring:</label>
    {{#each actors}}
    <div class="form-check">
      <input type="checkbox" value="{{ this._id }}" name="theCast" />
      {{ this.name }}
      <br />
      <br />
    </div>
    {{/each}}
  </div>
  <div class="form-group">
    <label for="movieGenre">Genre</label>
    <input
      type="text"
      class="form-control"
      id="movieGenre"
      aria-describedby="genreHelp"
      value="{{ movie.genre }}"
      name="theGenre"
    />
  </div>
  <div class="form-group">
    <label for="moviePlot">Synopsis</label>
    <input
      type="text"
      class="form-control"
      id="moviePlot"
      aria-describedby="plotHelp"
      value="{{ movie.plot }}"
      name="thePlot"
      rows="3"
    />
  </div>
  <div class="form-group">
    <label for="movieImage">Poster URL</label>
    <input
      type="text"
      class="form-control"
      id="movieImage"
      aria-describedby="imageHelp"
      value="{{ movie.image }}"
      name="theImage"
    />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
