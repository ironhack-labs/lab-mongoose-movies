<h2>Create new celebrity!</h2>


<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/celebrities/create" method="post">

                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" required>
                </div>

                <div class="form-group">
                    <label for="occupation">Occupation</label>
                    <input type="text" class="form-control" name="occupation" placeholder="actor, singer, comedian..."
                        required>
                </div>

                <div class="form-group">
                    <label for="catchPhrase">Catchphrase</label>
                    <input type="text" class="form-control" name="catchPhrase" required>
                </div>

                <button type="submit" class="btn btn-outline-dark">Submit</button>
                <a href="/celebrities" class="btn btn-danger">Cancel</a>

            </form>

        </div>

    </div>

</div>