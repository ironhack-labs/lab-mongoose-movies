<div class="containter celebrity">

    <div class="row">

        <div class="col-md">

            <a href="celebrities" class="btn btn-sm btn-outline-dark">

                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor"
                    xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                        d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                </svg>

                <span>Back</span>

            </a>


        </div>

    </div>

    <div class="row justify-content-center">

        <div class="card mb-3" style="max-width: 625px;">
            <div class="row no-gutters">
                <div class="col-md-4 d-flex align-items-center">
                    <img src="{{image}}" class="card-img" alt="{{name}}">
                </div>
                <div class="col-md-8">
                    <div class="card-body">

                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{catchPhrase}}</p>
                        <p class="card-text"><small class="text-muted">{{occupation}}</small></p>
                        <a href="/celebrities/edit?celebrity_id={{id}}" class="btn btn-sm btn-outline-dark">Edit</a>
                        <a href="/celebrities/delete/{{id}}" class="btn btn-sm btn-danger">Delete</a>

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>