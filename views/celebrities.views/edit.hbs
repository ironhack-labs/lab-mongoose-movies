<h2>Edit your celebrity</h2>
<form action='/celebrities/{{_id}}' method='post'>

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name='name' value="{{name}}">
  </div>

  <div class="form-group">
    <label for="occupation">Occupation</label>
    <input type="text" class="form-control" id="occupation" name='occupation' value="{{occupation}}">
  </div>

  <div class="form-group">
    <label for="catchPhrase">Main Phrase</label>
    <input type="text" class="form-control" id="catchPhrase" name='catchPhrase' value="{{catchPhrase}}">
  </div>

  <button type="submit" class="btn btn-dark">Save changes</button>

</form>