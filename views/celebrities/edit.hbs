<div class="container">
    <div class="row justify-content-center">

        <div class="col-md-6">
            <h2>Editar celebrity  </h2>
            
            
            <form action="/celebrities/{{_id}}" method="post">

                <div class="form-group">
                    <label>Nombre</label>
                    <input name="name" type="text" class="form-control" value="{{this.name}}">
                </div>

                <div class="form-group">
                    <label>Ocupaci√≥n</label>
                    <input name="ocupation" type="text" class="form-control" value="{{this.ocupation}}">
                </div>

                <div class="form-group">
                    <label>Frase Habitual</label>
                    <input name="catchPhrase" type="text" class="form-control" value="{{this.catchPhrase}}">
                </div>

                
                <button type="submit" class="btn btn-dark">Editar Celebrity</button>
            </form>
        </div>
    </div>
</div>