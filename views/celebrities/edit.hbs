<h2>Edit the information about {{name}}</h2>


<form class="form-group form-edit" action="/celebrities/{{id}}/new" method="POST">

    <div class='form-group row form-row'>
        <label class="col-2 ">Name: </label>
        <input class="col-2 form-control" type='text' name="name" value="{{name}}">
    </div>

    <div class='form-group row form-row'>
        <label class="col-2 ">Ocupation: </label>
        <input class="col-2 form-control" type='text' name="ocupation" value="{{ocupation}}">
    </div>

    <div class='form-group row form-row'>
        <label class="col-2">Catch phrase: </label>
        <textarea class="col-9 form-control" type='text' name="catchPhrase" >{{catchPhrase}}</textarea>
    </div>

    <button class="btn btn-add" type='submit' class='btn btn-info'>Edit</button>

</form>