<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h2>Editar {{name}}</h2>

            <form action="/celebrities/{{_id}}" method="post">

                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input name="name" type="text" class="form-control" id="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="occupation">Ocupacion</label>
                    <input name="occupation" type="text" class="form-control" id="occupation" value="{{occupation}}">

                </div>
                <div class="form-group">
                    <label for="catchPhrase">Frase</label>
                    <input name="catchPhrase" type="text" class="form-control" id="catchPhrase" value="{{catchPhrase}}">
                </div>


                <button type="submit" class="btn btn-dark">Editar celebrity</button>
            </form>
        </div>
    </div>
    <a class="btn btn-dark non-radius" href="/celebrities">Volver</a>