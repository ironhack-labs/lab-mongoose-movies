

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h2>Update {{name}}</h2>

            <form action="/celebrities/{{_id}}" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" type="text" class="form-control" id="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="occupation">Occupation</label>
                    <input name="occupation" type="text" class="form-control" id="occupation" value="{{occupation}}">
                </div>
                <div class="form-group">
                    <label for="catchPhrase">Catch phrase</label>
                    <input name="catchPhrase" type="text" class="form-control" id="catchPhrase" value="{{catchPhrase}}">
                </div>

                <button type="submit" class="btn btn-primary">Update celebrity</button>
            </form>
            <a class="btn btn-dark" href="/celebrities/show/{{_id}}">Go back</a>
        </div>
    </div>
</div>