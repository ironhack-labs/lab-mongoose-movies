<form action="/celebrities/edit/{{id}}" method="POST">
    <div class="form-row justify-content-center pt-3">
        <div class="form-group col-7 m-2">
            <label class="text-secondary" for="name">Name:</label>
            <input name="name" type="text" class="form-control text-secondary" value="{{name}}">
        </div>
        <div class="form-group col-7 m-2">
            <label class="text-secondary" for="occupation">Occupation:</label>
            <input name="occupation" type="text" class="form-control text-secondary" value="{{occupation}}">
        </div>
        <div class="form-group col-7 m-2">
            <label class="text-secondary" for="catchPhrase">catchPhrase:</label>
            <input name="catchPhrase" type="text" class="form-control text-secondary" value="{{catchPhrase}}">
        </div>
        <button class="btn btn-outline-primary col-7 m-2" type="submit">Save</button>
    </div>
</form>