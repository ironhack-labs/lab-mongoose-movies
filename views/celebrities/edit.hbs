<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h1>Edit {{this.name}}</h1>

            <form method="POST" action="/celebrities/edit?celebrities_id={{_id}}">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label>Occupation</label>
                    <input type="text" class="form-control" name="occupation" value="{{occupation}}">
                </div>
                <div class="form-group">
                    <label>Catchphrase</label>
                    <input type="text" class="form-control" name="catchPhrase" value="{{catchPhrase}}">
                </div>
                <button type="submit" class="btn btn-dark">Save changes</button>

            </form>
            <a href="/celebrities">Go back</a>
        </div>
    </div>

</div>