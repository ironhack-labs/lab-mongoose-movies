<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h2 class="mb-5">Edit Celebrity </h2>

            <form class="mb-5" method="POST" action="/celebrities/edit/{{_id}}">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="{{name}}">
                </div>
                <div class=" form-group">
                    <label>Occupation</label>
                    <input type="text" class="form-control" name="occupation" value="{{occupation}}">
                </div>
                <div class=" form-group">
                    <label>Catch Phrase</label>
                    <input type="text" class="form-control" name="catchPhrase" value="{{catchPhrase}}">
                </div>

                <button type=" submit" class="btn btn-dark btn-block mt-5 ">Edit Celebrity</button>
            </form>
            <a class="mt-5 btn btn-outline-secondary" href="/celebrities">Go back</a>
        </div>
    </div>



</div>