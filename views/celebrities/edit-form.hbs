<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h1>Edit {{name}}</h1>

            <form action="/famosos/editar/{{_id}}" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" type="text" class="form-control" id="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="occupation">Occupation</label>
                    <input name="occupation" type="text" class="form-control" id="occupation" value="{{occupation}}">
                </div>
                <div class="form-group">
                    <label for="catchPhrase">Catch phrase</label>
                    <input name="catchPhrase" type="text" class="form-control" id="catchPhrase" value="{{catchPhrase}}">
                </div>

                <button type="submit" class="btn btn-dark">Edit</button>
            </form>
        </div>
    </div>


    <a class="btn btn-dark non-radius" href="/famosos/listado">Volver</a>
</div>