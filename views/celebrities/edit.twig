{% extends '../layout.twig' %}

{% block body %}
<h1>Edit Celebrity</h1>

<div class="container">
    <form action="/celebrities/{{ celebrity.id }}" method="POST">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="{{ celebrity.name }}">
        <br>
        <label for="price">Occupation</label>
        <input type="text" class="form-control" name="occupation" id="occupation" value="{{ celebrity.occupation }}">
        <br>
        <label for="catchPhrase">Catch Phrase</label>
        <input type="text" class="form-control" name="catchPhrase" id="catchPhrase" value="{{ celebrity.catchPhrase }}">
        <br>
        <button type="submit" class="btn btn-lg btn-primary">Edit Celebrity</button>
    </form>
</div>
{% endblock %}