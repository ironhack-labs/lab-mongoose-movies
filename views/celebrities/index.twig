{% extends '../layout.twig' %} 

{% block body %}
    <h2>View All Celebrities</h2>
    {% for celeb in celebrity %}
    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="true">
        {{ celeb.name }}
        <span class="caret"></span>
    </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a href="/celebrities/{{ celeb._id }}">View</a></li>
            <li role="separator" class="divider"></li>
            <li>
                <form action="/celebrities/{{ celeb._id }}/delete" method="post">
                    <button type="submit" class="btn-unstyled">Delete</button>
                </form>
            </li>
            <li role="separator" class="divider"></li>
            <li><a href="/celebrities/{{ celeb._id }}/edit">Edit</a></li>
            
        </ul>
    </div>
    {% endfor %} 
{% endblock %}