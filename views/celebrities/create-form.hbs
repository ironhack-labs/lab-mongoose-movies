<div class="container">
    <a class="btn btn-dark non-radius" href="/famosos/listado">Volver</a>
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h1>Create a new celebrity</h1>

            <form action="/famosos/crear" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" type="text" class="form-control" id="name">
                </div>
                <div class="form-group">
                    <label for="occupation">Occupation</label>
                    <input name="occupation" type="text" class="form-control" id="occupation">
                </div>
                <div class="form-group">
                    <label for="catchPhrase">Catch phrase</label>
                    <input name="catchPhrase" type="text" class="form-control" id="catchPhrase">
                </div>

                <button type="submit" class="btn btn-dark">Create</button>
            </form>
        </div>
    </div>

</div>