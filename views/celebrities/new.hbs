<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h1>Add new celebrity</h1>

            <form method="POST" action="/celebrities/new">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label>Occupation</label>
                    <input type="text" class="form-control" name="occupation">
                </div>
                <div class="form-group">
                    <label>Catch Phrase</label>
                    <input type="text" class="form-control" name="catchPhrase">
                </div>

                <button type="submit" class="btn btn-dark">Add new</button>
                <a href="/celebrities" class="btn btn-dark">Cancel</a>
            </form>
        </div>
    </div>



</div>