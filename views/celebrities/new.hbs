<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Create your own celebrity!</h2>
            <form method="POST" action="/celebrities">
            <div class="form-group">
                <label>Name: </label>
                <input type="text" class="form-control" name="name">
            </div>
            <div class="form-group">
                <label>Occupation: </label>
                <input type="text" class="form-control" name="occupation">
            </div>
            <div class="form-group">
                <label>Catch phrase: </label>
                <input type="text" class="form-control" name="catchPhrase">
            </div>
            <button type="submit" class="btn btn-info">Create celebrity!</button>
            {{#if errorMsg}}
            <div style="background: red; color: white; text-align: center; padding: 10px; margin-top: 10px;">
            {{errorMsg}}</div>
            {{/if}}
            </form>
         </div>
    </div>
</div>