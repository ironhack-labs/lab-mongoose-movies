<div class="container">

    <div class="row d-flex justify-content-center align-items-center">

        <div class="col-md-7">

            <h2 class="mb-5">Create new Celebrity </h2>

            <form class="mb-5" method="POST" action="/celebrities/new">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label>Occupation</label>
                    <input type="text" class="form-control" name="occupation">
                </div>
                <div class="form-group">
                    <label>Catch Phrase</label>
                    <input type="text" class="form-control" name="catchPhrase">
                </div>

                <button type="submit" class="btn btn-success btn-block">Create new celebrity</button>
            </form>
            <a class="mt-5 btn btn-outline-secondary" href="/celebrities">Go back</a>
        </div>
    </div>

</div>