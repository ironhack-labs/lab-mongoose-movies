<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h1>Add another celebrity</h1>

            <form method="POST" action="/celebrities/new">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label>Occupation</label>
                    <input type="text" class="form-control" name="occupation">
                </div>
                <div class="form-group">
                    <label>Catchphrase</label>
                    <input type="text" class="form-control" name="catchPhrase">
                </div>
                <button type="submit" class="btn btn-dark">Add celebrity</button>

            </form>
            <a href="/celebrities">Go back</a>
        </div>
    </div>



</div>