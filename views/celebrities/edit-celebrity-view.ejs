<a href="#" class="list-group-item active">
    <h2>Edit Celebrity Card</h2>
</a>
<br>
<div class="container">
  <form method="post" action="/<%= celebrity._id %>">
    <div class="form-group row">
      <label for="inputName" class="col-sm-2 col-form-label">Celebrity Name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputName" name="celebrityNameUpdate" value="<%= celebrity.name %>" >
      </div>
    </div>
    <div class="form-group row">
      <label for="inputOccupation" class="col-sm-2 col-form-label">Celebrity Occupation:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputOccupation" name="celebrityOccupationUpdate" value="<%= celebrity.occupation %>" >
      </div>
    </div>
    <div class="form-group row">
      <label for="inputCatchPhrase" class="col-sm-2 col-form-label">Catch Phrase:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputCatchPhrase" name="celebrityPhraseUpdate" value="<%= celebrity.catchPhrase %>" >
      </div>
    </div>   
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </div>
  </form>
</div>