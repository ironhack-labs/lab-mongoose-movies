<% include ../partials/header %>
  <h1>Add a new Celebrity to the Database</h1>
  <form action="/celebrities" method="post">
    <div class="form-group">
      <label for="celebrityName">Celebrity Name <span class="required">*</span></label>
      <input type="text" class="form-control" id="celebrityName" name="name" placeholder="Name">
    </div>
    <div class="form-group">
      <label for="occupation">Occupation</label>
      <input type="text" class="form-control" id="occupation" name="occupation" placeholder="Occupation">
    </div>
    <div class="form-group">
      <label for="catchPhrase">Catch Phrase</label>
      <input type="text" class="form-control" id="catchPhrase" name="catchPhrase" placeholder="Catch Phrase">
    </div>
    <button type="submit" class="btn btn-success">Save Celebrity</button>
  </form>

<br />
    <% if (typeof(errors) !== "undefined"){ %>
    <% for (let error in errors){ %>
      <div class="alert alert-danger" role="alert"><%= errors[error].message %></div>
    <% } %>
  <% } %>

  <% include ../partials/footer %>