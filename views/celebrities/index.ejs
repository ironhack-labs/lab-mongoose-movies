<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

  </head>
  <body>

    <h1> List of Celebrities </h1>
    <ul>
      <li>
        <a href="/celebrities/new"> Create a New Celebrity </a>

      <% celebrities.forEach((celebrity) => { %>
        <li>
          <h2> <%= celebrity.name %> </h2>
            <ul>
              <li><a href="/celebrities/<%= celebrity._id %>"> Celebrity Details </a></li>
              <li><a href="/celebrities/<%= celebrity._id %>/edit"> Edit Celebrity </a></li>
            </ul>
          <form action="/celebrities/<%= celebrity._id %>/delete" method="post">
            <button type="submit"> Delete </button>
          </form>

        </li>
      <% }) %>
    </ul>

  </body>
</html>
