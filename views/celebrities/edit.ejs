<h2>Editing a celebrity</h2>

<a href="/celebrities">Go Back!</a>

<form method="post" action="/celebrities/<%= celebrity._id %>">
  <div>
    <label for="celeb-name"> Celebrity Name: </label>
    <input type="text" name="name" value="<%= celebrity.name %>">
  </div>

  <div>
    <label for="occupation"> Occupation: </label>
    <input type="text" name="occupation" value="<%= celebrity.occupation %>">
  </div>

  <div>
    <label for="catch frase"> Catch Frase: </label>
    <input type="text" name="catchFrase" value="<%= celebrity.catchFrase %>">
  </div>

  <input type="submit" name="Edit this celebrity">
</form>
