<h2> Add a Product </h2>

<form method="post" action="/products/new">
  <div class="form-group">
  <label for="product-name-input"> Product Name </label>
  <input  id="product-name-input" type="text" name="productName" class="form-control">
  </div>
  <br>
  <div class="form-group">
  <label for="product-price-input"> Price </label>
  <input  id="product-price-input" type="number" name="productPrice" class="form-control">
  <br>
  </div>

  <div class="form-group">
  <label for="product-image-url-input"> Image Address </label>
  <input  id="product-image-url-input" type="url" name="productImageUrl" class="form-control">
  </div>
  <br>
  <div class="form-group">
  <label   for="product-description-input"> Description </label>
  <textarea id="product-description-input" name="productDescription" class="form-control"></textarea>
  <br>
</div>

  <button class="btn btn-primary"> Add Product </button>
</form>
