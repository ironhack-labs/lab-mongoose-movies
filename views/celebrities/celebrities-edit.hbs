<div class="container">
  <h2>Edit your Celebrities</h2>
  <form method="POST" action="/celebrities/{{id}}/edit">
    <div class="form-group">
      <label>Name</label>
      <input type="text" value="{{name}}" class="form-control" name="name">
    </div>
    <div class="form-group">
      <label>Occupation</label>
      <input type="text" value="{{occupation}}" class="form-control" name="occupation">
    </div>
    <div class="form-group">
      <label>Catch Phrase</label>
      <input type="text" value="{{catchPhrase}}" class="form-control" name="catchPhrase">
    </div>
    <button type="submit" class="btn btn-dark">Edit Celebrity</button>
  </form>

</div>



