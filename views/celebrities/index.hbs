<h2 class="text-center text-secondary mt-3 p-3">Celebrities</h2>
{{#each celebrities}}
<div class="row justify-content-center text-center pt-3">
    <div class="col-4 mt-3">
        <a class="text-dark" href="/celebrities/{{_id}}">{{name}}</a>
    </div>
    <div class="col-4 mt-3">
        <a class="btn btn-outline-success" href="/celebrities/edit/{{_id}}">Edit</a>
    </div>
    <div class="col-4 mt-3">
        <form action="/celebrities/{{_id}}/delete" method="POST">
            <button class="btn btn-outline-danger" type="submit">Delete</button>
        </form>
    </div>
</div>
<hr>
{{/each}}
<div class="row justify-content-center">
    <a class="btn btn-outline-primary col-3 mt-3" href="/celebrities/new">New</a>
</div>