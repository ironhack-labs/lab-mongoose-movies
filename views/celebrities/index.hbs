<div class="container">
    <h2>Celebrity list</h2>
    <br>
    <div class="row">
        {{#each allCelebs}}
        <div class="col-md-4">
            <a href="/celebrities/{{this.id}}"><h3>{{this.name}}</h3></a>
            <form method="POST" action="/celebrities/{{this.id}}/delete"></form>
            <button type="submit" class="btn btn-dark">Delete this celebrity!</button>
        </div>
        {{/each}}
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <a href="/celebrities/new" class="btn btn-dark">Create your own celebrity!</a>
        </div>

    </div>
</div>
