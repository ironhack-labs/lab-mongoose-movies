<h2 class="ml-5 mt-3">Celebrities</h2>
<a type="button" class="btn btn-outline ml-5" href="/celebrities/new">New celebrity</a>

{{#each celebrities as |celebrity|}}
<div class="card m-5 bg-light" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">{{celebrity.name}}</h5>
    <a href="/celebrities/{{celebrity.id}}" class="card-link">Details</a>
    
     <form action="/celebrities/{{celebrity.id}}/edit" method="GET">
      <button class="btn " type="submit">Edit</button>
    </form>

    <form action="/celebrities/{{celebrity.id}}/delete" method="POST">
      <button class="btn btn-danger" type="submit">Delete</button>
    </form>

  </div>
</div>
{{/each}}

