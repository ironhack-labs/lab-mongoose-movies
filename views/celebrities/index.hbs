<section class="items-list container">

    <h2>Celebrities</h2>

    <ul>

        {{#each celebrities}}

        <li class='row justify-content-center align-items-baseline'>

            <div class="col-6 col-lg-3">

                <a href="/celebrities/{{this.id}}">{{this.name}}</a>

            </div>



            <div class="col-6 col-lg-3 d-flex justify-content-end">

                <a href="celebrities/edit/{{this.id}}" class="btn btn-dark">Edit</a>

                <form action="/celebrities/delete" method="POST">

                    <input name="id" type="hidden" value={{this.id}}>

                    <button type="submit" class="btn btn-red">Delete</button>

                </form>

            </div>

        </li>


        {{/each}}

    </ul>

    <a href="/celebrities/new" class="btn btn-primary">Create new celebrity</a>

</section>