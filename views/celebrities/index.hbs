<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <h2>ALL CELEBRITIES</h2>
            <br>
            <hr>

            {{#each allCelebrities}}

            <a href="/celebrities/{{id}}">
                <h3>{{name}}</h3>
            </a>
            <form action="/celebrities/{{id}}/delete" method="post">
                <button type="submit" class="btn btn-outline-dark btn-sm">Delete</button>
            </form>

            {{/each}}
            <hr>
            <br>
            <a href="/celebrities/new">
                Create new
            </a>

        </div>
    </div>
</div>