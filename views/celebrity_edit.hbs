<form action="/celebrities/{{celebrity._id}}/edit" method="post">
  <label for="">Name:</label>
  <input type="text" name="name" value="{{celebrity.name}}">

  <label for="">Occupation:</label>
  <input type="text" name="occupation" value="{{celebrity.occupation}}">

  <label for="">Catch phrase:</label>
  <input type="text" name="catch_phrase" value="{{celebrity.catch_phrase}}">

  <button type="submit">EDIT</button>
</form>