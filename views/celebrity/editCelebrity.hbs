<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h1>Editar {{name}}</h1>

            <form method="POST" action="/celebrities/edit-celebrity?celebrity_id={{_id}}">

                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label>Ocupación</label>
                    <input type="text" class="form-control" name="ocupation" value="{{ocupation}}">
                </div>
                <div class="form-group">
                    <label>Eslogan</label>
                    <input type="text" class="form-control" name="catchPhrase" value="{{catchPhrase}}">
                </div>
                <button type="submit" class="btn btn-dark">Guardar edición</button>
            </form>
        </div>
    </div>



</div>