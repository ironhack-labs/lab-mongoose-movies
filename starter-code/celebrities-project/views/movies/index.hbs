<h1>Movies</h1>
<a href="movies/new">Add new one</a>

{{#each movies}} 
  <div class="item">
    <ul>
      <li><b>Title: </b>{{title}}</li>
      <li>
        <a href="movies/{{_id}}">More info</a>
        <a href="movies/{{_id}}/edit">Edit</a>
      </li>
      <form action="movies/delete/{{_id}}" method="POST">
        <input type="submit" value="delete">
      </form>
    </ul>
  </div>
{{/each }} 