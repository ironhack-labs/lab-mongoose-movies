<h2>Edit the Celebrity</h2>
{{#with celebrity_detail}}
<form action="/celebrities/{{_id}}/edit" method="post">
  <label for="name">Name</label>
  <input type="text" name="name" value="{{name}}">

  <label for="occupation">Occupation</label>
  <input type="text" name="occupation" value="{{occupation}}">

  <label for="catchPhrase">CatchPhrase</label>
  <input type="text" name="catchPhrase" value="{{catchPhrase}}">

  <button class="btn btn-info" type="submit">Save changes</button>
  <a class="btn btn-default" href="/celebrities/{{_id}} ">Back</a>
</form>
{{/with}}