<h2>Movies</h2>
{{#each movies}}
<form action="/movies/{{_id}}/delete" method="POST">
  <p>{{title}}
    <a class="btn btn-default" href="/movies/{{_id}}">Show details</a>
    <button class="btn btn-danger" type="submit">Delete</button>
  </p>
</form>
{{/each}}
<a class="btn btn-success" href="/movies/new">Add Movie</a>
<a class="btn btn-default" href="/">Back</a>