<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="title">
        <h2>Create a new Movie</h2>
      </div>
    </div>
  </div>
  <form action="/movie/new" method="post">
  <div class="row">
    <div class="col-sm-6">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title">
    </div>
    <div class="col-sm-6">
      <label for="genre">Genre:</label>
      <input type="text" id="genre" name="genre">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <label for="plot">Plot:</label>
      <input type="text" id="plot" name="plot">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="large button">
        <button type="submit">Add Movie</button>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="large button">
        <a href="/movie">Back</a>
      </div>
    </div>
  </div>
  </form>
</div>
