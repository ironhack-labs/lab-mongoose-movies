<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="title">
                <h2>My Favourite Characters</h2>
            </div>
        </div>
    </div>
    <div>
        <ul>
            {{#each celebrities}}
            <li class="row element">
                <div class="col-sm-6 title-name">
                    <a href="/celebrity/{{this._id}}">{{ this.name }}</a>
                </div>
                <div class="col-sm-6">
                    <div class="small button">
                        <a href="/celebrity/{{this._id}}/edit">Edit this Character</a>
                    </div>
                    <div class="small button">
                        <a href="/celebrity/{{this._id}}/delete" onclick="return confirm('Delete {{this.name}} from BD?')">Delete this Character</a>
                    </div>
                </div>
            </li>
            {{else}}
                <p class="empty">No content</p>
            {{/each}}
        </ul>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="large button">
                <a href="/celebrity/new">Add new Character</a>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="large button">
                <a href="/">Go back to HOME</a>
            </div>
        </div>
    </div>
</div>