<h2>Edit Movies</h2>

<form action="/movies/<%= movie._id %>" method="POST">
  <label for="title">Title</label>
  <input id="title" name="title" value="<%= movie.title %>" type="text">

  <label for="genre">Genre</label>
  <input id="genre" name="genre" value="<%= movie.genre %>" type="text">

  <label for="plot">Plot</label>
  <input id="plot" name="plot" value="<%= movie.plot %>" type="text">

  <button type="submit">Edit Movie</button>
</form>