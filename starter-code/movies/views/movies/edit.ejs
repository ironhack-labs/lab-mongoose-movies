<h2>Edit: <%= movie.title %></h2>
<form action="/movies/<%= movie._id %>" method="POST">
  <label for="title">Title:</label>
  <input value="<%= movie.title %>" type="text" id="title" name="title">

  <label for="genre">Genre:</label>
  <input value="<%=movie.genre %>" type="text" id="genre" name="genre">

  
  <label for="plot">Plot:</label>
  <textarea id="plot" name="plot" type="text"><%=movie.plot %></textarea>
  
  <button type="submit">Edit</button>
</form>
<br>
<% if (typeof(errors) !== "undefined"){ %>
  <% for (let error in errors){ %>
    <li><%= errors[error].message %></li>
  <% } %>
<% } %>
<br>
<a href="/movies">Back to Movies</a>