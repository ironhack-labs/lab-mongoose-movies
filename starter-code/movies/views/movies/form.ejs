<% if (movie.isNew) { %>
  <form action="/movies" method="post" class="form-group">
  <h2>Create a movie</h2>
<% } else { %>
  <h2>Update a movie</h2>
  <form action="/movies/<%= movie.id %>" method="post" class="form-group">
<% } %>
    Name:
    <input type="text" name="title" value="<%= movie.title %>" class="form-control"> 
     Ocuupation:
     <input type="text" name="genre" value="<%= movie.genre %>" class="form-control"> 
     Catch Phrase:
     <input type="text" name="plot" value="<%= movie.plot %>" class="form-control">
     <input type="submit" value="Continue" class="btn btn-primary">
  </form>