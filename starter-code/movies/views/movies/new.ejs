<h2>Insert the following values</h2>

<% if(movie.isNew) { %>
  <form action="/movies" method="POST">
<% } else { %>

<form action="/movies/<%= movie._id %>" method="POST">
<% }%>


<label for="title">Title</label>
<input type="text" id="title" name="title" value="<%= movie.title %>">

<label for="genre">Genre</label>
<input type="text" name="genre" id="genre" value="<%= movie.genre %>">

<label for="plot">Plot</label>
<input type="text" name="plot" id="plot" value="<%= movie.plot %>">



<button type="submit">Save</button>
</form>

<% if(movie.errors) { %>
  <% for (let error in movie.errors){ %>
      <p class="error"><%= movie.errors[error].message %></p>
  <% } %>
<% } %>
