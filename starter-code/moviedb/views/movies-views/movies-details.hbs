<div class="container">

  <h3>{{movie.title}}</h1>
    <p>Genre: {{movie.genre}}</p>
    <span>Plot: {{movie.plot}}</span>

    <button class="open-button" onclick="openForm()">Editar</button>

    <div class="form-popup" id="myForm">
      <form method="POST" class="form-container">

        <h2>Edici√≥n</h2>

        <label for="title">Title</label>
        <input type="text" placeholder="Title" name="title">

        <label for="genre">Genre</label>
        <input type="text" placeholder="genre" name="genre">

        <label for="plot">Plot</label>
        <input type="text" placeholder="plot" name="plot">

        <button type="submit" class="btn">OK</button>

        <a href="/movies/{{movie._id}}/delete" class="btn">Delete</a>
        <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
      </form>
    </div>
    {{#if errorMessage}}
    <div class="error-message">{{ errorMessage }}</div>
    {{/if}}
    <div>
      <a href="/movies" class="btn">Back</a>
    </div>
</div>

<script src="/public/javascripts/script.js"></script>