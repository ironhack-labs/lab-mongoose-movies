<form action="/show/<%= celebrities._id %>/edit" method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="<%= celebrities.name %>">

    <label for="price">Occupation</label>
    <input type="text" name="occupation" id="occupation" value="<%= celebrities.occupation %>">

    <label for="image-url">CatchPhrase</label>
    <input type="text" name="catchPhrase" id="catchPhrase" value="<%= celebrities.catchPhrase %>">

    <button type="submit">Update Celebrity</button>
</form>