<h2>{{title2}}</h2>
<p>Welcome to {{title2}}</p>

{{#if pelis}}
<ul>
  {{#each pelis as |m|}}
  <li><a href="/m/{{m._id}}">{{m.title}}</a></li>
  <form action="/m/{{m.id}}/delete" method="POST">
    <button type="submit">Delete movie</button>
  </form>
  {{/each}}
</ul>
{{else}}
<p>No hay celebridades</p>
{{/if}}

<form action="/m/add">
  <button type="submit">Add new Movies</button>
</form>
<br>
<form action="/">
  <button type="submit">Return celebrities</button>
</form>