<form action="/movies/edit/{{movie._id}}" method="post"> {{!--This route corresponds to the Post route in the movies.js our route file --}}
  <label for="title-input">Title</label>{{!-- IT will connect the forms body to the route and process to mongoDB--}}
  <input type="text" name="editTitle" id="title-input" value="{{movie.title}}" />

  <label for="genre-input">Genre</label>
  <input type="text" name="editGenre" id="genre-input" value="{{movie.genre}}"/>

  <form action="/movies/create" method="post">
    <label>Danny Devito</label>
    <input type="checkbox", name='devito'/>
    <label>Steve Carell</label>
    <input type="checkbox", name='carell)'/>
  </form>

  <label for="plot-input">Plot</label>
  <input type="text" name="editPlot" id="plot-input" value="{{movie.plot}}"/>

  <button type="submit">Save Changes!</button>
</form>

{{!--the value attribute is to prefil the form when the user comes into the app page.--}}
