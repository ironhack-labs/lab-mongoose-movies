<h2>WAKKA WAKKA</h2>

{{#each listOfMovies}}

<div>
  <h3>Title:
  <a href="/movies/{{this.id}}">
   {{this.title}}
  </a>
  </h3>

  <h5>Genre: {{this.genre}}</h5>
  <img src="{{this.imgPath}}" alt="">

  
</div>

<form action="/movies/delete/{{this.id}}" method="POST">
  <button>Delete This Movie</button>
</form>

<hr>
{{/each}}

<a href="/movies/new"><button>Make new Movie</button></a>