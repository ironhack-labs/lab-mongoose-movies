<h1>EDIT MOVIE PAGE</h1>

<form action="/movies/{{theMovie._id}}/update" method="post">

<label>Title:</label>
<input type="text" name="title" value="{{theMovie.title}}">
<br>

<p><label>Genre:</label>
<input type="text" name="genre" value="{{theMovie.genre}}">
<br>

<p><label>Plot:</label>
<input type="text" name="plot" value="{{theMovie.plot}}">
<br>

<p><label>Celebrities:</label>
<select multiple name="celebrities" required="true">
{{#each allCelebs}}
    {{!-- {{#if this._id === theBook._id}} --}}
    <option value="{{this._id}}">{{this.name}}</option>
{{/each}}
</select>
<br>

<p><label>Poster URL:</label>
<input type="text" name="poster" value="{{theMovie.poster}}">
<br>

<p></p><button type="submit">Update Movie</button>


</form>

<p><a href="/movies">Back to Movies</a></p>