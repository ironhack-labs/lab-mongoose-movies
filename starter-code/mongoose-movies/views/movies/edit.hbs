<h1>Edit {{Movie.name}}</h1>



<form action="/movies/update/{{Movie.id}}" method="POST" enctype="multipart/form-data">

  <label for="">title</label>
  <input type="text" name="movieTitle" value="{{Movie.title}}">

  <label for="">genre</label>
  <input type="text" name="movieGenre" value="{{Movie.genre}}">

  <label for="">plot</label>
  <input type="text" name="moviePlot" value="{{Movie.plot}}">

  <label for="">Poster</label>
  <input type="file" name="photo">

  <label for="">Star</label>
  <select name="movieStar">
    {{#each celebs}}
    <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>


  <button>Submit</button>



</form>