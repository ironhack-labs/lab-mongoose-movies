<h2>Edit Movie</h2>
<nav>
  <a href="/movies">Back</a>
</nav>
<form action="/movies/{{_id}}" method="POST">
  <label for="title">Title:</label><input type="text" name="title" id="title" required value="{{title}}">
  <label for="genre">Genre:</label><input type="text" name="genre" id="genre" required value="{{genre}}">
  <label for="plot">Plot:</label><input type="text" name="plot" id="plot" value="{{plot}}">
  <button type="submit">Save</button>
</form>