<form action="/celebrities/{{_id}}" method="POST">
  <label for="name">Name:</label><input type="text" name="name" id="name" required value="{{name}}">
  <label for="occupation">Occupation:</label><input type="text" name="occupation" id="occupation" required value="{{occupation}}">
  <label for="catchPhrase">CatchPhrase:</label><input type="text" name="catchPhrase" id="catchPhrase" value="{{catchPhrase}}">
  <button type="submit">Save</button>
</form>