<h2>Update Celebrity</h2>
<a href="/celebrities">Back</a>
<form action="/celebrities/<%= celebrity.id %>" method="POST">
   <label for="name">Name</label>
   <input type="text" id="name" name="name" value="<%= celebrity.name %>">
   
   <label for="occupation">Occupation</label>
   <input type="text" name="occupation" id="occupation" value="<%= celebrity.occupation %>" >

   <label for="catchPhrase">Catch Phrase</label>
   <textarea type="text" name="catchPhrase" id="catchPhrase"><%= celebrity.catchPhrase %></textarea>

   <button type="submit">Update</button>
</form>