<h2> Edit <%= celebInfo.name %> </h2>

<form action="/celebrities/<%=id%>" method="post">

  <label for="celebName"> Name </label>
  <input  id="celebName" type="text" name="name"
   value="<%=celebInfo.name%>">
  <br>

  <label for="celebOccupation"> Occupation </label>
  <input  id="celebOccupation" type="text" name="occupation"
   value="<%=celebInfo.occupation%>">
  <br>

  <label   for="celebPhrase"> Catch Phrase </label>
  <textarea id="celebPhrase" name="phrase"> <%=celebInfo.catchPhrase%></textarea
   value="<%=celebInfo.catchPhrase%>">
  <br>

  <button> Update </button>

</form>
