<h2>WAKKA WAKKA</h2>

{{#each listOfCelebs}}

<div>
  <h3>Name:
  <a href="/celebrities/{{this.id}}">
   {{this.name}}
  </a>
  </h3>

  <h5>Occupation: {{this.occupation}}</h5>

  <p>Catchphrase: {{this.catchphrase}}</p>
  
</div>

<form action="/celebrities/delete/{{this.id}}" method="POST">
  <button>Delete This Celeb</button>
</form>

<hr>
{{/each}}

<a href="/celebrities/new"><button>Make new Celeb</button></a>
