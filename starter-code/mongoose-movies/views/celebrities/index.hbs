<h2>Celebrities</h2>
<nav>
  <a href="/">Back</a> - <a href="/celebrities/new">new</a>
</nav>
<ul>
  {{#each celebrities}}
  <li>
    <a href="/celebrities/{{_id}}">{{name}}</a>
    <form onsubmit="return confirm('Are you sure delete \'{{name}}\'?');" action="/celebrities/{{_id}}/delete" method="POST">
      <button type="submit">Delete</button></form>
    <form action="/celebrities/{{_id}}/edit">
      <button type="submit">Edit</button>
    </form>
  </li>
  {{/each}}
</ul>
