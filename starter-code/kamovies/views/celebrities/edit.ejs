
<form action="/celebrities/<%= celebrity._id %>/edit" method="post">
  <label for="name">Name</label>
  <input type="text" id="name" name="name" value="<%= celebrity.name %>">
  
  <label for="occupation">Occupation</label>
  <input type="text" name="occupation" id="occupation" value="<%= celebrity.occupation %>">
  
  <label for="phrase">Catch Phrase</label>
  <input type="text" name="phrase" id="phrase" value="<%= celebrity.catchPhrase %>">
  
  <button type="submit">Update celebrity</button>
</form>