<h2>Edit movie:</h2>
<form action="/movies/{{movie.id}}" method="post">
  <label for="title">Title: </label>
  <input type="text" name="title" id="title" value="{{movie.title}}"> <br>
  <label for="genre">Genre: </label>
  <input type="text" name="genre" id="genre" value="{{movie.genre}}"> <br>
  <label for="plot">Plot: </label>
  <input type="text" name="plot" id="plot" value="{{movie.plot}}"> <br>
  
  <ul>
    {{#each celebrities}}
    <li>
      <input type="checkbox" name="cast" id="{{this.id}}" value="{{this.id}}" {{castCheckbox this.id ../movie.id}} >
      <label for="{{this.id}}">{{this.name}}</label>
    </li>
    {{/each}}
  </ul>
  <button type="submit">Update</button>
</form>
{{#if error}}
  <br>
  <p>All fields are required!</p>
{{/if}}