<h2>List of Movies</h2>

{{#each movies}}
<div style="display:flex;padding:10px;">
  <a href="/movies/detail/{{this.id}}">{{this.title}}</a>
  <form action="/movies/{{this.id}}/delete" method="POST">
    <input type="submit" value="Remove">
  </form>
</div>
{{/each}}

<a href="/movies/new"><button>Add New Movie</button></a>
<a href="/"><button>Go back home</button></a>