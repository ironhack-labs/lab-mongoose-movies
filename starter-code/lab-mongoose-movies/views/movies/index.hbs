
<h2>Movies</h2>
<ul>
{{#each movies}}
  <h3>{{title}}</h3>
  <a href="/movies/{{_id}}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">View details</a>
  <form action="/movies/{{_id}}/delete" method="POST">
    <button type="submit">DELETE</button>
  </form>

{{/each}}
</ul>
<a href="/movies/new" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add new movie</a>