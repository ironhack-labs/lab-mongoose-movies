<link rel="stylesheet" href="/stylesheets/style.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy"
    crossorigin="anonymous">
<div class="editMovie">
  {{!-- {{#each theID}} --}}
      <form action="/movies/update/{{theID._id}}" method="POST">

      <label for="">Title</label>
      <input type="text" name="updatedTitle" value="{{theID.title}}"> 
      <label for="">Genre</label>
      <input type="text" name="updatedGenre" value="{{theID.genre}}"> 
      <label for="">Plot</label>
      <input type="text" name="updatedPlot" value="{{theID.plot}}">

      <label for="">Starring</label>
      <select name="updatedCelebrities" multiple>
        {{#each theCelebs}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}

      </select>
      <button class="btn btn-secondary">Submit Changes</button>
      </form>





  {{!-- {{/each}} --}}
 

</div>