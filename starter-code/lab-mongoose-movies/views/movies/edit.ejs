<h2>Edit movie</h2>
<form action="http://localhost:3000/movies/<%=data._id%>" method="post">
  <label for="title">Title</label>
  <input type="text" name="title" value="<%=data.title%>">

  <label for="genre">Genre</label>
  <input type="text" name="genre" value="<%=data.genre%>">

  <label for="plot">Plot</label>
  <input type="text" name="plot" value="<%=data.plot%>">

  <button type="submit" name="button">Edit movie</button>
</form>
