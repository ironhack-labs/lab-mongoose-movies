<h2>Celebrities</h2>
<ul>
{{#each celebrities}}
  <h3>{{name}}</h3>
  <a href="/celebrities/{{_id}}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">View details</a>
  <form action="/celebrities/{{_id}}/delete" method="POST">
    <button type="submit">DELETE</button>
  </form>

{{/each}}
</ul>
<a href="/celebrities/new" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add new celebrity</a>