    <label for="formGroupExampleInput">Name</label>
    <input type="text" class="form-control" name="name" id="formGroupExampleInput" value="{{this.name}}">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Occupation</label>
    <input type="text" class="form-control" name="occupation" id="formGroupExampleInput2" value="{{this.occupation}}">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput">Catchphrase</label>
    <input type="text" class="form-control" name="catchphrase" id="formGroupExampleInput" value="{{this.catchphrase}}">
  </div>
  <button type="submit" class="btn btn-success">edit</button>
</form>