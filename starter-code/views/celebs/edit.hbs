<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-6">

      <h2>Edit the celebrity:</h2>

      <form method="POST" action="/celebrities/{{editCeleb.id}}">

        <div class="form-group">
          <label>Name:</label>
          <input type="text" class="form-control" name="name" value="{{editCeleb.name}}">
        </div>

        <div class="form-group">
          <label>Occupation</label>
          <input type="text" class="form-control" name="occupation" value="{{editCeleb.occupation}}">
        </div>

        <div class="form-group">
          <label>Catchphrase:</label>
          <input type="text" class="form-control" name="catchphrase" value="{{editCeleb.catchphrase}}">
        </div>

        <button type="submit" class="btn btn-info">Save edited celeb!</button>

        {{#if errorMsg}}
        <div style="background: brown; color: white; text-align: center; padding: 10px; margin-top:20px">
          {{errorMsg}}</div>
        {{/if}}

      </form>

    </div>

  </div>

</div>