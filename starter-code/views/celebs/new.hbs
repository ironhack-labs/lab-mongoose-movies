<section class="container new">

    <div class="row justify-content-center">

        <div class="col-md-5">

            <h1>Add a new celebrity</h1>

            <form method="POST" action="/celebrities">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name">
                </div>

                <div class="form-group">
                    <label>Occupation</label>
                    <input type="text" class="form-control" name="occupation">
                </div>

                <div class="form-group">
                    <label>Best phrase</label>
                    <input type="text" class="form-control" name="catchPhrase">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Add NOW!</button>

                {{#if errorMsg}}
                <div style="background: red; color: white; text-align: center; padding: 10px; margin-top:10px">
                    {{errorMsg}}</div>
                {{/if}}

            </form>
        </div>
    </div>



</section>