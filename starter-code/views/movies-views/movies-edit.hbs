
<form action="/movies/{{this._id}}" method="post">

  <div>
    <label for="title">Movie Title</label>
    <input type="text" name="title" id="title" placeholder="New movie title" value="{{this.title}}">
  </div>

  <div>
    <label for="genre">Movie genre</label>
    <input type="text" name="genre" id="genre" placeholder="New movie genre" value="{{genre}}">
  </div>

  <div>
    <label for="plot">Movie Plot</label>
    <input type="text" name="plot" id="plot" placeholder="New movie plot" value="{{this.plot}}">
  </div>

    <button type="submit">Edit</button>
</form>