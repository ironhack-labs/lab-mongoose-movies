{{!-- book-create.hbs --}}

<h2>Create a own celebrity</h2>

<form action="/celebrities/new" method="post">

  <label for="name-input">Name:</label>
  <input type="text" name="name"/>
  <br>
  <label for="occupation-input">Occupation:</label>
  <input type="text" name="occupation"/>
  <br>
  <label for="catchPhrase-input">Famous Phrase:</label>
  <input type="text" name="catchPhrase"/>
  <br>
  <label for="imagePhrase-input">Image:</label>
  <input type="text" name="imagePhrase"/>
  <br>
  <button type="submit">Create</button>

</form>
