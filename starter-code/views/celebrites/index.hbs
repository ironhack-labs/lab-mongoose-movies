<h2>List of celebrities</h2>

<ul>

    {{#each allCelebrities}}

    <li class="list-group-item">

        <a href='/celebrities/{{this._id}}'>{{this.name}}</a>
        <br>
        <form action='/celebrities/{{this._id}}/delete' method='post'>
            <button type="submit">Delete</button>
        </form>
        <br>
        <a href='/celebrities/{{this._id}}/edit'><button type="button">Edit</button></a>

    </li>

    {{/each }}

</ul>
<br>
<a href='/celebrities/new'><button type="button">Create a new celebrity!</button></a>