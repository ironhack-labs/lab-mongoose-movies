<h1>Edit {{name}}</h1>
<form action="/celebrities/{{id}}/update" method="post">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="input" class="form-control" name="name" id="name" value="{{name}}">
  </div>
  <div class="form-group">
    <label for="occupation">Occupation</label>
    <input type="input" class="form-control" name="occupation" id="occupation" value="{{occupation}}">
  </div>
  <div class="form-group">
    <label for="cacthPrase">Catch phrase</label>
    <input type="input" class="form-control" name="catchPhrase" id="catchPhrase" value="{{catchPhrase}}">
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>