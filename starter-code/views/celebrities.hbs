<div class="container">
  <h1> These are your favourite celebrities: </h1>

  <ul class="list">
    {{#each allTheCelebrities}}
    <li>{{this.name}}</li>
    <a href="/celebrities/{{_id}}" class="btn btn-dark">See details</a>
    <form action="/celebrities/{{_id}}/delete" method="post">
      <button type="submit" class="btn btn-danger">Delete this celeb</button>
    </form>
    </li>
    {{/each}}
  </ul>
  <a href="/" class="btn btn-dark">Home</a>

</div>