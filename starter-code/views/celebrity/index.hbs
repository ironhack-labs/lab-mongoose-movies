<h2>Celebrities:</h2>

{{#each celebrity}}
<a href="/celebrity/{{this.id}}"><p>{{this.name}}</p></a>
<form action="/celebrity/{{this._id}}/delete" method="POST">
<button type="submit">Delete</button>
</form>

<form action="/celebrity/edit/{{_id}}" >
<button type="submit">Edit</button>
</form>

{{/each}}

<a href="/newCeleb"><p>Add one</p></a>
