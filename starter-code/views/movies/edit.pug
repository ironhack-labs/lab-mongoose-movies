extends ../layout

block content

  h2 Edit Movie

  .form-container
    form(action=`/movies/${movie._id}` method="post")
    
      .form-element
        label(for="title") Title
        input(type="text" id="title" name="title" value=`${movie.title}`)

      .form-element
        label(for="genre") Genre
        input(type="text" id="genre" name="genre" value=`${movie.genre}`)

      .form-element
        label(for="plot") Plot
        input(type="text" id="plot" name="plot" value=`${movie.plot}`)

      if error 
        p #{error}
      button(type="submit") Edit #{movie.title}