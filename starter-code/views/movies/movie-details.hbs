<h2>Movie Details</h2>
<div>
    <h3>{{movie.title}}</h3>
    <h4>{{movie.genre}}</h4>
    <p>{{movie.plot}}</p>
    <ul>
        {{#each movie.cast}}
        <li>
            {{this.name}}
        </li>
        {{/each}}
    </ul>
    <form action="/movies/{{movie._id}}/delete" method="POST">
        <button type="submit">Delete</button>
    </form>
</div>