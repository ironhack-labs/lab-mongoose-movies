<h2>Details about the movie</h2>
<h3>{{movie.title}}</h3>
<p>{{movie.genre}}</p>
<p>{{movie.plot}}</p>
<ul>
  {{#each movie.cast}}
  <li>{{this.name}}</li>
  {{/each}}
</ul>
<form action="/celebrities/{{movie._id}}/edit">
  <button>Edit cast</button>
</form>
<form action="/movies/{{movie._id}}/delete" method="post">
  <button>Delete</button>
</form>