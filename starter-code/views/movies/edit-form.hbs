<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">

    <h2>Edit movie</h2>

    <form action="/movies/edit/{{_id}} " method="POST">

        <div class="form-group"> Title: <input name="title" type="text" value="{{title}}"> </div>
        <div class="form-group"> Genre: <input name="genre" type="text" value="{{genre}}"> </div>
        <div class="form-group"> Plot: <input name="plot" type="text" value="{{plot}}"> </div>

        <input type="button" class="btn btn-info" type="submit" value="Edit">

    </form>
    <a type="button" class="btn btn-info" href="/">Back Home</a>
</div>