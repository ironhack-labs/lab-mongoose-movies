<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h1>Editar Películas</h1>

            <form action="/movies/editarPelicula/{{_id}}" method="post">
                <div class="form-group">
                    <label for="title">Título</label>
                    <input name="title" type="text" class="form-control" id="title" value="{{title}}">
                </div>
                <div class="form-group">
                    <label for="genre">Género</label>
                    <input name="genre" type="text" class="form-control" id="genre" value="{{genre}}">
                </div>
                <div class="form-group">
                    <label for="plot">Descripción</label>
                    <input name="plot" type="text" class="form-control" id="plot" value="{{plot}}">
                </div>

                <button type="submit" class="btn btn-dark">Editar Película</button>
            </form>
        </div>
    </div>