<div class="container">

  <h1>Edit the Movie {{title}}</h1>

  <div class="row justify-content-center">

    <div class="col-md-8">
      <form action="/movies/edit?movieId={{_id}}" method="POST">
        <div class="form-group">
          <label for="field1">Edit Movie title</label>
          <input type="text" class="form-control" id="field1" name="title" value="{{title}}">
        </div>
        <div class="form-group">
          <label for="field2">Edit Movie genre</label>
          <input type="text" class="form-control" id="field2" name="genre" value="{{genre}}">
        </div>
        <div class="form-group">
          <label for="field2">Edit Movie plot</label>
          <input type="text" class="form-control" id="field2" name="plot" value="{{plot}}">
        </div>

        <button type=" submit" class="btn btn-dark">Save Changes</button>

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
      </form>
      (<a href="/">Back to index</a>)
    </div>
  </div>
</div>