<div class="container">

  <h1>Add new Movie</h1>

  <div class="row justify-content-center">

    <div class="col-md-8">

      <form action="/movies/newMovie" method="POST">
        <div class="form-group">
          <label for="field1">Add Movie Title</label>
          <input type="text" class="form-control" id="field1" name="title">
        </div>
        <div class="form-group">
          <label for="field2">Add Movie Genre</label>
          <input type="text" class="form-control" id="field2" name="genre">
        </div>
        <div class="form-group">
          <label for="field2">Add Movie Plot</label>
          <input type="text" class="form-control" id="field2" name="plot">
        </div>
        <button type="submit" class="btn btn-dark">Add Movie to DataBase</button>

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
      </form>
      (<a href="/">Back to index</a>)
    </div>
  </div>
</div>