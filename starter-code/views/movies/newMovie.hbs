<div class="container">

  <h1>Crear nueva movie</h1>

  <div class="row justify-content-center">

    <div class="col-md-8">

      <form action="/movies/add" method="POST">
        <div class="form-group">
          <label for="field1">Título</label>
          <input type="text" class="form-control" id="field1" name="title">
        </div>
        <div class="form-group">
          <label for="field2">Género</label>
          <input type="text" class="form-control" id="field2" name="genre">
        </div>
        <div class="form-group">
          <label for="field3">Trama</label>
          <input type="text" class="form-control" id="field3" name="plot">
        </div>

        <button type="submit" class="btn btn-primary">Añadir movie</button>
      </form>

    </div>
  </div>
</div>