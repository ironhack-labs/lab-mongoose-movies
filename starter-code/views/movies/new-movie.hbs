<h2>Please add a new movie</h2>

<div>
    <form action="/movies/create" method="post">
        <label for="title-input">Title</label>
        <input id="title-input" type="text" name="title" placeholder="Type a movie title...">
        <br>
        <label for="genre-input">Genre</label>
        <input id="genre-input" type="text" name="genre">
        <br>
        <label for="plot-input">Plot</label>
        <input id="plot-input" type="text" name="plot">
        <br>
        <label for="cast-input">Cast</label>
        <select name="cast" id="cast-input">
            {{#each allCelebrities}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>
        <br>
        <button type="submit">Add!</button>
    </form>
</div>