<h2>Add a new movie!</h2>
<form action="/movies/create" method="post">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" value="Test movie">
  <label for="genre">Genre</label>
  <input type="text" name="genre" id="genre" value="teen movie">
  <label for="plot">Plot</label>
  <input type="text" name="plot" id="plot" value="A guy falls in love with another guy...">
  <label for="cast">Cast</label>
  <select name="cast" id="cast" multiple>
    {{#each celebrities}}
    <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <button type="submit">Create</button>
</form>