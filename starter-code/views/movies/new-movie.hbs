<form action="/movies/create" method="post">
<label for="title">Title</label>
<input type="text" name="title" id="title" value="The best movie">
<label for="genre">Genre</label>
<input type="text" name="genre" id="genre" value="Action">
<label for="plot">Plot</label>
<input type="text" name="plot" id="plot" value="A movie bout a good guy who struggles but ends up winning">
<select name="cast" id="cast" multiple>
  {{#each celeb}}
    <option value="{{this._id}}">{{this.name}}</option>
  {{/each}}
</select>
<button>Create !</button>
</form> 