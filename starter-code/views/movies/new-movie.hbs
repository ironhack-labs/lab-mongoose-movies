<div class="d-flex justify-content-center m-3">
  <h1 class="text-secondary">Register new Movie</h1>
</div>


<div class="container card mt-4 pt-3 bg-secondary">
  <form method="post" action="/movies/new">
    <div class="mb-3">
      <label class="form-label text-white">Movie title</label>
      <input class="form-control" name="title" placeholder="Insert Movie Title">
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Movie Genre</label>
      <input class="form-control" name="genre" placeholder="Insert Movie Genre">
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Movie Plot</label>
      <input class="form-control" name="plot" placeholder="Insert Movie Plot">
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-light m-3">Register New Movie</button>
    </div>
  </form>
</div>