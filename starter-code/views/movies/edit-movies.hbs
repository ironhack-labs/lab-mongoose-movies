<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h2>Edita {{title}}</h2>

            <form method="POST" action="/movies/edit?movie_id={{id}}">

                <div class="form-group">
                    <label>Título</label>
                    <input type="text" class="form-control" name="title" value="{{title}}">
                </div>
                <div class="form-group">
                    <label>Género</label>
                    <input type="text" class="form-control" name="genre" value="{{genre}}">
                    <small class="form-text text-muted">Separa los géneros por comas. Ej.: drama, comedia, acción...</small>
                </div>
                <div class="form-group">
                    <label>Argumento</label>
                    <input type="text" class="form-control" name="plot" value="{{plot}}">
                </div>

                <button type="submit" class="btn btn-dark">Editar peli</button>
            </form>
        </div>
    </div>

</div>