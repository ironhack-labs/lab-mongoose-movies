<div class="row justify-content-center">
    <div class="col-6">
        <form action="/movies/new" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" class="form-control" id="title"
                    placeholder="write the title of the new movie">
            </div>
            <div class="form-group">
                <label for="genre">Genre</label>
                <input type="text" name="genre" class="form-control" id="genre"
                    placeholder="write the genre of the new movie">
            </div>
            <div class="form-group">
                <label for="cast">Cast</label>
                <input type="text" name="cast" class="form-control" id="cast"
                    placeholder="what celebrities appear in the movie?">
            </div>
            <div class="form-group">
                <label for="plot">Plot</label>
                <input type="text" name="plot" class="form-control" id="plot"
                    placeholder="write the plot of the new movie">
            </div>
            <hr>
            <button type="submit" class="btn btn-primary">Add movie</button>
            <span class="ml-2 mr-3">or</span><a class="back" href="/movies">Back to my Movies</a>
        </form>
    </div>
</div>