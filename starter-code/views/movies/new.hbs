<div class="container">

  <h2>Add your favourite movie!</h2>

  <form method="POST" action="/movies/new">

    <div class="form-group">
      <label>Title</label>
      <input type="text" class="form-control" name="title">
    </div>

    <div class="form-group">
      <label>Genre</label>
      <input type="text" class="form-control" name="genre">
    </div>

    <div class="form-group">
      <label>Plot</label>
      <input type="text" class="form-control" name="plot">
    </div>

    <button type="submit" class="btn btn-dark btn-block">Add this movie!</button>

  </form>

</div>