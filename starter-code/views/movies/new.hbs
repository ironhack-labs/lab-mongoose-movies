<div class="container">
    <div class="celebrities-title">
        <h2>Add a Movie</h2>
    </div>
    <div class="celebrities-form-box">
        <form class="form" action="/movies/new" method="post">
            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-input" type="text" name="title" id="title">
            </div>
            <div class="form-group">
                <label for="genre">Genre</label>
                <input class="form-input" type="text" name="genre" id="genre">
            </div>

            <div class="form-group">
                <label for="plot">Plot</label>
                <input class="form-input" type="text" name="plot" id="plot">
            </div>
            <button class="btn btn-add" type="submit">Add</button>
        </form>
    </div>
    <div class="links">
        <a href="/">Home</a>
        <a href="/movies">Movies</a>
    </div>
</div>