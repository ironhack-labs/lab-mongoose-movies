<h2>Create a new entry</h2>

<div class="container">
  <div class="row">
    <div class="col-8">
      <form method="POST" >
        <div class="form-group">
          <label for="movieTitle">Title</label>
          <input type="text" class="form-control" id="movieTitle" name="title" placeholder="Enter your movie's title!">
        </div>
        <div class="form-group">
          <label for="movieGenre">Genre</label>
          <input type="text" class="form-control" id="movieGenre" name="genre" placeholder="Enter its genre!">
        </div>
        <div class="form-group">
          <label for="moviePlot">Plot</label>
          <input type="text" class="form-control" id="moviePlot" name="plot" placeholder="Enter its plot!">
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
      </form>
    </div>
  </div>
</div>