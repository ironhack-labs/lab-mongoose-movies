<div class="container my-5">
  <div class="row">
    <div class="col-12 mb-3">
      <h2>Create a new movie</h2>
    </div>
    <div class="col-12 col-md-4">
      <form action="/movies" method="POST">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" placeholder="Waking up with the Kardashians" class="form-control">
        </div>
        <div class="form-group">
          <label for="genre">Genre</label>
          <input type="text" name="genre" id="genre" placeholder="Drama" class="form-control">
        </div>
        <div class="form-group">
          <label for="plot">Plot</label>
          <input type="text" name="plot" id="plot" placeholder="Null" class="form-control">
        </div>
        <button type="submit" class="btn btn-outline-info mt-3">Create</button>
      </form>
    </div>
  </div>
</div>