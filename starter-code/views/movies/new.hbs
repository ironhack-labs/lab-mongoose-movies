 {{#if movie}}
<form action="/movies/{{movie._id}}/edit" method="post">
  <label>Title:</label>
  <input type="text" name="title" value="{{movie.title}}">

  <label>Genre: </label>
  <input type="text" name="genre" value="{{movie.genre}}">

  <label>Plot:</label>
  <input type="text" name="plot" value="{{movie.plot}}">
  <button type="submit">EDIT</button>
</form>
{{else}}
<form action="/movies/new" method="post">
  <label>Title:</label>
  <input type="text" name="title">

  <label>Genre: </label>
  <input type="text" name="genre">

  <label>Plot:</label>
  <input type="text" name="plot">
  <button type="submit">ADD</button>
</form>
{{/if}}