<h2>Add a new Movie</h2>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form action="/movies/new" method="POST">
            <div class="form-group">
                <label for="field1">Title</label>
                <input type="text" class="form-control" id="field1" name="title">
            </div>
            <div class="form-group">
                <label for="field2">Genre</label>
                <input type="text" class="form-control" id="field2" name="genre">
            </div>
            <div class="form-group">
                <label for="field3">Plot</label>
                <input type="text" class="form-control" id="field3" name="plot">
            </div>
            <button type="submit" class="btn btn-dark">Add Movie</button>
        </form>