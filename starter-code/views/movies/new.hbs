<h2>Add new movie</h2>
<form action="/movies" method="post">
    <label for="title">
        Title
        <input id="title" name="title"/>
    </label>
    <label for="genre">
        Genre
        <input id="genre" name="genre"/>
    </label>
    <label for="plot">
        Plot
        <input id="plot" name="plot"/>
    </label>
    <button type="submit">Add</button>
</form>