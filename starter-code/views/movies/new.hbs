<div class="d-flex flex-column justify-content-center align-items-center w-100">
<h2>ADD A NEW MOVIE</h2>

<form action="/movies" method="POST">
   <!--Title-->
  <div class="form-group">

    <label for="title">Title</label>
    <input value="{{movie.title}}" type="text" class="form-control" name="title" id="title" placeholder="Enter title">
    
  </div>
<!--Genre-->
  <div class="form-group">

    <label for="genre">Genre</label>
    <input value="{{movie.genre}}" type="text" class="form-control" name="genre" id="genre" placeholder="Enter genre">
    
  </div>
  <!--Plot-->
  <div class="form-group">

    <label for="plot">Plot</label>
    <input value="{{movie.plot}}" type="text" class="form-control" name="plot" id="plot" placeholder="Enter plot">
    
  </div>
  <button type="submit" class="btn btn-primary">SUBMIT</button>
<a class="btn btn-dark ml-4" href="/movies">Go back</a>
</form>
</div>