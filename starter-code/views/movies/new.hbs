<div class="container mt-5">
    <h2>Create new Movie entry</h2>
    {{#if createErr}}
    <h3 class="mt-4">There was an error adding the document, please try again.</h3>
    {{/if}}
    <div class="container mt-3">
        <form action="/movies" method="POST">
            <div class="form-group">
                <label for="title">Title: </label>
                <input type="text" class="form-control" id="title" name="title" placeholder="title">
            </div>
            <div class="form-group">
                <label for="genre">Genre: </label>
                <input type="text" class="form-control" id="occupation" name="genre" placeholder="genre">
            </div>
            <div class="form-group">
                <label for="plot">Plot: </label>
                <input type="text" class="form-control" id="plot" name="plot" placeholder="Movie plot">
            </div>
            <button type="submit" class="btn btn-success">Add</button>
        </form>
    </div>
</div>