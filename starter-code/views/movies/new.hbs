<h2>Create a new Movie</h2>

<form action="/movies/new" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="title-input">Title</label>
      <input type="text" class="form-control" name="title" id="title-input">
    </div>
    <div class="form-group col-md-6">
      <label for="genre-input">Genre</label>
    <input type="text" class="form-control" name="genre" id="genre-input">
    </div>
  </div>
  <div class="form-group">
    <label for="plot-input">Plot</label>
    <textarea type="text" class="form-control" name="plot" id="plot-input"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Create new Movie</button>
</form>