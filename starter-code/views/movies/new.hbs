<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>New movie</h1>

            <form action="/movies/new" method="post">

                <div class="form-group">
                    <label>Title</label>
                    <input name="title" type="text" class="form-control">
                </div>

                <div class="form-group">
                    <label>Genre</label>
                    <input name="genre" type="text" class="form-control">
                </div>

                <div class="form-group">
                    <label>Plot</label>
                    <input name="plot" type="text" class="form-control">
                </div>


                <button type="submit" class="btn btn-dark">Create</button>
            </form>
        </div>
    </div>
</div>