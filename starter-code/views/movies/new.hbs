<section class='add-form'>
    <div class='container'>

        <div class='row justify-content-center'>

            <div class='col-md-6'>

                <h3 class='forms'>New Movie</h3>
                <hr>
                <h5>Complete all the fields!</h5>

                <form action='/movies/new' method='POST'>

                    <div class='form-group'>
                        <label>Title</label>
                        <input type='text' name='title' class='form-control'>
                    </div>

                    <div class='form-group'>
                        <label>Genre</label>
                        <input type='text' name='genre' class='form-control'>
                    </div>

                    <div class='form-group'>
                        <label>Plot</label>
                        <input type='text' name='plot' class='form-control'>
                    </div>

                    <button type='submit' class='btn btn-lg btn-dark'>Add</button>
                    
                </form>

            </div>

        </div>

    </div>
</section>