<h2>Movie form</h2>

<ul>
    <li>
        <a href="/">Index</a>
    </li>
    <li>
        <a href="/movies">Movies</a>
    </li>
    <li>
        <a href="/movies/new">New movie</a>
    </li>
</ul>

<% if (movie.isNew) { %>
    <form action="/movies" method="post">
  <% } else { %>
    <form action="/movies/<%= movie._id %>" method="post">
  <% } %>
    <input type="text" name="title" value="<%= movie.title %>">
    <input type="text" name="genre" value="<%= movie.genre %>">
    <input type="text" name="plot" value="<%= movie.plot %>">
    <button type="submit">Submit</button>
</form>