<form action="/movies/{{movie._id}}" method="post">
    <div>
        <label for="title">Movie Title</label>
        <input type="text" name="title" id="title" placeholder="Digite o tÃ­tulo da Filme"  value="{{movie.title}}">
    </div>
    <div>
        <label for="genre">Genre</label>
        <select name="genre" id="genre">
            <option value="{{movie.genre}}">{{movie.genre}}</option>
            <option value="terror">Terror</option>
            <option value="action">Action</option>
            <option value="child">Child</option>
            <option value="comedy">Comedy</option>
            <option value="drama">Drama</option>
            <option value="classic">Classic</option>
            <option value="sci-fi">Sci-fi</option>
            <option value="other">Other</option>
        </select>
    </div>
    <div>
        <label for="plot">Plot</label>
        <input type="text" name="plot" id="plot" placeholder="Digite o resumo do filme" value="{{movie.plot}}">
    </div>

    {{#if errorMessage}}
        <p>{{errorMessage}}</p>
    {{/if}}

    <button type="submit">Edit</button>
</form>