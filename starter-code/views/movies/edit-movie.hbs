<h2> Edit a movie</h2>

<form action="/movies/{{movie.id}}" method="post">
<label>Title</label>
<input type="text" name="title" value="{{movie.title}}">
<label>Genre</label>
<input type="text" name="genre" value="{{movie.genre}}">
<label>Plot</label>
<input type="text" name="plot" value="{{movie.plot}}">
<label>Cast</label>
<select name="cast" value='{{movie.cast}}' >
{{#each celebrities}}
<option selected="selected" value='{{this.id}}'>{{this.name}}</option>
{{/each}}
</select>
<button type="submit">Send </button>
</form>
<p></p>
<a href="/movies">Back to movies</a>