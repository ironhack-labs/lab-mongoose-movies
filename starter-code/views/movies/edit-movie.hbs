<form action="/movies/{{this.movie.id}}/edit" method="POST">
<input type="text" name='title' value="{{this.movie.title}}">
<input type="text" name='genre' value="{{this.movie.genre}}">
<input type="text" name='plot' value="{{this.movie.plot}}">
  <select multiple name="celebrity">
    {{#each this.allCelebrities}}
    <option value="{{this.id}}">{{this.name}}</option>
    {{/each}}
  </select>
<button type="submit">Edit</button>
</form>