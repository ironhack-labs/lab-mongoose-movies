<h2>Edit Movie</h2>
<form action="/movies/{{movie._id}}" method="POST">
<div>
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="{{movie.title}}">
</div>
<div>
    <label for="genre">Genre:</label>
    <input type="text" name="genre" id="genre" value="{{movie.genre}}"> 
</div>
<div>
    <label for="plot">Plot:</label>
    <input type="text" name="plot" id="plot" value="{{movie.plot}}">
</div>
<p><label for="cast">Cast: (use ctrl/cmd to select multiple scroll for more)</label></p>
<div>
   {{#each celebrities}}
      {{#if this.isActor}}
        <input checked type="checkbox" name="cast" value="{{this._id}}">{{this.name}}<br>
      {{else}}
        <input  type="checkbox" name="cast" value="{{this._id}}">{{this.name}}<br>
      {{/if}}
    {{/each}}
</div>
<button type="submit">Submit Changes</button>
</form>