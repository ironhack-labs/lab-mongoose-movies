  <br>
  <div class="container">
  <div class="row">
    <div class="xs-6-sm">
  <a class="btn btn-info" href="/movies/new" role="button">New Movie</a>
  </div>
  </div>
</div>

<ul>
  <% movie.forEach((movie) => { %>

    <div class="row">
      <div class = "xs-4-sm">
      <h2><%= movie.title %></h2>
      <a class="btn btn-info" href="/movies/<%= movie._id %>" role="button">View Details</a>
      <form  action="/movies/<%= movie._id %>/delete" method="post">
        <button type="submit" name="delete" class="btn btn-danger">Delete <%= movie.title %></button>
      </form>
      <br>
      </div>
  </div>

  <%  }) %>
</ul>
