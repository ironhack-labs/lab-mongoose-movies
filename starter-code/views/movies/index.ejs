<h2>Movies index</h2>
<ul>
    <li>
        <a href="/">Index</a>
    </li>
    <li>
        <a href="/movies/new">New movie</a>
    </li>
</ul>

<table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <!-- <th scope="col">Occupation</th>
        <th scope="col">Catch Phrase</th> -->
      </tr>
    </thead>
    <tbody>
    <% movies.forEach( (movie) => { %>
        <tr>
            <td><a href="/movies/<%= movie._id %>"><%= movie.title %></td>
                <td>
                    <form action="/movies/<%= movie._id %>/edit" method="get">
                        <button type="submit">Edit</button>
                    </form>
                </td>
            <td>
                <form action="/movies/<%= movie._id %>/delete" method="post">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>