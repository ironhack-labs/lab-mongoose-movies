{{#with movie}}

<form method="POST" action="/movies/{{_id}}">
  <div class="form-group">
    <input type="text" class="form-control" value="{{title}}" name="title">
  </div>
  <div class="form-group">
    <input type="text" class="form-control" value="{{genre}}" name="genre">
  </div>
  <div class="form-group">
    <input type="text" class="form-control" value="{{plot}}" name="plot">
  </div>


  <button type="submit" class="btn btn-primary">Update</button>
</form>

{{/with}}