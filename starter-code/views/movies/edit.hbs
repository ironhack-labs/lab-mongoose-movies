<h2>Edit this movie</h2>
<form action="/movie/{{movie._id}}" method="POST">
  <label for="">Title: </label>
  <input type="text" value="{{movie.title}}" name="title">
  <label for="">Genre: </label>
  <input type="text" value="{{movie.genre}}" name="genre">
  <select name="star">
  {{#each celebrities}}
  {{#if this.selected}}
    <option value="{{this._id}}" selected="selected">{{this.name}}</option>
  {{else}}
    <option value="{{this._id}}">{{this.name}}</option>
  {{/if}}
  {{/each}}
  </select>
  <label for="">Plot: </label>
  <input type="text" value="{{movie.plot}}" name="plot">
  <button>Edit</button>
</form>