<h2>Edit {{title}}!</h2>
<form action="/movies/{{_id}}/edit" method="post">
    <label>
        Title:
        <input type="text" name="title" value="{{title}}">
    </label>
    <label>
        Genre:
        <input type="text" name="genre" value="{{genre}}">
    </label>
    <label>
        Plot:
        <textarea name="plot" col="20" row="10">{{plot}}</textarea>
    </label>
    <button type="submit">edit Movie</button>
</form>