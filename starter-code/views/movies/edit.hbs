<h2>Edit movie</h2>

<form action="/movies/{{this._id}}" method="POST">
  <label for="title-input"> Title </label>
  <input type="text" name="title" id="title-input" value="{{this.title}}"></input>
  <br>

  <label for="genre-input"> Genre </label>
  <input type="text" name="genre" id="genre-input" value="{{this.genre}}"></input>
  <br>

  <label for="plot-input"> Plot </label>
  <textarea type="text" name="plot" id="plot-input">{{this.plot}}</textarea>
  <br>

  <button type="submit"> Save changes </button>
</form> 