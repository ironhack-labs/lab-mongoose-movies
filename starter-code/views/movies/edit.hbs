<h2>Edit {{movie.name}}</h2>

<form action="/movies/{{movie._id}}/update" method="POST">
  <label>Title</label>
  <input name="title" type="text"  value="{{movie.title}}">

  <label>Genre</label>
  <input name="genre" type="text"  value="{{movie.genre}}">

  <label>Plot</label>
  <input name="plot" type="text"  value="{{movie.plot}}">

  <label>Celebrity</label>
  <select name="theCelebrity">
    {{#each celebrities}}
    <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <button> Save Changes</button>
</form>