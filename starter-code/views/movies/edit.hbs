<div class="section">
  <h1><a href="/">Where is my idol?</a></h1>
  <h2>Edit {{movie.title}}</h2>
  <form action="/movies/{{movie._id}}/edit" method="POST" class="form">
    <input type="hidden" name="id" value="{{movie._id}}">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" placeholder="The movie's title" name="title" value="{{movie.title}}">
    </div>
    <div class="form-group">
      <label for="name">Genre</label>
      <input type="text" placeholder="The movie's genre" name="genre" value="{{movie.genre}}">
    </div>
    <div class="form-group">
      <label for="name">Plot</label>
      <textarea type="text" placeholder="The movie's plot" name="plot">{{movie.plot}}</textarea>
    </div>
    <input type="submit" value="Edit movie" class="button button-create">
  </form>
  <a href="/movies" class="button button-goback">Go back</a>
</div>