<div class="row justify-content-center">
    <div class="col-md-6">

        <h1>Editar datos</h1>
        <hr>
        <form action="/movies/edit/{{id}}" method="POST">
            <div class="form-group">
                <label for="field1">Titulo:</label>
                <input value="{{title}}" name="title" type="text" class="form-control" id="field1">
                
            </div>
            <div class="form-group">
                <label for="field2">Género:</label>
                <input value="{{genre}}" name="genre" type="text" class="form-control" id="field2">
            </div>
            <div class="form-group">
                <label for="field3">Sinópsis:</label>
                <input value="{{plot}}" name="plot" type="text" class="form-control" id="field3">
            </div>

            <button type="submit" class="btn btn-dark">Guardar cambios</button>
        </form>
            <a href="/movies" class="btn btn-sm btn-light">Volver</a>

    </div>
</div>