<section class='edit-form'>
    <div class='container'>

        <div class='row justify-content-center'>

            <div class='col-md-6'>

                <h3 class='forms'>Edit: {{title}}</h3>
                <hr>

                <form action='/movies/edit/{{id}}' method='POST'>

                    <div class='form-group'>
                        <label>Title</label>
                        <input type='text' name='title' value='{{title}}' class='form-control'>
                    </div>

                    <div class='form-group'>
                        <label>Genre</label>
                        <input type='text' name='genre' value='{{genre}}' class='form-control'>
                    </div>

                    <div class='form-group'>
                        <label>Plot</label>
                        <input type='text' name='plot' value='{{plot}}' class='form-control'>
                    </div>

                    <button type='submit' class='btn btn-lg btn-dark'>Save</button>

                </form>

            </div>

        </div>

    </div>
</section>



