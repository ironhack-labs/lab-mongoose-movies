<h1>Edit movie</h1>

{{#each movieToEdit}}
<form action="/movies/{{_id}}" method="POST">
    <input type="text" name="title" value="{{title}}">
    <input type="text" name="genre" value="{{genre}}">
    <textarea name="plot">{{plot}}</textarea>

    <input type="submit" value="Add movie">
</form>

{{/each}}