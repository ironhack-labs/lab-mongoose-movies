 <div class="container">
    <h2>Edit Movie</h2>
    <form action="/movies/{{movie._id}}" method="POST">
        <label for="title">Insert the title: </label>
        <input type="text" name="title" value="{{movie.title}}">
        
        <label for="genre">Insert the genre: </label>
        <input type="text" name="genre" value="{{movie.genre}}">

        <label for="plot">Plot: </label>
        <input type="text" name="plot" value="{{movie.plot}}">

        <input type="submit" value="Edit Movie">
    </form>
</div>