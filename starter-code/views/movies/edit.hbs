<section class="page">
  <h2>Edit a movie</h2>
  <form action="/movies/{{movie._id}}" method="post">
    <label for="name">Name</label>
    <input name="name" type="text" value="{{movie.name}}">

    <label for="genre">Genre</label>
    <input name="genre" type="text" value="{{movie.genre}}">

    <label for="plot">Plot</label>
    <textarea name="plot" id="plot" cols="30" rows="10">{{movie.plot}}</textarea>

    <button type="submit">Ok</button>
  </form>
</section>