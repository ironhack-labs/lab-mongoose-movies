<h1>Edit a Movie!</h1>
<form action="/movies/{{_id}}" method="POST">
  <div>
    <p><label for="title">Title: </label><input type="text" name="title" value="{{title}}"></p>
    <p><label for="genre">Genre: </label><input type="text" name="genre" value="{{genre}}"></p>
    <p><label for="plot">Plot: </label><input type="text" name="plot" value="{{plot}}"></p>
    <p><button type="submit">Submit</button></p>
  </div>
</form>