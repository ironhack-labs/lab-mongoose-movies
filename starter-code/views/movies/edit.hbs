<div class="container">
    <div class="celebrities-title">
        <h2>Edit a Movie</h2>
    </div>
    <div class="celebrities-form-box">
        <form class="form" action="/movies/{{editMovie._id}}" method="post">
            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-group" type="text" name="title" id="title" value="{{editMovie.title}}">
            </div>
            <div class="form-group">
                <label for="genre">Genre</label>
                <input class="form-group" type="text" name="genre" id="genre" value="{{editMovie.genre}}">
            </div>

            <div class="form-group">
                <label for="plot">Plot</label>
                <input class="form-group" type="text" name="plot" id="plot" value="{{editMovie.plot}}">
            </div>
            <button class="btn btn-add" type="submit">Edit</button>
        </form>
    </div>
    <div class="links">
        <a href="/">Home</a>
        <a href="/movies">Movies</a>
    </div>
</div>