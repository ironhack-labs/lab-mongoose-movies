<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Edit Movies</h1>

            <form action="/movies/{{id}}" method="post">

                <div class="form-group">
                    <label>
                        <Title></Title>
                    </label>
                    <input name="title" type="text" class="form-control" value="{{title}}">
                </div>

                <div class="form-group">
                    <label>Genre</label>
                    <input name="genre" type="text" class="form-control" value="{{genre}}">
                </div>

                <div class="form-group">
                    <label>Plot</label>
                    <input name="plot" type="text" class="form-control" value="{{plot}}">
                </div>


                <button type="submit" class="btn btn-dark">Edit</button>
            </form>
        </div>
    </div>
</div>