<h1>Edit Movie</h1>
<form action="/movies/{{movie._id}}" method="post">
  Title: <input type="text" value="{{movie.title}}" name="title"> <br>
  Genre: <input type="text" value="{{movie.genre}}" name="genre"><br>
  Plot: <input type="text" value="{{movie.plot}}" name="plot"><br>
  Actors: <select multiple name="actors">
    {{#each celebs}}
  <option value="{{this._id}}">{{this.name}}</option>
  {{/each}}
</select>
  <button type="submit">Save Changes</button>
</form>	

<a href='/movies'>Back</a>