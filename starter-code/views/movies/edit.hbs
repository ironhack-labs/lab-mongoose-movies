<h2>Edit Movie</h2>
<a href="/movies">Â« Back to movies</a>
<form class="form" action="/movies/edit/{{movie._id}}" method="POST">
  <div>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" placeholder="Title" value="{{movie.title}}">
  </div>
  <div>
    <label for="genre">Genre</label>
    <input type="text" id="genre" name="genre" placeholder="Genre" value="{{movie.genre}}">
  </div>
  <div>
    <label for="plot">Plot</label>
    <input type="text" id="plot" name="plot" placeholder="Plot" value="{{movie.plot}}">
  </div>
  <button>Submit</button>
</form>

{{#if error}}
<p>Fill out all the forms.</p>
{{/if}}