<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-6">

      <h1>Edit {{title}}</h1>

      <hr>

      <form method="POST" action="/movies/{{id}}/edit">

        <div class="form-group">
          <label for="title">Title</label>
          <input name="title" type="text" class="form-control" id="title" value="{{title}}">
        </div>

        <div class=" form-group">
          <label for="genre">genre</label>
          <input name="genre" type="text" class="form-control" id="genre" value="{{genre}}">
        </div>

        <div class="form-group">
          <label for="plot">Plot</label>
          <input name="plot" type="text" class="form-control" id="plot" value="{{plot}}">
        </div>



        <button type="submit" class="btn btn-dark">Save Edit</button>
        <a href="/movies" class="btn btn-outline-dark">Go back</a>
      </form>

    </div>
  </div>


</div>