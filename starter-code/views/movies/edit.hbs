<div class="row justify-content-center">
    <div class="col-md-6">

        <h2>Edit a movie</h2>

        <form action="/movies/{{id}}" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input name="title" type="text" class="form-control" id="title" value="{{title}}">
                <small class="form-text text-muted">Introduce el nombre completo</small>
            </div>
            <div class="form-group">
                <label for="genre">Genre</label>
                <input name="genre" type="text" class="form-control" id="genre" value="{{genre}}">
            </div>
            <div class="form-group">
                <label for="plot">Plot</label>
                <input name="plot" type="text" class="form-control" id="plot" value ="{{plot}}">
            </div>

            <button type="submit" class="btn btn-dark">Edit it!</button>
            
            
        </form>
    </div>
</div>