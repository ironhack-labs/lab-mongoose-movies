<section class="edit-page page">
        <h2>Edit existing movie</h2>

        <form action="/movies/{{_id}}" method="post">
                <label for="title">Title</label>
                <input id="title" value="{{title}}" name="title" type="text">

                <label for="genre">Genre</label>
                <input id="genre" value="{{genre}}" name="genre" type="text">

                <label for="plot">Plot</label>
                <input id="plot" value="{{plot}}" name="plot" type="text">


                <button class="btn">Edit</button>
        </form>
</section>