<h2>
  Edit a movie
</h2>
{{#with movie}}
  {{!// ou: {{celebrity.name}}
  <form action="/movies/{{_id}}" method="POST">
    <label for="name">
      Name:
    </label>
    <input type="text" name="title" value="{{title}}" />
    <label for="occupation">
      Genre:
    </label>
    <input type="text" name="genre" value="{{genre}}" />
    <label for="catchPhrase">
      Plot:
    </label>
    <input type="text" name="plot" value="{{plot}}" />
    <button type="submit">
      Save
    </button>
  </form>
{{/with}}