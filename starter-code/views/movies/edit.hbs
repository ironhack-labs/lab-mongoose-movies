<div class="container">
  <h2>Edit movie</h2>
  <form action="/movies/{{movie._id}}" method="post">
    <div class="form-group">
      <label for="title">Title:</label>
      <input class="form-control" type="text" name="title" value="{{movie.title}}">
    </div>
    <div class="form-group">
      <label for="genre">Genre:</label>
      <input class="form-control" type="text" name="genre" value="{{movie.genre}}">
    </div>
    <div class="form-group">
      <label for="plot">Plot:</label>
      <textarea class="form-control" cols="10" rows="5" name="plot">{{movie.plot}}</textarea>
    </div>
      <button class="btn btn-primary" type="submit">Edit movie</button>
  </form>
    <a class="btn btn-success mt-5 float-right" href="/movies">Back</a>
</div>