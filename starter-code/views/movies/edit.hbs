<form class="form" action="/movies/{{movie._id}}/edit" method="POST">
   <h2>Edit Movie</h2>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="{{movie.title}}">

    <label for="genre">Genre</label>
    <input type="genre" name="genre" id="genre" value="{{movie.genre}}">

    <label for="plot">Plot</label>
    <input type="plot" name="plot" id="plot" value="{{movie.plot}}">

    <button class="btn">Edit movie</button>
</form>