<h1>Edit Movie</h1>


<h2>title: {{movie.title}}</h2>
<h2>genre: {{movie.genre}}</h2>
<h2>plot: {{movie.plot}}</h2>



<form action="/movies/{{movie._id}}/update" method="post">
  
  <input type="text" name="theTitle" value="{{movie.title}}">
  <input type="text" name="theGenre" value="{{movie.genre}}">
  <input type="text" name="thePlot" value="{{movie.plot}}">

  <input type="submit" value="Submit Changes">

  
</form>