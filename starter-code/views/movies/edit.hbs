<h1>Edit {{movie.title}}</h1>
<form action="/movies/{{movie._id}}/edit" method="POST">
  <input type="hidden" name="id" value="{{movie._id}}">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" placeholder="The movie's title" name="title" value="{{movie.title}}">
  </div>
  <div class="form-group">
    <label for="name">Genre</label>
    <input type="text" placeholder="The movie's genre" name="genre" value="{{movie.genre}}">
  </div>
  <div class="form-group">
    <label for="name">Plot</label>
    <textarea type="text" cols="40" rows="15" placeholder="The movie's plot" name="plot">{{movie.plot}}</textarea>
  </div>
  <input type="submit" value="Edit movie">
</form>