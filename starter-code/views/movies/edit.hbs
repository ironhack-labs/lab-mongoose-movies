
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>Edit {{title}} movie!</h2>

            <form action="/movies/edit/{{_id}}" method="post">

                <div class="form-group">
                    <label>Title</label>
                    <input name="title" type="text" class="form-control" value="{{title}}">
                </div>

                <div class="form-group">
                    <label>Genre</label>
                    <input name="genre" type="text" class="form-control" value="{{genre}}">
                </div>

                <div class="form-group">
                    <label>Plot</label>
                    <textarea rows="10" name="plot" type="text" class="form-control" >{{plot}}</textarea>
                </div>

                <button type="submit" class="btn btn-dark">Edit</button>
                <button class="btn btn-dark" href="/movies/index">Back</button>
            </form>
        </div>
    </div>
</div>