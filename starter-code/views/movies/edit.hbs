<div class="row justify-content-center">
    <div class="col-md-6">

        <h1>Editar película</h1>

        <form action="/movies/edit/{{_id}}" method="POST">
            <div class="form-group">
                <label for="field1">Título</label>
                <input name="title" type="text" class="form-control" id="field1" value="{{title}}">
                <small class="form-text text-muted">Introduce el título completo</small>
            </div>
            <div class="form-group">
                <label for="field2">Genero</label>
                <input name="genre" type="text" class="form-control" id="field2" value="{{genre}}">
            </div>
            <div class="form-group">
                <label for="field3">Trama</label>
                <input name="plot" type="text" class="form-control" id="field3" value="{{plot}}">
            </div>

            <button type="submit" class="btn btn-info btn-lg btn-block">Guardar cambios</button>
        </form>
    </div>
</div>