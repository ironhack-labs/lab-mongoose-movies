<h2>EDIT A MOVIE</h2>


<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-5">

            <h1>Edit a movie</h1>

            <form method="POST" action="/movies/{{movieDet.id}}">

                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" name="title" value="{{movieDet.title}}">
                </div>

                <div class="form-group">
                    <label>Genre</label>
                    <input type="text" class="form-control" name="genre" value="{{movieDet.genre}}">
                </div>

                <div class="form-group">
                    <label>Plot</label>
                    <input type="text" class="form-control" name="plot" value="{{movieDet.plot}}">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Edit NOW!</button>
                
            </form>
        </div>
    </div>

</div>