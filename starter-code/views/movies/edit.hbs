<form action="/movies/{{this._id}}" method="POST">

  <label for="">Movie title:</label>
  <input type="text" name="title" value={{this.title}}> </br>

  <label for="">Genre:</label>
  <input type="text" name="genre" value={{this.genre}}> </br>

  <label for="">Plot:</label>
  <input type="text" name="plot" value={{this.plot}}> </br>



  <button type="submit">Update movie</button>
</form>