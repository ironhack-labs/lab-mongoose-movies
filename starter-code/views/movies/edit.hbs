<h2>Edit {{title}}</h2>

<div class="container">
  <div class="row">
    <div class="col-8">
      <form method="POST" action="/movies/{{id}}/edit">
        <div class="form-group">
          <label for="movieTitle">Title</label>
          <input type="text" class="form-control" id="movieTitle" name="title" aria-describedby="emailHelp"
            value="{{title}}">
        </div>
        <div class="form-group">
          <label for="movieGenre">Genre</label>
          <input type="text" class="form-control" id="movieGenre" name="genre" value="{{genre}}">
        </div>
        <div class="form-group">
          <label for="moviePlot">Plot</label>
          <input type="text" class="form-control" id="moviePlot" name="plot" value="{{plot}}">
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
      </form>
    </div>
  </div>
</div>