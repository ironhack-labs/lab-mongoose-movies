<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h2>Edit Movie</h2>

            <form method="POST" action="/movies/{{id}}/edit">
                <div class="form-group">
                    <label>Image url</label>
                    <input type="text" class="form-control" name="image" value="{{image}}">
                </div>
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" name="title" value="{{title}}">
                </div>
                <div class="form-group">
                    <label>Genre</label>
                    <input type="text" class="form-control" name="genre" value="{{genre}}">
                </div>
                <div class="form-group">
                    <label>Plot</label>
                    <input type="text" class="form-control" name="plot" value="{{plot}}">
                </div>
                <button type="submit" class="btn btn-dark">Save</button>
            </form>
        </div>
    </div>



</div>