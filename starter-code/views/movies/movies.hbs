<div class="d-flex justify-content-center m-3">
  <h1 class="text-secondary">Lista de Peliculas</h1>
</div>
<div class="d-flex flex-row justify-content-center mb-3">
  <a class="text-decoration-none text-white text-center p-2 btn-success rounded" href="movies/new">Register New Movie</a>
</div>

<div class="row justify-content-center">
  {{#each movies as |movie|}}
  <div class="card col-3 m-1">
    <div class="card-body d-flex flex-column align-items-center">
      <h4 class="card-title">{{movie.title}}</h4>
      <p>{{movie.genre}}</p>
      <p class="card-text text-center card">{{movie.plot}}</p>
      <div>
        <a href="/movies/{{movie._id}}" class="btn btn-secondary">Details</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
