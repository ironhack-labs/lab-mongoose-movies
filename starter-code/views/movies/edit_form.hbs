<form class="form" action="/movies/{{movie._id}}/edit" method="POST">
    <h2>Edit form</h2>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="{{movie.title}}">

    <label for="genre">Genre</label>
    <input type="text" name="genre" id="genre" value="{{movie.genre}}">


    <label for="plot">Plot</label>
    <input type="text" name="plot" id="plot" value="{{movie.plot}}">

    <label for="celebrity">Celebrity</label>
    <select name="celebrity" id="celebrity">
        {{#each celebrityDocuments}}
        {{#isSameId  this._id ../movie.celebrity }}
        <option value="{{this._id}}" selected>{{this.name}}</option>
        {{else}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/isSameId}}
        {{/each}}
    </select>

    <button class="btn">Edit Movie</button>

</form>