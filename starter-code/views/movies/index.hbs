<h2>Movies</h2>
{{#each movies}}
  <p>
    <a href='/movies/{{this._id}}'>{{this.title}}</a>
  </p>
  <a href="/movies/{{this._id}}/edit">Edit</a>
  <form action="/movies/{{this._id}}/delete" method="POST">
    <button type="submit">Delete</button>
  </form>
{{/each}}
<hr>
<a href='/movies/new'>Add a new movie</a>