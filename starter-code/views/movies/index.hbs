<h2>Movies</h2>

<div>
  {{#each seed}}
  {{>itemmovies}}
  <div class="buttonfather">
    <div class="button">
      <form action="/movies/delete/{{this._id}}">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
    <div class="button">
      <form action="/movies/edit/{{this._id}}">
        <button type="submit" class="btn btn-success">Update</button>
      </form>
    </div>
  </div>
  {{/each}}
</div>