<h1>movies index</h1>
<a href="/movies/new">create new movies</a>
{{#each movies}}
<h2>{{this.title}}</h2>
<a href="movies/{{this._id}}">See details</a>
<form action="/movies/{{this._id}}/edit" class="form">
<button class="btn">Update !</button>
</form>
<form  method="post" action="/movies/{{this._id}}/delete" class="form">
<button class="btn">Delete !</button>
</form>
{{/each}}