<h1>Movie list</h1>
<section>
{{#each movieCard}}
  <article class="moviebCard">
    <h2>{{this.title}}</h2>
    <a href="/movies/{{this.id}}">more details</a><br>

    <form action="/movies/{{this.id}}/delete" method="post">
      <button type="submit">Delete</button>     
    </form>
  </article>
  <hr>
{{/each}}
  <div>
    <a href="/movies/new">Add new Movie</a>
  </div>
</section>