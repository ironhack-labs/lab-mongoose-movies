<h2>Movies</h2>
<a href="/movies/new">Add a movie</a>

<ul>
    {{#each movies}}
    <li>
        <div>
            <h3>{{title}}</h3>
            <a href="/movies/edit/{{_id}}">Update this movie</a>
            -
            <a href="/movies/{{_id}}">Show details of this movie</a>
            -
            <a href="/movies/delete/{{_id}}">Delete</a>
        </div>
    </li>
    {{/each}}
</ul>