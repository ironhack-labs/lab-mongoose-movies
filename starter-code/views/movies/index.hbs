<h2>Movies:</h2>

{{#each movies}}
<a href="/movies/{{this.id}}"><p>{{this.title}}</p></a>
<form action="/movies/{{this._id}}/delete" method="POST">
<button type="submit">Delete</button>
</form>

<form action="/movies/edit/{{_id}}" >
<button type="submit">Edit</button>
</form>

{{/each}}

<button type="submit"><a href="/newMovie">Add new Movie</a></button>
