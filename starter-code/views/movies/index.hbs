<h1>Movies:</h1>
{{#each movies}}
<h2>{{this.title}}</h2>
<a href="/movies/{{this._id}}">See Details</a>
<form action="movies/{{this._id}}/delete" method="POST">
  <button type="submit">Delete</button></form>
<a href="/movies/{{this._id}}/edit">Edit</a>

{{/each}}
<p><a href="/movies/new">Add a movie</a></p>