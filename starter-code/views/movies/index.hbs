<h2 class="mb-5">Movies</h2>

<a href="/movies/new" class="btn btn-success float-right mb-4"><i class="fas fa-plus-circle"></i> Add new</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Genre</th>
            <th scope="col">Plot</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each movies}}
        <tr>
            <td> <a href="/movies/{{_id}}"><i class="fas fa-info-circle"></i> {{title}}</a></td>
            <td>{{genre}}</td>
            <td>{{plot}}</td>
            <td> 
                <a href="/movies/{{_id}}/edit" class="btn btn-secondary"><i class="fas fa-pen"></i></a>
                <a href="/movies/{{_id}}/delete" class="btn btn-danger"><i class="far fa-trash-alt"></i></a> 
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>