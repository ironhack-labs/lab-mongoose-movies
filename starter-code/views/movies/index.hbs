<h2>Movies</h2>
{{#each movies}}
<ul>
    <li><h2>{{this.name}}</h2></li>
    <p></p>
    <p><a href='/movies/{{this._id}}'><button type="button" class="btn btn-info btn-sm"> Find out more!</button></a></p>
    <p><a href='/movies/{{this._id}}/edit'><button type="button" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</button></a></p>
    <p><form action='/movies/{{this._id}}/delete' method="POST"><button type="submit" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button></form></p>
    <p></p>
</ul>
{{/each}}
<p><a class="btn btn-success btn-lg" href="/movies/create" role="button">Create a new movie!</a></p>