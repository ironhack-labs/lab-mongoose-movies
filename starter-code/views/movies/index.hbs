<h1>List of MOVIES</h1>
<h2><span><a href="movies/new">ADD new Movie</a></span> </h2>
<p></p>
{{#each allTheMovies}}
  <hr>
  <span><a href="movies/{{this._id}}">{{this.title}}</a></span>

  <span>Genre: <strong class="strong">{{ this.genre }}</strong> </span>
   <span>Plot: <strong class="strong"> {{ this.plot }}</strong></span>
   <span>Celebrity Star: <strong class="strong">{{ this.celebrity.name }} </strong> </span>
  <span> 
    <a href="/movies/{{this._id}}/edit" class="edit-button">EDIT</a>
  </span>
  <p></p>
  <form action="/movies/{{this._id }}/delete" method="POST">
    <button>delete this movie</button>
  </form>
  <hr>
{{/each}}