<h2>Movies</h2>
{{#each allFilms}}
    <a href="movies/{{this._id}}">{{this.title}}</a>
    <form action="/movies/{{this._id}}/delete" method="post">
        <button type="submit">Delete</button>
    </form>
    <form action="/movies/{{this.id}}/edit">
        <button type="submit">Edit</button>
    </form>
{{/each}}
<a href="movies/add">Add film</a>