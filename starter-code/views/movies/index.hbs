<div class="wrapper">
    <div class="container">
        <h2>Movies</h2>
        <div class="row">
            {{#each movies}}
            <div class="col s12 m7">
                <div class="card">
                    <div class="card-image">
                        <img src="{{img}}">
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                    </div>
                    <div class="card-action">
                        <a class="waves-effect waves-light btn links" href="/movies/edit/{{_id}}">Update</a>
                        <a class="waves-effect waves-light btn links" href="/movies/{{_id}}">Details</a>
                        <a class="waves-effect waves-light btn links" href="/movies/delete/{{_id}}">Delete</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <a href="/movies/new" class="waves-effect waves-light btn links">Add a movie</a>
        <a href="/" class="waves-effect waves-light btn links">Back to cinema</a>
    </div>
</div>