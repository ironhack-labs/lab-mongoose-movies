<a href="/movies/new">Create new movies</a>
<h2>List of movies</h2>
<div class="movies-list-wrapper">
  {{#each this as |movie|}}
    {{#if id}}
      <div class="card">
        <h3>{{movie.title}}</dh3>
        <a href="/movies/{{movie.id}}">View details</a>
        <form action="/movies/{{movie.id}}/edit">
          <button type="submit">Edit movie</button>
        </form> 
        <form action="/movies/{{movie.id}}/delete">
          <button type="submit">Delete movie</button>
        </form>
      </div>
      <br>
    {{/if}}
  {{/each}}
</div>