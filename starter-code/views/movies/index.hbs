<h2>Our favorite Movies!</h2>
<form action="movies/new">
  <input type="submit" value="Add new movie">
</form>
<br>
{{#each movieDocs}}
<br>
<p><a href="/movies/movie/{{_id}}">{{title}}</a></p>

<form action="movies/{{_id}}/edit" method="GET">
  <button>Edit movie</button>
</form>
<br>
<form action="/movies/{{_id}}/delete" method="post">
  <button type="submit">Delete movie</button>
</form>

{{/each}}

<br>
<br>

{{#if userInSession}}
    <a href="/auth/user-profile">[BACK TO USER PROFILE]</a>
{{else}}
    <a href="/">[BACK TO HOME]</a>
{{/if}}