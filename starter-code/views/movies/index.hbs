<div class="container mt-5">
    <h2>Movies</h2>
    <table class="table table-hover w-75">
        <thead>
            <tr>
                <th scope="col">Movie title</th>
                <th colspan="2" scope="col" class="pl-5">Actions to perform</th>
            </tr>
        </thead>
        <tbody>
            {{#each movies}}
            <tr>
                <td><a href="/movies/{{this._id}}">{{this.title}}</a></td>
                <td class="w-25">
                    <form action="/movies/{{this._id}}/delete" method="POST">
                        <button type="submit" class="btn btn-danger">DELETE</button>
                    </form>
                </td>
                <td class="w-25">
                    <a href="/movies/{{this._id}}/edit" class="btn btn-warning">EDIT</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <div>
        <a href="/movies/new" class="btn btn-dark">Add a movie to the DB</a>
        <a href="/" class="btn btn-info">Back Home</a>
    </div>
</div>