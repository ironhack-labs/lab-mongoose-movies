<h2>Movies</h2>
<ul>
  {{#each movie }}
  <li><a href="/movies/{{this._id}}">{{this.title}}</a></li>
  <form method="post" action="/movies/{{this._id}}/delete/" id="delete_form"><button>Delete</button></form>
  <a href="/movies/{{this._id}}/edit"><button>Edit</button></a>
  {{/each}}
</ul>
<a href="/movies/new">Add new movie</a>