<h2>Movies</h2>
<a href="/movies/new" class="newCeleb">Add a new movie</a>
<a href="/" class="newCeleb">Back</a>

{{#each movies as |movie|}}
    <div class="data">
        <a href="/movies/{{movie._id}}" class="celebName">{{movie.title}}</a>
        <div class="edit">
            <a href="/movies/{{movie._id}}/edit" class="btn-edit">Edit</a>
        </div>
        <form action="/movies/{{movie._id}}/delete" method="POST">
            <button type="submit">Delete</button>
        </form>
        
    </div>    
{{/each}}

