
<div class="movie-container">
<h2>Movies</h2>
<a href="/movies/new">Create New Movie</a>







<div class="movies">
{{#each allTheMovies}}
<div class="each-movie">



  <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <img id="mvimg" class="activator" src="images/jeremy-yap-J39X2xX_8CQ-unsplash.jpg">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">{{this.title}}<i class="material-icons right">more_vert</i></span>
      <a href="/movies/details/{{this._id}}">Check out this Movie</a>
    </div>
    <div class="card-action">
      <form action="/movies/delete/{{this.id}}" method="POST">
        <button>Delete This Movie</button>
      </form>
    </div>
  </div>
  
</div>

{{/each}}
</div>








<p>
 {{#if msg}}
  {{msg}}
  {{/if}}
</p>


</div>



