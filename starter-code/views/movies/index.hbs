<h2>Movies overview</h2>

{{#each movies}}
  <h3>{{title}}</h3> 
  <p><a href="/movies/{{_id}}">Show details</a></p>
  <p><a href="/movies/{{_id}}/edit">Edit movie</a></p>
  <form action="/movies/{{_id}}/delete" method="post">
    <button>Delete movie</button>
  </form> 
{{/each}}

<p><a href="/movies/new">Add a new movie!</a></p>