<div class="container my-5">
  <div class="row">
    <div class="col-12 mb-5">
      <h2>All Movies</h2>
    </div>
  </div>
  <div class="row">
    {{#each movies as |movie|}}
    <div class="col-12 col-md-3 mb-5">
      <h3 class="mb-4 h4">{{movie.title}}</h3>
      <a href="/movies/{{movie._id}}" class="btn btn-outline-info">Ver m√°s</a>
      <form action="/movies/{{movie._id}}/delete" method="POST" class="d-inline">
        <button type="submit" class="btn btn-outline-danger">Delete</button>
      </form>
    </div>
    {{/each}}
  </div>
</div>