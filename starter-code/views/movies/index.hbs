<h2>Listed Movies</h2>
<br>
{{#each this.listedMovies}}
<div>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <a  href="/movies/{{id}}" class="btn btn-info">See more</a>
    <hr>
      <form action="/movies/{{id}}/delete" method="POST">
        <button  class="btn btn-danger" type="submit">Delete</button>
    </form>
  </div>
</div>
</div>
{{/each}}
<br>
<hr>
<a class="btn btn-info" href="/movies/new-movie">Add a movie</a>
<a class="btn btn-info" href="/">Go home</a>
