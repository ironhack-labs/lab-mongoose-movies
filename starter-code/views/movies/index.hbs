<h1>List of Movies</h1>


{{#each allTheMovies}}
<a href="movies/{{this._id}}">
<h2>{{this.title}}</h2>
</a>
<p>{{this.genre}}</p>
<p>{{this.plot}}</p>

<button class="btn">
<a class="btn-link" href="/movies/{{this._id}}/edit">Edit This Movie</a>
</button>

<form action="/movies/{{this._id}}/delete" method="POST">
<button class="btn">
Delete This Movie
</button>
</form>

<p>---------------------</p>

{{/each}}