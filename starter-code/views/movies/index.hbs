<h2>Movies</h2>
{{#each movies}}
       
          <a href="/movies/{{ this._id }}">
            {{ this.title }}
          </a>
         <p>{{ this.genre }}</p> 
          
          <form action="/movies/{{ this._id }}/delete" method="POST">
            <button> Delete </button>
          </form>
        
      {{/each}}

    <a href = "/movies/new">
    Add a new movie
    </a>

    