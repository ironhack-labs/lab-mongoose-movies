<h2>MOVIES</h2>

{{#each movies}}
<div class="movies-container">
    <div class="p-container">
        <p><strong>Title:</strong> </p>
    </div>
    <div class="a-container">
        <a href="/movies/{{this._id}}">{{this.title}}</a>
        <a href="/movies/editMovie?movies_id={{this._id}}"><button type="submit" class="edit-button">EDIT</button></a>
    </div>
    <div class="form-container">
        <form action="/movies/{{this._id}}" method="post">
            <button type="submit" class="delete-button">DELETE</button>
        </form>
    </div>
</div>   
{{/each}}
<a href="movies/newMovie">Add movie</a><br>
<a href="/">Return</a>