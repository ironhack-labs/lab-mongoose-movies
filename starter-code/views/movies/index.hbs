<h2>Movies</h2>

<ul>
{{#each allMoviesFromDB}}
    <li><a href="/movies/{{this._id}}">{{this.title}}</a></li>

    <form action="/movies/{{this._id}}/delete" method="POST">
        <button type="submit">Delete</button>
    </form>

    <a href="/movies/{{this._id}}/edit"><button>Edit</button></a>
{{/each}}
</ul>

<a href="/movies/new">Add a new movie</a>

<p>Go back to the <a href="/">homepage</a></p>
