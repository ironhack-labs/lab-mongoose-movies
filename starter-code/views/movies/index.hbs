<h2>{{title}}</h2>
<ul>
    {{#each movies}}
    <li><a href="/movies/{{_id}}">{{this.title}}</a></li>
    <form action="/movies/{{_id}}/delete" method="post">
        <button type="submit">Delete</button>
    </form>
    <form action="/movies/{{_id}}/edit" method="get">
        <button type="submit">Edit</button>
    </form>
    {{/each}}
</ul>