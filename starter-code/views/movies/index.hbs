<h2 class="text-center fw-bold mb-3">Movies</h2>

<table class="table table-striped table-light p-5">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Creator</th>
            <th scope="col">Edit</th>
            <th scope="col">Remove</th>
        </tr>
    </thead>
    <tbody>
        {{#each movies}}
        <tr>
            <th scope="row"><a class="" href="/movies/{{id}}">{{title}}</a></th>
            <th scope="row"><a class="" href="/users/{{user._id}}">{{user.userName}}</a></th>
            <td>
                <a class="btn btn-success" href="/movies/{{id}}/edit">Edit</a>
            </td>
            <td>
                <form class="delete-form" action="/movies/{{id}}/delete" method="post">
                    <button type="submit" class="btn btn-danger" onclick="return clicked()">Remove</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>

</table>