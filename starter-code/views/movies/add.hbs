<form class="form" action="/movies" method="POST">
  <h2 class="title">Add your favorite movie!!</h2>

  <div class="form-group">
    <label class="label" for="title">Title</label>
    <input class="input" id="title" type="text" name="title">
  </div>

  <div class="form-group">
    <label class="label" for="genre">Genre</label>
    <input class="input" id="genre" type="text" name="genre">
  </div>


  <div class="form-group">
    <label class="label" for="plot">Plot</label>
    <input class="input" id="plot" type="text" name="plot">
  </div>

  <button class="btn">Add it!</button>
</form>