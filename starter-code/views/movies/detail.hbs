<div class="div-body">
  <div class="container">
    <div class="row">
      <div class="col-xl-7 col-md-8 col-12 mx-auto">
        <img src="https://picsum.photos/g/500/300/?random" alt="movie image loading ..." class="random-movie" width="100%;">
        <div class="movie-info-container"> 
          <h1>{{ movie.title }}</h1>
          <h4> {{ movie.genre}} </h4>
          <p class="plot-detail"> {{ movie.plot }} </p>
        </div>
        <form action="/movies/{{ movie._id }}/delete" method="post">
          <div class="btn-group movie-form-group movie-detail-form-group" role="group">
            <button type="submit" class="btn v col-xl-4 col-md-4 col-12 delete-button">Delete</button>
            <a class="btn edit-create col-xl-4 col-md-4 col-12 edit-button" href="/movies/{{ movie._id }}/edit">Edit</a>
            <a href="/movies" class="btn edit-create col-xl-4 col-md-4 col-12 list-button"> LIST</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
