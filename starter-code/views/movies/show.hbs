<h1 class="display-4 m-5">Movies</h1>
<div class="container m-5">
  <div class="row">
    <div class="col">

      <div class="card m-3">
        <div class="card-header">
          {{ movie.title}}
        </div>
        <div class="card-body">
          <h5 class="card-title">{{ movie.plot }}</h5>
          <p class="card-text">{{ movie.genre }}</p>
        </div>

      </div>
    </div>
  </div>
</div>