<h2>{{movie.title}} details</h2>
<div class="card">
  <div class="card-body">
    <div class="container">
      <div class="row justify-content-between">
        <div class="col-sm">
          <h5 class="card-title">{{movie.title}}</h5>
          <p class="card-text">{{movie.genre}}</p>
          <p class="blockquote mb-0">{{movie.plot}}</p>
        </div>
        <div class="col-sm-2 justify-content-md-center">
          <a href="/movies/edit/{{movie._id}}" class="btn btn-warning">Edit</a>
          <a href="/movies/delete/{{movie._id}}" class="btn btn-danger">Delete</a>
        </div>
      </div>
    </div>
  </div>
</div>