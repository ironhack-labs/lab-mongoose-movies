{{!-- /*---celebrities/show.hbs---*/ --}}

<h1>Details</h1>


<h4>Title: {{movie.title}}</h4>
<h5>Genre: {{movie.genre}}</h5>
<p>Plot: {{movie.plot}}</p>

<p>Cast:</p>
<ul>
  {{#each movie.cast}}
  <li>
      {{this.name}}
  </li>
  {{/each}}
</ul>

<form action="/movies/{{movie._id}}/edit" method="get">
  <button type="submit">Edit</button>
</form>

<form action="/movies/{{movie._id}}/delete" method="post">
  <button type="submit">Delete</button>
</form>



