<h2>add a new movie</h1>

<form method="post" action="/movies/create">
    <label for="title">title</label>
    <input id="title" class="input" type="text" name="title" value="thismovie">

    <label for="genre">genre</label>
    <input id="genre" class="input" type="text" name="genre" value="thisgenre">

    <label for="plot">plot</label>
    <input id="plot" class="input" type="text" name="plot" value="wesh">

    <label for="select-cast">cast</label>
    <select id="select-cast" name="cast" class="input" multiple>
        {{#each celebrities}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
    

    <button>create</button>
</form>