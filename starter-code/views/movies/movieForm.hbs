<div class="col">
    <div class="row">
        <h2>{{#if title}}Edit movie: <b>{{title}}</b>{{else}}Create movie{{/if}}</h2>
    </div>
    <div class="row">
        <form action="/movies/{{#if title}}{{id}}/edit{{else}}movieForm{{/if}}" method="post">
            <div class="form-group">
                <label for="title">Title: </label>
                <input class="form-control" type="text" name="title" id="title" value="{{title}}" required>
            </div>
            <div class="form-group">
                <label for="genre">Genre: </label>
                <input class="form-control" type="text" name="genre" id="genre" value="{{genre}}" required>
            </div>
            <div class="form-group">
                <label for="plot">Plot: </label>
                <textarea class="form-control" type="text" id="plot" name="plot" value="{{plot}}" rows="4" cols="50" required>{{plot}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-3">{{#if title}}Edit{{else}}Create{{/if}}</button>
        </form>
    </div>
</div>