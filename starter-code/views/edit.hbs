<h2>Edit movie</h2>
<form action="/{{movies.id}}/edit" method="POST">
    <input type="text" name="name" id="name" value="{{movies.title}}">
    <input type="text" name="genre" id="genre" value="{{movies.genre}}">
    <input type="text" name="plot" id="plot" value="{{movies.plot}}">
    <input type="number" name="rating" id="rating" value="{{movies.rating}}">
    <button type="submit">Edit movie</button>
</form>