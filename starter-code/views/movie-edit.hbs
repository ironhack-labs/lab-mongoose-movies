<h1>Add new Movie</h1>
<form action="/movies/{{id}}/update" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="input" class="form-control" name="title" id="title" value="{{title}}">
  </div>
  <div class="form-group">
    <label for="genre">Genre</label>
    <input type="input" class="form-control" name="genre" id="genre" value="{{genre}}">
  </div>
  <div class="form-group">
    <label for="plot">Plot</label>
    <input type="input" class="form-control" name="plot" id="plot" value="{{plot}}">
  </div>
  <button type="submit" class="btn btn-primary">Update movie</button>
</form>