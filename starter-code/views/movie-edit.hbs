<h1>Add new Movie</h1>
<form action="/movies/{{movie.id}}/update" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="input" class="form-control" name="title" id="title" value="{{movie.title}}">
  </div>
  <div class="form-group">
    <label for="genre">Genre</label>
    <input type="input" class="form-control" name="genre" id="genre" value="{{movie.genre}}">
  </div>
  <div class="form-group">
    <label for="plot">Plot</label>
    <input type="input" class="form-control" name="plot" id="plot" value="{{movie.plot}}">
  </div>
  <div class="form-group">
    <select name="_stars" multiple>
      {{#each players}}
        {{#if this.checked}}
          <option value="{{this._id}}" selected>{{this.name}}</option>
        {{else}}
          <option value="{{this._id}}">{{this.name}}</option>
        {{/if}}
      {{/each}}
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Update movie</button>
</form>