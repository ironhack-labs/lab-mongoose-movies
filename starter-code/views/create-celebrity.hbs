<form action="/celebrities" method="post">
  <div>
    <label for="name">Celeb Name</label>
    <input type="text" name="name" id="name" placeholder="New celebrity name">
  </div>

  <div>
    <label for="occupation">Celeb Occupation</label>
    <input type="text" name="occupation" id="occupation" placeholder="New celebrity occupation">
  </div>

  <div>
    <label for="catchPhrase">Celeb Catch Phrase</label>
    <input type="text" name="catchPhrase" id="catchPhrase" placeholder="New celebrity catchPhrase">
  </div>

  {{#if errorMessage}}
    <span>{{errorMessage}}</span>
  {{/if}}

  <button type="submit">Create</button>
</form>