<h1>Update</h1>
{{!-- if you open and close this lines without the each, you only print one --}}
<div id='updateContainer'>
    {{#movUpd}}
    <h3>{{title}}</h3>
    <div>{{genre}}</div>
    <div>{{plot}}</div>


    <form id='formUpdate' action='/moviesUPD/{{_id}}' method="POST">
        <div class="form-group">
            <label for="exampleFormControlInput1">Movie Name</label>
            <input type="text" name='title' class="form-control" placeholder="someone" value={{name}}>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Occupation</label>
            <select name='genre' class="form-control">
                <option value="drama">Drama</option>
                <option value="action">Comedian</option>
                <option value="comedian">Comedian</option>
                <option value="superhero">Superhero</option>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Plot</label>
            <input type="text" name='plot' class="form-control" placeholder="someone" value={{catchPhrase}}>
        </div>
        <button class="btn btn-success">Update</button>
    </form>

    {{/movUpd}}

</div>