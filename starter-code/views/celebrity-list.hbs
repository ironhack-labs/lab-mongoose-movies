<div class="container">
  <h1>CELEBRITIES</h1>
    
    <ul class="list-group list-group-flush">
      {{#each celebrity}}
      <li class="list-group-item col-6">
        <p><strong>{{name}}</strong>
        <div class=" justify-content-end">
          <a type="button" class="btn btn-secondary btn-sm" href="/detalles/{{_id}}">Detalles</a>
          <a type="button" class="btn btn-secondary btn-sm justify-content-end" href="/edit?id={{_id}}">Editar</a> 
          <a type="button" class="btn btn-danger btn-sm justify-content-end" href="/delete/{{_id}}">Borrar</a>
        </div>
        </p>
      </li>      
      {{/each}}
    </ul>  
</div>
