<h2>Edit {{this.name}}</h2>
<form action="/celebrities/{{this.id}}" method="POST" >
  <label>Name:</label>
  <input type="text" name="name" value={{this.name}} />

  <label>Occupation:</label>
  <input type="text" name="occupation" value={{this.occupation}} />

  <label>Catch phrase:</label>
  <input type="text" name="catchPhrase" value={{this.catchPhrase}} />

  <button type="submit">Send</button>
</form>