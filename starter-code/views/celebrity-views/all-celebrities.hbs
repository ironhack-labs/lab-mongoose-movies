<div class="container pt-4">
      <div class="row">
      {{#each celebrities}}
        <li class="col celebrity-list">
          <div class="card pb-1 h-80" style="width: 20rem;">
            <img src={{this.image_url}} class="card-img-top" alt="...">
            <div class="card-body">
              <h3 class="card-title"> {{this.firstName}} {{this.lastName}}</h3>
              <h5 class="card-text tagline">{{this.catchPhrase}}</h5>
              <p class="card-text celebrity-description">Occupation: {{this.occupation}}</p>
              <a href="#" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">View Movies</a>
            </div>
          </div>
        </li>
      {{/each}}
      </div>
</div>