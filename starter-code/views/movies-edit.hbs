<h1>Editar {{movie.title}}</h1>

<form action="/movies/edit/{{movie._id}}" method="post">
  <label for="title">Title:</label>
  <input type="text" name="title" value="{{movie.title}}"><br>

  <label for="genre">Genre:</label>
  <input type="text" name="genre" value="{{movie.genre}}"><br>

  <label for="plot">Plot:</label>
  <input type="text" name="plot" value="{{movie.plot}}"><br>


  <button type="submit">EDIT</button>
</form>