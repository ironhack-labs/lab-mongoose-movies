<label for="name">Name:</label>
<input id="name" name="name" value="{{celebrity.name}}">

<label for="occupation">Occupation:</label>
<input id="occupation" name="occupation" value="{{celebrity.occupation}}">

<label for="catchPhrase">Catch Phrase:</label>
