    <div class="center-box">
      <form action="/celebrities/add" method="POST">
        <div class="form-group">
          <label for="fiel1">Name:</label>
          <input type="text" class="form-control" id="fiel1" name="name">
        </div>
        <div class="form-group">
          <label for="fiel2">Occupation:</label>
          <input type="text" class="form-control" id="fiel2" name="occupation">
