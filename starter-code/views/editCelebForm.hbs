<div class="container">
  <h1>EDITAR CELEB: {{name}}</h1>
  <div class="row justify-content-center">
    <div class="center-box">
      <form action="/celebrities/edit?celebId={{_id}}" method="POST">
        <div class="form-group">
          <label for="fiel1">Name:</label>
          <input type="text" class="form-control" id="fiel1" name="name" value="{{name}}">
        </div>
        <div class="form-group">
          <label for="fiel2">Occupation:</label>
          <input type="text" class="form-control" id="fiel2" name="occupation" value="{{occupation}}">
        </div>
        <div class="form-group">
          <label for="fiel3">CatchPhrase:</label>
          <input type="text" class="form-control" id="fiel3" name="catchPhrase" value="{{catchPhrase}}">
        </div>
        <button type="submit" class="btn submit-btn">Actualizar Celeb!</button>
        <button type="button" class="btn"><a href="/celebrities">Volver al Celebrity
            Showroom!</a></button>
      </form>
    </div>
  </div>
</div>