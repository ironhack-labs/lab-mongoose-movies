<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Nuestras películas</h2>
      <a href="/movies/create">Añadir un nueva película</a>
    </div>
    <div class="col-md-6">
      <ul class="movies-list">
        {{#each movies}}
        <li>{{name}} <a href="/movies/details/{{_id}}">Ver detalles  </a> <a href="/movies/remove/{{_id}}">Borrar</a></a> <a href="/movies/edit?movId={{_id}}">Edit</a>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>