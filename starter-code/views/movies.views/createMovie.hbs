<div class="container">
        <h2>New Movies</h2>
        <hr>
        <form action="/movies/{{_id}}" method="post">
            
            <div class="form-group">
                <label for="title">Movie title</label>
                <input type="text" class="form-control" id="title" name='title' placeholder="text">
            </div>

            <div class="form-group">
                <label for="genre">Genre</label>
                <input type="text" class="form-control" id="genre" name='genre' placeholder="text">
            </div>

           <div class="form-group">
           <label for="plot">Plot</label>
           <input type="text" class="form-control" id="plot" name='plot' placeholder="text">
           </div>

    <button type="submit" class="btn btn-dark">Changes</button>

</form>
