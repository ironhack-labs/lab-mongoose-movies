  <a class="btn btn-info" href="/celebrities/new" role="button">New Celebrity</a>


<ul>
  <% celebrity.forEach((celebrity) => { %>

    <div class="row">
      <div class = "xs-4-sm">
      <h4><%= celebrity.name %></h4>
      <br>
      <a class="btn btn-info" href="/celebrities/<%= celebrity._id %>" role="button">View Celebrity</a>
      <br>
      <!-- <a class="btn btn-danger" href="/celebrities/<%= celebrity._id %>/delete" role="button" method="post">Delete Celebrity</a> -->
      <form  action="/celebrities/<%= celebrity._id %>/delete" method="post">
        <button type="submit" name="delete" class=btn btn-danger>Delete Celeb</button>
      </form>

      <br>
      </div>
  </div>

  <%  }) %>
</ul>
