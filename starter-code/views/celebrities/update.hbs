{{> navBar_celebrities}}

<div class="container d-flex justify-content-center">
    <div class="row">
        <div class="col">
            <h2 class="mb-3 p-2">Update celebrity</h2>
            <form class="border" action="/celebrities/{{celebrity.id}}/update" method="POST" style="width: 20rem;">
                <div class="mb-3 p-2">
                    <div class="form-group">
                        <label >Name</label>
                        <input name="name" type="text" class="form-control mb-1" value="{{celebrity.name}}">
                    </div>
                    <div class="form-group">
                        <label>Occupation</label>
                        <input name="occupation" type="text" class="form-control mb-1" value="{{celebrity.occupation}}">
                    </div>
                    <div class="form-group">
                        <label>Catch Phrase</label>
                        <input name="catchPhrase" type="text" class="form-control mb-1" value="{{celebrity.catchPhrase}}">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark m-1">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>