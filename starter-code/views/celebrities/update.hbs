<h2>{{celebrity.name}}</h2>
<form action="/celebrities/{{celebrity._id}}/update" method="post">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value={{celebrity.name}}>
    <label for="occupation">Occupation</label>
    <input type="text" name="occupation" id="occupation" value={{celebrity.occupation}}>
    <label for="catch-phrase">Catch Phrase</label>
    <input type="text" name="catchPhrase" id="catch-phrase" value={{celebrity.catchPhrase}}>
    <button type="submit">Submit</button>
</form>