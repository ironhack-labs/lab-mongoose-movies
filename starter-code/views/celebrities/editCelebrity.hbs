<h2>Edit {{celebEdit.name}} </h2>

<br>
<br>

<form action="/celebrities/{{celebEdit._id}}/update" method="POST">
    <div class="form-group">
        <label for="nameInput">Name: </label>
        <h3>{{celebEdit.name}}</h3>        
    </div>
    <div class="form-group">
        <label for="occupationInput">Ocupation: </label>
        <input class="form-control" type="text" name="occupation" id="occupationInput" value="{{celebEdit.occupation}}" >
    </div>
    <div class="form-group">
        <label for="catchPhrase">About: </label>
        <input class="form-control" type="text" name="catchPhrase" id="catchPhrase" value="{{celebEdit.catchPhrase}}">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Save the Updates</button>
    <br>
</form>

