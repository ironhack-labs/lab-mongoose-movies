<div class="d-flex flex-column align-items-center">

<h1 class="display-2 text-center">The best celebrities</h1>
<p class="text-center mb-5">These men are the finest specimens of our entire species</p>
<br>

  <a href="/celebrities/new" class="btn m-4 pl-1 py-3 px-4 rounded-pill btn-danger display-3"> <i class="fas fa-plus-circle mx-2"></i> Add a new celebrity</a>
<div class="container-fluid">
  <div class="row justify-content-center">
    

{{#each celebrities}}

<div class="card mx-4 my-2 text-center">
  <img src="{{this.image}}" alt="">
  <div class="card-contents">
    <p class="card-text my-1 font-weight-bold">{{this.name}}</p>
    <p class="card-text my-1">{{this.occupation}}</p>
    <p class="card-text my-1 text-muted font-italic">{{this.catchPhrase}}</p>
    <div class="row justify-content-center mb-2">
    <a class="btn btn-primary col-lg-10 d-block" href="/celebrities/celebrity-details/{{this._id}}">See more</a>
    <a class="btn btn-warning col-lg-5 ml-3" href="/celebrities/celebrity-edit/{{this._id}}">Edit</a>
    <a class="btn btn-danger col-lg-5 mr-3" href="/celebrities/celebrity-delete/{{this._id}}">Delete</a>
    </div>
  </div>
</div>

{{/each}}
  </div>
</div>



{{#if message}}
  <h4 class="rounded-pill text-center mt-5 py-3 px-2 bg-danger text-light font-weight-bold mb-5">{{ message}}</h4>
  {{/if}}
</div>