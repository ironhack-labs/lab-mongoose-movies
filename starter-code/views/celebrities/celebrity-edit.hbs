<h2 class="editHeader">Edit the celebrity: </h2>
<h2>{{name}}</h2>

<section class="celebSectionDetails">

<form class="formStyle" action="/celebrities/{{_id}}/celebrity-edit" method="post">

  <label for="name"><p>Name:</p></label>
  <input type="text" name="name" id="name-input" value="{{name}}" />
<br>
  <label for="occupation-input"><p>Occupation:</p></label>
  <input type="text" name="occupation" id="occupation-input" value="{{occupation}}" />
<br>
  <label for="catchPhrase-input"><p>Phrase:</p></label>
  <input type="text" name="catchPhrase" id="catchPhrase-input" value="{{catchPhrase}}" />
<br>
  <button type="submit" class="submitButton">Save changes</button>

</form>

</section>