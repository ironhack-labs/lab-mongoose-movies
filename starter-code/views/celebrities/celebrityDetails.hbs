<div class="info-container">
  <div class="container">
    <div class="row flex-column">
      {{#with celebrity}}
      <div class="col">
        <h1>{{name}}</h1>
        <p class="border-bottom pb-2">{{occupation}}</p>
      </div>
      <div class="col mb-4">
        <p>{{catchPhrase}}</p>
      </div>
      <div class="d-flex flex-column flex-md-row">
        <div class="col-md-4 col-12">
          <a href="/celebrities" class="btn btn-custom btn--white btn-lg"><i class="fa fa-long-arrow-left"></i> Back to
            the celebrities list</a>
        </div>
        <div class="col-md-4 col-12">
          <a href="/celebrities/{{_id}}/edit" class="btn btn-custom btn--red btn-lg">Edit info about celebrity</a>
        </div>
      </div>
      {{/with}}
    </div>
  </div>
</div>