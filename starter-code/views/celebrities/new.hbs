<h2>Add a new celebrity</h2>

<form action="/celebrities" method="POST" id="form">
  <label>Name</label>
  <input type="text" name="name" placeholder="Name">
  <label>Occupation</label>
  <input type="text" name="occupation" placeholder="Occupation">
  <label>CatchPhrase</label>
  <input type="text" name="catchphrase" placeholder="CatchPhrase">
  {{#if errorMessage}}
  <div class="error-message">{{ errorMessage }}</div>
  {{/if}}
  <button type="submit">Add celibrity</button>
  {{#if successMessage}}
  <div class="success-message">{{ successMessage }}</div>
  <a href="/celebrities/index">Back to Celebrities List</a>
  {{/if}}
</form>