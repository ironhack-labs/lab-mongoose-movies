<div class="container">

    <h1>Crear nueva celebrity</h1>

    <div class="row justify-content-center">

        <div class="col-md-8">

            <form action="/celebrities/new" method="POST">
                <div class="form-group">
                    <label for="field1">Nombre</label>
                    <input type="text" class="form-control" id="field1" name="name">
                </div>
                <div class="form-group">
                    <label for="field2">Ocupación</label>
                    <input type="text" class="form-control" id="field2" name="occupation">
                </div>
                <div class="form-group">
                    <label for="field3">Descripción</label>
                    <input type="text" class="form-control" id="field3" name="catchPhrase">
                </div>

                <button type="submit" class="btn btn-dark">Agregar Celebritiy</button>
            </form>

        </div>
    </div>
</div>