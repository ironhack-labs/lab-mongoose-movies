<div class="container">

  <h1>Add new Celebrity</h1>

  <div class="row justify-content-center">

    <div class="col-md-8">

      <form action="/celebrities/new" method="POST">
        <div class="form-group">
          <label for="field1">Add Celebrity name</label>
          <input type="text" class="form-control" id="field1" name="name">
        </div>
        <div class="form-group">
          <label for="field2">Add Celebrity occupation</label>
          <input type="text" class="form-control" id="field2" name="occupation">
        </div>
        <div class="form-group">
          <label for="field2">Add Celebrity Cath Phrase</label>
          <input type="text" class="form-control" id="field2" name="catchPhrase">
        </div>
        <button type="submit" class="btn btn-dark">Add Celebrity to DataBase</button>

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
      </form>
      (<a href="/">Back to index</a>)
    </div>
  </div>
</div>