<form action="/celebrities" method="post">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name">Celebrity Name:</label>
      <input type="text" class="form-control" id="name">
    </div>
  </div>
  <div class="form-group">
    <label for="occupation">Occupation:</label>
    <input type="text" class="form-control" id="occupation" placeholder="Actor / Musician / Businessman">
  </div>
  <div class="form-group">
    <label for="catchPhrase">Phrase:</label>
    <input type="text" class="form-control" id="catchPhrase">
  </div>
  <button type="submit" class="btn btn-primary">Add Celebrity</button>
</form>