<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Add a Celebrity</h2>

        <form action="/celebrities/new" method="POST">
            <div class="form-group">
                <label for="field1">Name</label>
                <input name="name" type="text" class="form-control" id="field1">
            </div>
            <div class="form-group">
                <label for="field2">Occupation</label>
                <input name="occ" type="text" class="form-control" id="field2">
            </div>
            <div class="form-group">
                <label for="field3">Catch Phrase</label>
                <input name="catchPhrase" type="text" class="form-control" id="field3">
            </div>
            <button type="submit" class="btn btn-dark">Create</button>
            <a class="btn btn-md btn-dark" href="/celebrities">Back</a>
        </form>
    </div>
</div>