<h2>Create a new entry</h2>

<div class="container">
  <div class="row">
    <div class="col-8">
      <form method="POST" >
        <div class="form-group">
          <label for="celebrityName">Name</label>
          <input type="text" class="form-control" id="celebrityName" name="name" aria-describedby="emailHelp"
            placeholder="Enter your celebrity's name!">
        </div>
        <div class="form-group">
          <label for="celebrityOccupation">Occupation</label>
          <input type="text" class="form-control" id="celebrityOccupation" name="occupation" placeholder="Enter their occupation!">
        </div>
        <div class="form-group">
          <label for="celebrityCatchPhrase">Catchphrase!</label>
          <input type="text" class="form-control" id="celebrityCatchPhrase" name="catchPhrase" placeholder="Enter their catchphrase!">
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
      </form>
    </div>
  </div>
</div>