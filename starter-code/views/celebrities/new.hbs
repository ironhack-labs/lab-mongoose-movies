<h2>Add new Celebrity</h2>


<hr class="mt-0" />

<div class="row">
    <div class="col-12 col-sm-4">
        <form action="/celebrities" method="post" class="mt-3 mb-3 mx-auto">

 
  

          <div class="form-group">
                <label for="name">CELEBRITY NAME</label>
                <input name="name" type="text" id="name"
                    placeholder="Enter celebrity name" value="{{ name }}">
            </div>



          <div class="form-group">
                <label for="name">CELEBRITY OCUPATION</label>
                <input name="ocupation" type="text" id="ocupation"
                    placeholder="Enter celebrity ocupation" value="{{ ocupation }}">
            </div>



            <div class="form-group">
                <label for="catchPhrase">CATCH PHRASE</label>
                <input name="catchPhrase" type="text" id="catchPhrase" placeholder="Enter catchPhrase"
                    value="{{ catchPhrase}}">
            </div>



            <div>
                <div class="m-5">
                    <button type="submit" class="btn btn-outline-success pl-4 pr-4">ADD NEW CELEBRITY</button>
                </div>
        </form>


        <div class="m-5">
            <a class="btn btn-outline-primary pl-4 pr-4" href="/celebrities/">BACK</a>
        </div>
    </div>


</div>