<section>
  <div class="container">
    <a href="/celebrities">Go back</a>
    
    <h2>Add a celebrity</h2>
  
    <ul>
      {{#each errorFields}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  
    <form action="/celebrities" method="POST">
      <fieldset>
        <div class="{{nameClass}}">
          <label for="name">Name:</label>
          <input type="text" name="name" id="name">
        </div>
        <div class="{{occupationClass}}">
          <label for="occupation">Occupation:</label>
          <select name="occupation" id="occupation">
            <option value="">- Select -</option>
            <option value="actor">Actor</option>
            <option value="actress">Actress</option>
            <option value="singer">Singer</option>
            <option value="comedian">Comedian</option>
            <option value="unknown">Unknown</option>
          </select>
        </div>
        <div class="{{catchPhraseClass}}">
          <label for="catchPhrase">Catch Phrase:</label>
          <textarea name="catchPhrase" id="catchPhrase" cols="30" rows="10"></textarea>
        </div>
      </fieldset>
      <fieldset>
        <button type="submit">Save</button>
      </fieldset>
    </form>
  </div>
</section>
