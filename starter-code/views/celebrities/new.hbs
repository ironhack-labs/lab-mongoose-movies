<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h2>Añade una nueva celebrity</h2>

            <form method="POST" action="/celebrities">

                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label>Profesión</label>
                    <input type="text" class="form-control" name="occupation">
                </div>
                <div class="form-group">
                    <label>Frase célebre</label>
                    <input type="text" class="form-control" name="catchPhrase">
                    <small class="form-text text-muted">La más original.</small>
                </div>

                <button type="submit" class="btn btn-dark">Crear nueva celebrity</button>
            </form>
        </div>
    </div>


</div>