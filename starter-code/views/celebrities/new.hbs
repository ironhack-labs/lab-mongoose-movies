<div class="container">
  <br>
  <br>
  <h2>Add a New Celebrity</h2>
  <br>

  <div class="container">
    <form action="/celebrities" method="post">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" id="name">
      </div>
      <div class="form-group">
        <label for="occupation">Occupation</label>
        <input class="form-control" type="text" name="occupation" id="occupation">
      </div>
      <div class="form-group">
        <label for="catchPhrase">Catch Phrase</label>
        <input class="form-control" type="text" name="catchPhrase" id="catchPhrase">
      </div>
      <input type="submit" value="Add 'Celebrity'" class="btn btn-primary">
    </form>
  </div>
</div>