<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-6">

      <h1>New celebrity</h1>

      <hr>

      <form method="POST" action="/celebrities/new">

        <div class="form-group">
          <label for="name">Name</label>
          <input name="name" type="text" class="form-control" id="name">
        </div>

        <div class="form-group">
          <label for="occupation">Occupation</label>
          <input name="occupation" type="text" class="form-control" id="occupation">
        </div>

        <div class="form-group">
          <label for="catchPhrase">Catch Phrase</label>
          <input name="catchPhrase" type="text" class="form-control" id="catchPhrase">
        </div>

        <button type="submit" class="btn btn-dark">Create new celebrity</button>
      </form>

    </div>
  </div>


</div>