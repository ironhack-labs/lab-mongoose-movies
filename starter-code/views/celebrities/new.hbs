<div class="contanier">
    <h2>Add Celebrity</h2>
    <form method="POST" action="/celebrities/new">
        <div class="form">
            <label>Celebrity Name</label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="form">
            <label>Celebrity Occupation</label>
            <input type="text" class="form-control" name="occupation">
        </div>
        <div class="form">
            <label>Celebrity Catch Phrase</label>
            <input type="text" class="form-control" name="catchPhrase">
        </div>
        <button type="submit" class="btn btn-dark">Add Celebrity</button>
    </form>
</div>