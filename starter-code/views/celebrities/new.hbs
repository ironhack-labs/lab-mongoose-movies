<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h2>New Celebrity</h2>

            <form action="/new" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" type="text" class="form-control" id="name">
                </div>
                <div class="form-group">
                    <label for="occupation">Occupation</label>
                    <input name="occupation" type="text" class="form-control" id="occupation">
                    
                </div>
                <div class="form-group">
                    <label for="catchPhrase">CatchPhrase</label>
                    <input name="catchPhrase" type="text" class="form-control" id="catchPhrase">
                </div>
                
                <button type="submit" class="btn btn-dark">Send Celebrity</button>
            </form>
        </div>
    </div>