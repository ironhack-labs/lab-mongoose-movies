<h2>Create new Celebrity entry</h2>
{{#if createErr}}
<h3>There was an error adding the document, please try again.</h3>
{{/if}}
<div class="container">
    <form action="/celebrities" method="POST">
        <div class="form-group">
            <label for="name">Name: </label>
            <input type="text" class="form-control" id="name" name="occupation" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="occupation">Occupation: </label>
            <input type="text" class="form-control" id="occupation" name="occupation" placeholder="Occupation">
        </div>
        <div class="form-group">
            <label for="catchPhrase">Catch phrase: </label>
            <input type="text" class="form-control" id="catchPhrase" name="catchPhrase" placeholder="Some catchphrase">
        </div>
        <button type="submit" class="btn btn-success">Add</button>
    </form>
</div>

