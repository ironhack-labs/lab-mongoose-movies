<div class="row justify-content-center">
  <div class="col-md-6">

    <h1>¡Crear una nueva Celebrity!</h1>

    <form action="/celebrities/create" method="POST">
      <div class="form-group">
        <label for="field1">Nombre</label>
        <input name="name" type="text" class="form-control" id="field1" placeholder="Nombre">
      </div>
      <div class="form-group">
        <label for="field2">Ocupación</label>
        <input name="ocupation" type="text" class="form-control" id="field2" placeholder="Ocupación">
      </div>
      <div class="form-group">
        <label for="field3">Frase típica</label>
        <input name="catchPhrase" type="text" class="form-control" id="field3" placeholder="Frase típica">
      </div>
     
      <button type="submit" class="btn btn-dark">Crear Celebrity</button>
    </form>
  </div>
</div>