<div class="row justify-content-center">
    <div class="col-6">
        {{#with noCelebMsg}}
        <p style="color: red;">"{{name}}" {{message}}</p>
        {{/with}}
        <form action="/celebrities/new" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" id="name"
                    placeholder="write the name of the new celebrity">
            </div>
            <div class="form-group">
                <label for="occupation">Occupation</label>
                <input type="text" name="occupation" class="form-control" id="occupation"
                    placeholder="write the occupation of the new celebrity">
            </div>
            <div class="form-group">
                <label for="catchPhrase">Catchphrase</label>
                <input type="text" name="catchPhrase" class="form-control" id="catchPhrase"
                    placeholder="what's the celebrity's favourite catchphrase?">
            </div>
            <div class="form-group">
                <label for="image">Photo</label>
                <input type="text" name="image" class="form-control" id="image"
                    placeholder="paste the URL to a photo of the celebrity">
            </div>
            <hr>
            <button type="submit" class="btn btn-primary">Add celebrity</button>
            <span class="ml-2 mr-3">or</span><a class="back" href="/celebrities">Back to my Celebrities</a>
        </form>
    </div>
</div>