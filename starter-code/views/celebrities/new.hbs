<div class="col">
  <div class="row">
    <h1>{{#if name}}Edit{{else}}Create{{/if}} celebrity</h1>
  </div>
  <div class="row">
    <form action="/celebrities{{#if name}}/{{_id}}/edit{{else}}/new{{/if}}" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" id="name" name="name" value="{{name}}">
      </div>
      <div class="form-group">
        <label for="occupation">Occupation</label>
        <input class="form-control" type="text" id="occupation" name="occupation" value="{{occupation}}">
      </div>
      <div class="form-group">
        <label for="catchPhrase">Catch Phrase</label>
        <input class="form-control" type="text" id="catchPhrase" name="catchPhrase" value="{{catchPhrase}}">
      </div>
      <button type="submit">{{#if name}}Edit{{else}}Create{{/if}}</button>
    </form>
  </div>
</div>



