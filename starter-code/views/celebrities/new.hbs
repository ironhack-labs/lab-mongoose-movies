<div class="container my-5">
  <div class="row">
    <div class="col-12 mb-3">
      <h2>Create a new celebrity</h2>
    </div>
    <div class="col-12 col-md-4">
      <form action="/celebrities" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" id="name" placeholder="Kim Kardashian" class="form-control">
        </div>
        <div class="form-group">
          <label for="occupation">Occupation</label>
          <input type="text" name="occupation" id="occupation" placeholder="Null" class="form-control">
        </div>
        <div class="form-group">
          <label for="catchPhrase">Catch Phrase</label>
          <input type="text" name="catchPhrase" id="catchPhrase"
            placeholder="Oh my God, I'm gonna cry. My diamond earrings" class="form-control">
        </div>
        <button type="submit" class="btn btn-outline-info mt-3">Create</button>
      </form>
    </div>
  </div>
</div>