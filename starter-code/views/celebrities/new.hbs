<h2>Add a new Celebrity</h2>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form action="/celebrities/new" method="POST">
            <div class="form-group">
                <label for="field1">Name</label>
                <input type="text" class="form-control" id="field1" name="name">
            </div>
            <div class="form-group">
                <label for="field2">Occupation</label>
                <input type="text" class="form-control" id="field2" name="occupation">
            </div>
            <div class="form-group">
                <label for="field3">Phrases</label>
                <input type="text" class="form-control" id="field3" name="catchPhrase">
            </div>
            <button type="submit" class="btn btn-dark">Add Celebrity</button>
        </form>