<h2>New Celebrity</h2>

<form action="/celebrities" method="POST">
  <label for="name">Name</label>
  <input type="text" id="name" name="<%= name %>">

  <label for="occupation">Occupation</label>
  <input type="text" name="occupation" id="<%= occupation %>">

  <label for="catch-phrase">Catch Phrase</label>
  <input type="text" name="catch-phrase" id="<%= catchPhrase %>">

  <button type="submit">Add Celebrity</button>
</form>
<a href="/views/celebrities/index.ejs">Go to Celebrities list</a>
