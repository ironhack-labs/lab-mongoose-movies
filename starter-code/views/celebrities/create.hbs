<form action="/celebrities/create" method="POST" enctype="multipart/form-data">
    <div class="row">
        
        <div class="item">
            <label for="">
                <strong>Name: </strong>
            </label>
            <input type="text" name="name">
        </div>

        <div class="item">
            <label for="">
                <strong>Occupation: </strong>
            </label>
            <input type="text" name="occupation">
        </div>

        <div class="item">
            <label for="">
                <strong>Catch Phrase: </strong>
            </label>
            <input type="text" name="catchphrase">
        </div>

        <div class="item">
            <label for="">
                <strong>Image URL: </strong>
            </label>
            <input type="text" name="image" class="input">
        </div>

        <button class="btn btn-dark">Submit</button>
    </div>
</form>