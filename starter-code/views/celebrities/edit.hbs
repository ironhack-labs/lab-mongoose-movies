
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>Edit {{name}} Celeb!</h2>

            <form action="/celebrities/edit/{{_id}}" method="post">

                <div class="form-group">
                    <label>Name</label>
                    <input name="name" type="text" class="form-control" value="{{name}}">
                </div>

                <div class="form-group">
                    <label>Occupation</label>
                    <input name="occupation" type="text" class="form-control" value="{{occupation}}">
                </div>

                <div class="form-group">
                    <label>Catch Phrase</label>
                    <input name="catchPhrase" type="text" class="form-control" value="{{catchPhrase}}">
                </div>

                <button type="submit" class="btn btn-dark">Edit</button>
                <button class="btn btn-dark" href="/celebrities/index">Back</button>
            </form>
        </div>
    </div>
</div>