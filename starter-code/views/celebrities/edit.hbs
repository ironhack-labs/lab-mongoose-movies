<div class="contanier">
    <h2>Edit {{name}}</h2>
    <form method="POST" action="/celebrities/edit-celebrity?celebrity_id={{_id}}">
        <div class="form">
            <label>Celebrity Name</label>
            <input type="text" class="form-control" name="name" value="{{name}}">
        </div>
        <div class="form">
            <label>Celebrity Occupation</label>
            <input type="text" class="form-control" name="occupation" value="{{occupation}}">
        </div>
        <div class="form">
            <label>Celebrity Catch Phrase</label>
            <input type="text" class="form-control" name="catchPhrase" value="{{catchPhrase}}">
        </div>
        <button type="submit" class="btn btn-dark">Edit Celebrity</button>
    </form>

    <button type="button" class="btn btn-secondary">
        <a href="/celebrities">Back to Celebrities</a>
    </button>
</div>