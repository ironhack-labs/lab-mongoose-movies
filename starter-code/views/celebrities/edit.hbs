<h2>Edit {{name}}</h2>

<div class="container">
  <div class="row">
    <div class="col-8">
      <form method="POST" action="/celebrities/{{id}}/edit">
        <div class="form-group">
          <label for="celebrityName">Name</label>
          <input type="text" class="form-control" id="celebrityName" name="name" aria-describedby="emailHelp"
            value="{{name}}">
        </div>
        <div class="form-group">
          <label for="celebrityOccupation">Occupation</label>
          <input type="text" class="form-control" id="celebrityOccupation" name="occupation" value="{{occupation}}">
        </div>
        <div class="form-group">
          <label for="celebrityCatchPhrase">Catchphrase!</label>
          <input type="text" class="form-control" id="celebrityCatchPhrase" name="catchPhrase" value="{{catchPhrase}}">
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
      </form>
    </div>
  </div>
</div>