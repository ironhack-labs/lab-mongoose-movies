<h3>Edit celebrity</h3>

<form action="/celebrities/{{_id}}" method="POST">

  <div class="form-group">
    <label for="field1">Name</label>
    <input value="{{name}}" name="name" type="text" class="form-control" id="field1">
    <small class="form-text text-muted">Introduce el nombre completo</small>
  </div>

  <div class="form-group">
    <label for="field2">Occupation</label>
    <input value="{{occupation}}" name="occupation" type="text" class="form-control" id="field2">
  </div>

  <div class="form-group">
    <label for="field3">Catch Phrase</label>
    <input value="{{catchPhrase}}" name="catchPhrase" type="text" class="form-control" id="field3">
  </div>

  <button type="submit" class="btn btn-dark">Save</button>
</form>