<h2>Here we do the edits</h2>

<form action="/celebrities/update/{{theCeleb._id}}" method="POST" enctype="multipart/form-data">
  <label>Name</label>
  <input type="text" name="name" value="{{theCeleb.name}}">

  <label>Occupation</label>
  <input type="text" name="occupation" value="{{theCeleb.occupation}}">

  <label>Catchphrase</label>
  <input type="text" name="catchPhrase" value="{{theCeleb.catchPhrase}}">

  <label>Image</label>
  <input type="file" name="image">

  <button>Save Changes</button>

</form>