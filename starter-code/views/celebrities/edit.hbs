<div class="d-flex flex-column align-items-center m-3">
  <h1 class="text-secondary">Edit view of {{celebrity.name}}</h1>
</div>

<div class="container card mt-4 pt-3 bg-secondary">
  <form method="post" action="/celebrities/{{celebrity.id}}/edit">
    <div class="mb-3">
      <label class="form-label text-white">Nombre Anterior: {{celebrity.name}}</label>
      <input class="form-control" name="name" value="{{celebrity.name}}">
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Occupation Anterior: {{celebrity.occupation}}</label>
      <input class="form-control" name="occupation" value="{{celebrity.occupation}}">
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Frase Anterior: {{celebrity.catchPhrase}}</label>
      <textarea class="form-control" name="catchPhrase" >{{celebrity.catchPhrase}}</textarea>
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-success m-3">Save Changes</button>
    </div>
  </form>
</div>