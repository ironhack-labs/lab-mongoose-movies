{{#with celebrity}}
<h2>Edit {{name}}</h2>
<form action="/celebrities/edit" method="POST">
    <label for="name">Name: </label>
    <input type="text" name="name" id="name" value="{{name}}">
    <label for="occupation">Occupation: </label>
    <input type="text" name="occupation" id="occupation" value="{{occupation}}">
    <label for="catch-phrase">Catch-Phrase: </label>
    <input type="text" name="catchPhrase" id="catch-phrase" value="{{catchPhrase}}">
    <button type="submit">Submit</button>
</form>
{{/with}}