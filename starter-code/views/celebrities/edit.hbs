<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Update celebrity: {{name}}</h2>
  </div>
  <div class="panel-body">
    <form class="form-horizontal" action="/celebrities/{{_id}}/edit" method="post">
        <div class="form-group">
            <label for="name-input" class="col-sm-2 control-label">Name:</label>
            <div class="col-sm-10">
                <input type="text" name="name" id="name-input" value="{{name}}">
            </div>
        </div>
        <div class="form-group">
            <label for="occupation-input" class="col-sm-2 control-label">Occupation:</label>
            <div class="col-sm-10">
                <input type="text" name="occupation" id="occupation-input" value="{{occupation}}">
            </div>
        </div>
        <div class="form-group">
            <label for="catchPhrase-input" class="col-sm-2 control-label">Catch Phrase:</label>
            <div class="col-sm-10">
                <input type="text" name="catchPhrase" id="catchPhrase-input" value="{{catchPhrase}}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save changes</button>
            </div>
        </div>
    </form>
    </div>
</div>