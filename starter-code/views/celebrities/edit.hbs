<div class="row">
  <div class="col">
    <h2>
      Edit a celebrity
    </h2>
    {{#with celebrity}}
      <form action="/celebrities/{{_id}}" method="POST">
        <div class="form-group">
          <label for="name">
            Name:
          </label>
          <input type="text" name="name" value="{{name}}" />
        </div>
        <div class="form-group">
          <label for="occupation">
            Occupation:
          </label>
          <input type="text" name="occupation" value="{{occupation}}" />
        </div>
        <div class="form-group">
          <label for="catchPhrase">
            Phrase:
          </label>
          <input type="text" name="catchPhrase" value="{{catchPhrase}}" />
        </div>
        <div class="form-group">
          <label for="urlPhoto">
            Url Photo:
          </label>
          <input class="form-control-file" type="file" name="urlPhoto" />
        </div>
        <button class="btn btn-success" type="submit">
          Save
        </button>
      </form>
    {{/with}}
  </div>
</div>
