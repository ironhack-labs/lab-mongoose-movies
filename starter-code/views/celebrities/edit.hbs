<h1>Edit Celebrity</h1>

{{#each cel}}
<div class="row">
    <div class="col-4">
        <img class="cel-photo mt-3" src="{{this.image}}" alt="{{this.name}}">
    </div>
    <div class="col-6">
        <h3 class="mt-3 mb-3">Edit celebrity</h3>
        <form action="/celebrities/{{this.id}}/edit" method="POST">
            <div class="form-group">
                <label for="occupation">Celebrity Name</label>
                <input type="text" class="form-control" name="name" id="name" aria-describedby="emailHelp"
                    value="{{this.name}}" onchange="trimId()">
            </div>
            <div class="form-group">
                <label for="occupation">Occupation</label>
                <input type="text" class="form-control" name="occupation" id="occupation" value="{{this.occupation}}">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="text" class="form-control" name="image" id="image" value="{{this.image}}">
                <small id="imageHelp" class="form-text text-muted">Insert complete image URL</small>
            </div>
            <div class="form-group">
                <label for="image">Celebrity ID</label>
                <input type="text" class="form-control" name="id" id="id" value="{{this.id}}">
                <small id="imageHelp" class="form-text text-muted">No Space and lowercase</small>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Catch Phrase</label>
                <textarea class="form-control" name="catchPhrase" id="catchPhrase"
                    rows="3">{{this.catchPhrase}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Update</button>
        </form>
    </div>
    <div class="col-4"></div>
</div>
{{/each}}