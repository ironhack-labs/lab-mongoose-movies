<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h2>Edita {{name}}</h2>

            <form method="POST" action="/celebrities/edit?celeb_id={{id}}">

                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label>Profesión</label>
                    <input type="text" class="form-control" name="occupation" value="{{occupation}}">
                </div>
                <div class="form-group">
                    <label>Frase célebre</label>
                    <input type="text" class="form-control" name="catchPhrase" value="{{catchPhrase}}">
                </div>

                <button type="submit" class="btn btn-dark">Editar celebrity</button>
            </form>
        </div>
    </div>

</div>