<h1>Edit Celebrity</h1>

<form action="/edit/{{celebrity.id}}" method="POST">
  <div class="form-group">
    <label for="">Name</label>
    <input type="text" class="form-control" name="name" id="" aria-describedby="emailHelp" placeholder="Name of Celebrity" value="{{celebrity.name}}">
  </div>
  <div class="form-group">
    <label for="">Occupation</label>
    <input type="text" class="form-control" name="occupation" id="" placeholder="Occupation of Celebrity" value="{{celebrity.occupation}}">
  </div>
  <div class="form-group">
    <label for="">Catch Phrase</label>
    <input type="text" class="form-control" name="catchPhrase" id="" placeholder="Catch Phrase of Celebrity" value="{{celebrity.catchPhrase}}">
  </div>
  <button type="submit" class="btn btn-primary">Edit Celebrity</button>
</form>