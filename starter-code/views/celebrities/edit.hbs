<h2>Edit celebrity: {{name}}</h2>

<form action="/celebrities/{{id}}/edit" method="POST">
    <label>
    Name
      <input type="text" name="name" value="{{name}}">
    </label>

     <label>
    Occupation
      <input type="text" name="occupation" value="{{occupation}}">
    </label>

     <label>
    Catch Phrase
      <input type="text" name="catchPhrase" value="{{catchPhrase}}">
    </label>

    <button type="submit">Update</button>
</form>