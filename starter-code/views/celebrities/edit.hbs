<h2>Edit {{name}}</h2>
<form action="/celebrities/{{_id}}/edit" method="POST">
  <label for="name">Name:</label>
  <input type="text" value="{{name}}" name="name" id="name">

  <label for="occupation">Occupation:</label>
  <input type="text" value="{{occupation}}" name="occupation" id="occupation">

  <label for="catchPhrase">Catch Phrase:</label>
  <input type="text" value="{{catchPhrase}}" name="catchPhrase" id="catchPhrase">

  <button type="submit">Update</button>
</form>