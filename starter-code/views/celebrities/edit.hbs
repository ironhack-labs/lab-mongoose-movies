<div>
    <h2>Edit a Celebrity</h2>
    <form method="POST" action="/celebrities/{{this._id}}">
        <label>Name</label>
        <input type="text" name="name">

        <label>Occupation</label>
        <input type="text" name="occupation">

        <label>Catchphrase</label>
        <textarea type="text" name="catchPhrase"></textarea>

        <button type="submit">Send</button>
    </form>
</div>