<h2>Edit the celebrity</h2>

<form action = "/celebrities/{{ celebrity._id }}" method = "POST" >
      <div>
        <label for = "name"> Name </label>
        <input type = "text" name = "name" id = "name" value="{{ celebrity.name }}">
      </div>
      <div>
        <label for = "occupation"> Occupation </label>
        <input type = "text" name = "occupation" id = "occupation" value="{{ celebrity.occupation }}">
      </div>
      <div>
        <label for = "catchPhrase"> Catch Phrase </label>
        <input type = "text" name = "catchphrase" id = "catchphrase" value="{{ celebrity.catchphrase }}">
      </div>
      <button type="submit"> Submit </button>
    </form>