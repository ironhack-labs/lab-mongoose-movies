<h2>Edit a Football Celeb</h2>

<form action="/celebrities/{{_id}}/edit" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name-input">Name</label>
      <input type="text" class="form-control" name="name" id="name-input" value="{{name}}">
    </div>
    <div class="form-group col-md-6">
      <label for="occupation-input">Occupation</label>
    <input type="text" class="form-control" name="occupation" id="occupation-input" value="{{occupation}}">
    </div>
  </div>
  <div class="form-group">
    <label for="phrase-input">phrase</label>
    <textarea type="text" class="form-control" name="catchPhrase" id="phrase-input" value="catchPhrase">{{catchPhrase}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary">Save Changes</button>
</form>