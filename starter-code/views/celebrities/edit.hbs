<h2>Edit Celebrity</h2>

<form action="/celebrities/{{celebrity._id}}" method="POST">
  <label for="name">Name:</label>
  <input type="text" name="name" value="{{celebrity.name}}" required />

  <label for="occupation">Occupation:</label>
  <input type="text" name="occupation" value="{{celebrity.occupation}}" required />

  <label for="catchPhrase">Catch Phrase:</label>
  <input type="text" name="catchPhrase" value="{{celebrity.catchPhrase}}" required />

  <button type="submit">Submit</button>
</form>