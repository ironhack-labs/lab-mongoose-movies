<form action="/celebrities/{{celebrity._id}}" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name">Celebrity Name:</label>
      <input type="text" class="form-control" id="name" value="{{celebrity.name}}">
    </div>
  </div>
  <div class="form-group">
    <label for="occupation">Occupation:</label>
    <input type="text" class="form-control" id="occupation" placeholder="Actor / Musician / Businessman" value="{{celebrity.occupation}}">
  </div>
  <div class="form-group">
    <label for="catchPhrase">Phrase:</label>
    <input type="text" class="form-control" id="catchPhrase" value="{{celebrity.catchPhrase}}">
  </div>
  <button type="submit" class="btn btn-primary">Edit</button>
</form>