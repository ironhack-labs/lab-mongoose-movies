<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-7">

      <h2>CELEBRITY EDIT</h2>

      <form action="/celebrities/edit?celebrity_id={{_id}}" method="POST">

        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" name="name" value="{{name}}">
        </div>
        <div class="form-group">
          <label>Occupation</label>
          <input type="text" class="form-control" name="occupation" value="{{occupation}}">
        </div>
        <div class=" form-group">
          <label>Catch Phrase</label>
          <input type="text" class="form-control" name="catchPhrase" value="{{catchPhrase}}">
        </div>
        <button type="submit" class="btn btn-dark">Save</button>

      </form>

    </div>

  </div>

</div>