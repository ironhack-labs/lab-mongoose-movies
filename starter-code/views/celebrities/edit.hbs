<div class="row justify-content-center">
    <div class="col-md-6">

        <h2>Edit a celebrity</h2>

        <form action="/celebrities/{{id}}" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input name="name" type="text" class="form-control" id="name" value="{{name}}">
                <small class="form-text text-muted">Introduce el nombre completo</small>
            </div>
            <div class="form-group">
                <label for="occupation">Occupation</label>
                <input name="occupation" type="text" class="form-control" id="occupation" value="{{occupation}}">
            </div>
            <div class="form-group">
                <label for="catchPhrase">Catch Phrase</label>
                <input name="catchPhrase" type="text" class="form-control" id="catchPhrase" value ="{{catchPhrase}}">
            </div>

            <button type="submit" class="btn btn-dark">Edit it!</button>
            
            
        </form>
    </div>
</div>