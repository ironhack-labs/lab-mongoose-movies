<main>
    <h2 class="text-center py-5">Edit Celebrity</h2>
    <form action="/celebrities/{{this._id}}" method="POST">
        <label for="name">Name:</label>
        <input type="text" value="{{this.name}}" name="name">
        <label for="occupation">Occupation:</label>
        <input type="text" value="{{this.occupation}}" name="occupation">
        <label for="catchPhrase">Catch Phrase:</label>
        <input type="text" value="{{this.catchPhrase}}" name="catchPhrase">
        <input type="submit" value="Save" class="btn btn-primary">
    </form>
</main>