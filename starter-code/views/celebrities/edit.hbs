<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h2>Edit Celebrity</h2>

            <form method="POST" action="/celebrities/{{id}}/edit">
                <div class="form-group">
                    <label>Image url</label>
                    <input type="text" class="form-control" name="image" value="{{image}}">
                </div>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label>Occupation</label>
                    <input type="text" class="form-control" name="occupation" value="{{occupation}}">
                </div>
                <div class="form-group">
                    <label>Catch phrase</label>
                    <input type="text" class="form-control" name="catchPhrase" value="{{catchPhrase}}">
                </div>
                <button type="submit" class="btn btn-dark">Save</button>
            </form>
        </div>
    </div>



</div>