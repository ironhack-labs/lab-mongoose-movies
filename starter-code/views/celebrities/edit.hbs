<h2>Editing "{{editCeleb.name}}":</h2>

<form method="POST" action="/celebrities/{{editCeleb._id}}/edit">
    <label for="">Name:</label>
    <input type="text" name="name" id="name" value="{{editCeleb.name}}">
    <br>
    <label for="">Occupation:</label>
    <input type="text" name="occupation" id="occupation" value="{{editCeleb.occupation}}">
    <br>
    <label for="">Catch phrase:</label>
    <input type="text" name="catchPhrase" id="catchPhrase" value="{{editCeleb.catchPhrase}}">
    <br>
    <button type="submit">Save changes</button>
</form>