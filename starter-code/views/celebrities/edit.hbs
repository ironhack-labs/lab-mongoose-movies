
<form method="POST" action="/celebrities/{{this._id}}" class="form" >
<h1>Edit Celebrity</h1>

<label class="label" for="name">Celebrity Name</label>
<input class="input" type="text" id="name" name="name" value="{{this.name}}" >

<label class="label" for="occupation">Occupation</label>
<input class="input" type="text" id="occupation" name="occupation" value="{{this.occupation}}" >

<label class="label" for="catchPhrase">Catch Phrase</label>
<input class="input" type="text" id="catchPhrase" name="catchPhrase" value="{{this.catchPhrase}}" >

<div class="button-box">
<button class="btn">Update!</button>
</div>
</form>