<h2>Page's heading</h2>

<form method="post" action="/celebrities/{{this._id}}" > 

 <label class="label" for="name">Celebrity's name</label>
 <input class="input" id="name" type="text" value="{{this.name}}" name="name">

 <label class="label" for="occupation">Celebrity's occupation</label>
 <input class="input" id="occupation" type="text" value="{{this.occupation}}" name="occupation">

 <label class="label" for="catchPhrase">Celebrity's catch phrase</label>
 <input class="input" id="catchPhrase" type="text" value="{{this.catchPhrase}}" name="catchPhrase">

    <button class="btn">Update</button>
</form>