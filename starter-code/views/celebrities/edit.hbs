<h2>Editing a celebrity</h2>

<form method="POST" action="/celebrities/{{_id}}/edit">

  <div class="form-group">
    <label for="nameInput">Name:</label>
    <input name="name" type="text" class="form-control" id="nameInput" required="true" value="{{name}}">
  </div>

  <div class="form-group">
    <label for="imageField">Celebrity portrait</label>
    <input name="image" type="text" class="form-control" id="imageField" value="{{image}}">
  </div>

  <div class="form-group">
    <label for="occupationField">Occupation: </label>
    <input name="occupation" type="text" class="form-control" id="occupationField" required="true"
      value="{{occupation}}">
  </div>

  <div class="form-group">
    <label for="catchPhraseField">Catch phrase: </label>
    <input name="catchPhrase" type="text" class="form-control" id="catchPhraseField" required="true"
      value="{{catchPhrase}}">
  </div>

  <button type="submit" class="btn btn-primary btn-dark">Update</button>
</form>