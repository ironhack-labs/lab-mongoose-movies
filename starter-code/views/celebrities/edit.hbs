<form action="/celebrities/{{_id}}" method="POST">
  <div class="form-group">
    <label for="">Name</label>
    <input type="text" name="name" value="{{name}}" class="form-control">
  </div>
  <div class="form-group">
    <label for="">Occupation</label>
    <input type="text" name="occupation" value="{{occupation}}" class="form-control">
  </div>
  <div class="form-group">
    <label for="">Catch Phrase</label>
    <input type="text" name="catchPhrase" value="{{catchPhrase}}" class="form-control">
  </div>
  <div class="form-button">
    <button type="submit" class="btn btn-info">Edit</button>
  </div>
</form>