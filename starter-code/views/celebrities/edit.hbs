<div class="row justify-content-center">
    <div class="col-6">
        {{#with celeb}}
        <form action="/celebrities/{{id}}/{{name}}/edit" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" id="name" value="{{name}}">
            </div>
            <div class="form-group">
                <label for="occupation">Occupation</label>
                <input type="text" name="occupation" class="form-control" id="occupation" value="{{occupation}}">
            </div>
            <div class="form-group">
                <label for="catchPhrase">Catchphrase</label>
                <input type="text" name="catchPhrase" class="form-control" id="catchPhrase" value="{{catchPhrase}}">
            </div>
            <div class="form-group">
                <label for="image">Photo</label>
                <input type="text" name="image" class="form-control" id="image" value="{{image}}">
            </div>
            <hr>
            <button type="submit" class="btn btn-primary">Edit celebrity</button>
            <span class="ml-2 mr-3">or</span><a class="back" href="/celebrities">Back to my Celebrities</a>
        </form>
        {{/with}}
    </div>
</div>