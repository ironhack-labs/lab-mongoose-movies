<h2>Edit Celebrity: {{name}}</h2>

<form method="POST" action="/celebrities/{{id}}/edit">
  <div class="form-group">
    <label for="nameField">Name</label>
    <input name="name" type="text" class="form-control" id="nameField" placeholder="Enter name" value="{{name}}">
  </div>
  <div class="form-group">
    <label for="occupationField">Occupation</label>
    <input name="occupation" type="text" class="form-control" id="occupationField" placeholder="Enter Occupation" value="{{occupation}}">
  </div>
  <div class="form-group">
    <label for="catchPhraseField">Catch Phrase</label>
    <input name="catchPhrase" type="text" class="form-control" id="catchPhraseField" placeholder="Enter Catch Phrase" value="{{catchPhrase}}">
  </div>
  <button type="submit" class="btn btn-primary">Update Celebrity!</button>
</form> 