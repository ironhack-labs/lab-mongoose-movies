<div class="col">
	<div class="row">
        <h2>Update Celebrity</h2>
	</div>
	<div class="row">
           {{#with celebrity}}
		<form action="/celebrities/{{_id}}" method="POST">
        <div class="form-group">
				<label for="name">Celebrity name: </label>
				<input class="form-control" type="text" id="name" name="name" value="{{name}}">
			</div>
			<div class="form-group">
				<label for="occupation">Occupation:</label>
				<input class="form-control" type="text" id="occupation" name="occupation" value="{{occupation}}"> 
			</div>
			<div class="form-group">
				<label for="catchPhrase">Catch phrase: </label>
				<input class="form-control" type="text" id="catchPhrase" name="catchPhrase" value="{{catchPhrase}}">
			</div>
			<button type="submit" class="btn btn-primary">Confirm</button>
    
          
		</form>
          {{/with}}
	</div>
</div>