<div class="container-form">
    <h2>Edit the information about {{celebrity.name}}</h2>

    <form action="/celebrities/{{celebrity._id}}" method="POST">
        <input type="hidden" name="id" value="{{celebrity._id}}">
        
        <div class="form-group">
            <label>Name: </label>
            <input type="text" class="form-control" name="name" value="{{celebrity.name}}">
        </div>

        <div class="form-group">
            <label>Occupation: </label>
            <input type="text" class="form-control" name="occupation" value="{{celebrity.occupation}}">
        </div>

        <div class="form-group">
            <label>Phrase: </label>
            <textarea class="form-control" name="catchPhrase" rows="4">{{celebrity.catchPhrase}}</textarea>
        </div>

        <a href="/celebrities"><button type="button" class="btn btn-danger btn-sm">Cancel</button></a>
        <button class="btn btn-success btn-sm">Save</button>
    </form>
</div>