<div class="container">
    <div class="celebrities-title">
        <h2>Edit a Celebrity</h2>
    </div>
    <div class="celebrities-form-box">
        <form class="form" action="/celebrities/{{editCelebrity._id}}" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="{{editCelebrity.name}}">
            </div>
            <div class="form-group">
                <label for="occupation">Occupation</label>
                <input type="text" name="occupation" id="occupation" value="{{editCelebrity.occupation}}">
            </div>

            <div class="form-group">
                <label for="catch">Catch Phrase</label>
                <input type="text" name="catchPhrase" id="catch" value="{{editCelebrity.catchPhrase}}">
            </div>
            <button class="btn btn-add" type="submit">Edit</button>
        </form>
    </div>
    <div class="links">
        <a href="/">Home</a>
        <a href="/celebrities">Celebrities</a>
    </div>
</div>