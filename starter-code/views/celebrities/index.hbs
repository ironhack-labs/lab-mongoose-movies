<h2>CELEBRITIES</h2>

<div>
  {{#each celeb}}
    <div>
      <a href="celebrities/show/{{this.id}}">{{this.name}}</a>
      <form action="celebrities/{{this.id}}/delete" method="POST">
        <button type="submit">Delete</button>
      </form>
    </div>
  {{/each}}
</div>
<br>
<a href="celebrities/new">Add a celebrity</a>
