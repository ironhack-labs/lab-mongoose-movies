<div class="container mt-5">
    <h2>Celebrities</h2>
        <table class="table table-hover w-75">
            <thead>
                <tr>
                    <th scope="col">Celebrity</th>
                    <th colspan="2" scope="col" class="pl-5">Actions to perform</th>
                </tr>
            </thead>
            <tbody>
                {{#each celebridades}}
                <tr>
                    <td><a href="/celebrities/{{this._id}}">{{this.name}}</a></td>
                    <td class="w-25">
                         <form action="/celebrities/{{this._id}}/delete" method="POST">
                        <button type="submit" class="btn btn-danger">DELETE</button>
                        </form>
                    </td>
                    <td class="w-25">
                        <a href="/celebrities/{{this._id}}/edit" class="btn btn-warning">EDIT</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    <div>
        <a href="/celebrities/new" class="btn btn-dark">Add a celebrity to the DB</a>
        <a href="/" class="btn btn-info">Back Home</a>
    </div>
</div>







