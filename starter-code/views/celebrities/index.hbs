<h2>Celebrities</h2>
<button type="button"><a href="/">Back</a></button>
<button type="button"><a href="/celebrities/new">Create new celebrity</a></button>
<div class="section">
  {{#each celebrity}}
  <div class="movie-box">
    <h4>{{name}}</h4>
    <img class="poster" src="{{image}}" alt="">
    <div class="btn-box">
      <button type="button" class="btn btn-primary"><a href="/celebrities/{{_id}}">See more</a></button>
      <button type="button" class="btn btn-primary"><a href="/celebrities/{{_id}}/edit">Edit</a></button>
    </div>
    <form action="/celebrities/{{_id}}/delete" method="POST">
      <button type="submit">Delete</button>
    </form>
  </div>
  {{/each}}
</div>