<h2>Celebrity Database</h2>

<ul>
    
{{#each result}}
<li>
    <h2><a class="link" href="/celebs/details/{{this._id}}">{{this.name}}</a></h2>
    
    <form action="/celebs/{{this._id}}/delete" method="POST">
        <button>Delete</button>
    </form>
</li>
{{/each}}

</ul>
<h3><a href="/celebs/create-celeb">Add a celeb</a></h3>