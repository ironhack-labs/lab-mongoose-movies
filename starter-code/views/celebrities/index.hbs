<h2>Celebrities</h2>
{{#each all}}
<a href="celebrities/{{this._id}}">{{this.name}}</a>
    <form action="/celebrities/{{this._id}}/delete" method="post">
        <button type="submit">Delete</button>
    </form>
    <form action="/celebrities/{{this.id}}/edit">
        <button type="submit">Edit</button>
    </form>
{{/each}}
<a href="celebrities/add">Add celebrity</a>