<h2 class="homeTitle">Celebrities</h2>


<div class="list">
  {{#each celebrities}}
  <div class="element">
    <a class="two" href="/celebrities/{{this._id}}">{{this.name}}</a>
    <form action="/celebrities/{{this._id}}/delete" method="post">
      <button class="delete" type="submit">Delete</button>
    </form>

    <form action="/celebrities/{{this._id}}/edit" method="post">
      <button class="edition" type="submit">Edit</button>
    </form>
  </div>
  {{/each}}
</div>
<div class="news">
  <a href="/celebrities/new">New Celebrity</a>
</div>