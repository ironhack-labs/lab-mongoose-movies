<h1>{{title}}</h1>
<h2>Celebrities List</h2>
<table class="table table-striped table-inverse table-responsive">
    <thead class="thead-inverse">
        <tr>
            <th>Name <a name="" id="" class="btn btn-primary" href="/celebrities/new" role="button">New Celebrity</a> </th>
            <th>Occupation</th>
            <th>Catch Phrase</th>
            <th colspan="2">Actions</th>
        </tr>
        </thead>
        <tbody>
            {{#each celebrities}}
            <tr>
                <td scope="row"><a name="" id="" href="/celebrities/{{this._id}}" role="button">{{this.name}}</a></td>
                <td>{{this.occupation}}</td>
                <td>{{this.catchPhrase}}</td>
                <td>
                    <a name="" id="" class="btn btn-secondary" href="#" role="button">Edit</a>
                </td>
                <td>
                    <form action="/celebrities/{{this._id}}/delete" method="post">
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
</table>