<h1>{{title}}</h1>
<h2>Celebrities List</h2>
<table class="table table-striped table-inverse table-responsive">
    <thead class="thead-inverse">
        <tr>
            <th>Name <a name="" id="" class="btn btn-primary" href="#" role="button">New Celebrity</a> </th>
            <th>Occupation</th>
            <th>Catch Phrase</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
            {{#each celebrities}}
            <tr>
                <td scope="row"><a name="" id="" href="/celebrities/{{this._id}}" role="button">{{this.name}}</a></td>
                <td>{{this.occupation}}</td>
                <td>{{this.catchPhrase}}</td>
                <td><a name="" id="" class="btn btn-secondary" href="#" role="button">Edit</a><a name="" id="" class="btn btn-danger" href="#" role="button">Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
</table>