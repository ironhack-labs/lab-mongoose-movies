<h2>Celebrities</h2>
<ul>
  {{#each celebrities}}
  <form method="POST" action="/celebrities/{{this._id}}/delete">
    <li>
      <a href="/celebrities/{{this.id}}">
        <h3>{{this.name}}</h3>
      </a>
      <button>Delete Celebrity</button>
    </li>
  </form>
  <a href="/celebrities/{{this.id}}/edit">Edit</a>
  {{/each}}
</ul>
<a href="/celebrities/new">Add a new celebrity</a>