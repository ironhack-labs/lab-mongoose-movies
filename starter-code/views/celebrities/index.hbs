<div class="row">
  <div class="col-12">
    <h2 class="text-center pb-5">
      Celebrities List
    </h2>
  </div>
        {{#each celebrities}}
    <div class="col-md-4">
      <div class="card m-5" style="width: 18rem">
        <img
          class="card-img-top img-fluid"
          src="{{photoUrl}}"
          alt="{{name}} photo"
        />
        <div class="card-body">
          <a href="/celebrities/{{_id}}" class="card-title">
            {{name}}
          </a>
          <form action="/celebrities/{{_id}}/delete" method="POST">
            <button type="submit" class="btn btn-danger mt-3">
              Delete
            </button>
          </form>
        </div>
      </div>
  </div>
    {{/each}}
<div class="col-12 text-center">
    <a href="/celebrities/new" class="btn btn-primary mt-2">
      Add a Celebrity
    </a>
</div>

  </div>
</div>