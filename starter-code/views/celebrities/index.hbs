<h2>THE CELEBRITIES</h2>

<ul>
  {{#each celebrities}}
  <li><a href="/celebrities/{{this._id}}">{{this.name}}</a></li>
    <form action="/celebrities/{{this._id}}/delete" method="POST">
      <button type="submit">Delete Celebrity</button>
    </form>

     <form action="/celebrities/{{this.id}}/edit" method="POST">
      <button type="submit">Edit Celebrity</button>
    </form>
  {{/each}}
  <a href="/celebrities/newceleb">click for new celebrity</a>
</ul> 