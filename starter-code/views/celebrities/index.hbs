<div class="bar">
    <h2>Celebrities</h2>

    <a href="/addCelebrity">Add a new celebrity!</a>
</div>

<div class="container">

    <div class="row">

        {{#each celebritiesFromDB}}

            <div class="col-lg-4 celebrities-container">
                <div class="celebrities-info-container">
                    <h5 class="card-title">{{this.name}}</h5>
                    <a href="/celebrities/{{this._id}}" class="btn btn-primary">Celebrity <br> detail</a>
                    <a href="/celebrities/{{this._id}}/edit" class="btn btn-primary padding-edit">Edit</a>
                    <form action="celebrities/{{this._id}}/delete" method="POST">
                        <button class="delete-btn" type="submit">Delete</button>
                    </form>
                </div>
            </div>

        {{/each}}

    </div>

</div>


