<h2>Celebrities</h2>
<ul>
  {{#each celebrity }}
  <li><a href="/celebrities/{{this._id}}">{{this.name}}</a></li>
  <form method="post" action="/celebrities/{{this._id}}/delete/" id="delete_form"><button>Delete</button></form>
  <a href="/celebrities/{{this._id}}/edit"><button>Edit</button></a>
  {{/each}}
</ul>
<a href="/celebrities/new">Create a new celebrity</a>