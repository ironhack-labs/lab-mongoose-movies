<h2>Celebrities</h2>
{{#each celebrities}}
<ul>
    <li><h2>{{this.name}}</h2></li>
    <p></p>
    <p><a href='/celebrities/{{this._id}}'><button type="button" class="btn btn-info btn-sm"> Find out more!</button></a></p>
    <p><a href="/celebrities/{{this._id}}/edit"><button type="button" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</button></a></p>
    <p><form action="/celebrities/{{this._id}}/delete" method="POST"><button type="button" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button></p>
</ul>
{{/each}}
<p><a class="btn btn-success btn-lg" href="/celebrities/create" role="button">Create a new celebrity!</a></p>