<h2>Celebrities</h2>
{{#each celebrities}}
    <p><a href="/celebrities/{{this._id}}">{{this.name}}</a></p>

    <p><a href="/celebrities/edit?celebrity_id={{this._id}}"><button type="submit">EEDIT</button></a></p>

    <form action="/celebrities/{{this._id}}/delete" method="post">
        <button type="submit">DELETE</button>
    </form>

{{/each}}
<p><a href="/celebrities/new">Add a new celebrity</a></p>
<p><a href="/">Back to Mongoose Movies</a></p>

 