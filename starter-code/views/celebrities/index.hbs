<section>
    <div class            = "row">
        <div class        = "col-lg-8 d-flex mx-auto my-3 py-3 flex-column justify-content-center">
            <h2 class     = "text-center" id="tituloMovies">Celebrities Page</h2>
        </div>
    </div>
    <div class            = "d-flex flex-wrap">
        {{#each celebrities}}
        <div class        = "card my-5 mx-5 shadow text-center " style="width: 22%;" id="eachCard">
            <div class    = "card-body bg-white col justify-content-center rounded">
               <a href    = "/celebrities/{{this._id}}"> <h2 class="card-title p-3 mx-auto text-black">{{this.name}}</h2></a>
            </div>
            <form method="POST" action="/celebrities/{{id}}/delete">
                <button type="submit" >Delete!</button>
            </form>
            <form method="POST" action="/celebrities/edit/">
                <button type="submit" >Edit!</button>
            </form>
            
        </div>
        {{/each}}
        <a href="celebrities/new"> Crear nuevo !</a>
    </div>
</section>