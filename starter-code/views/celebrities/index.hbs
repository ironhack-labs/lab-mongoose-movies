<h2>{{title}}</h2>
<ul>
    {{#each celebrities}}
    <li><a href="/celebrities/{{_id}}">{{this.name}}</a></li>
    <form action="/celebrities/{{_id}}/delete" method="post">
        <button type="submit">Delete</button>
    </form>
    <form action="/celebrities/{{_id}}/edit" method="get">
        <button type="submit">Edit</button>
    </form>
    {{/each}}
</ul>