<div class="card mb-3">
  {{#each celebList}}
  <div class="card-body">
    <div class="items">
      <h5 class="card-title">{{this.name}}</h5>
      <div class="items-buttons">
        <a href="/celebrities/{{this._id}}"><button type="button" class="btn btn-outline-secondary">Details</button></a>
        <a href="/celebrities/{{this._id}}/edit"><button type="button"
            class="btn btn-outline-secondary">Edit</button></a>
        <form action="celebrities/{{this._id}}/delete" method="POST">
          <button type="submit" class="btn btn-outline-secondary">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{/each}}
</div>
<a href="/celebrities/new"><button type="button" class="btn btn-outline-secondary">Add new celebrity</button></a>