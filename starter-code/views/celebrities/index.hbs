<section id="celebrities">
  <div class="container">
    <h2>Celebrities</h2>
    <a href="/celebrities/new">Add a new celebrity</a>
    {{#each celebrities}}
      <div>
        <a href="/celebrities/{{_id}}">{{name}}</a>
        <a href="/celebrities/{{_id}}/edit">Edit</a>
        <form action="/celebrities/{{_id}}/delete" method="POST">
          <button type="submit">Delete</button>
        </form>
      </div>
    {{/each}}
  </div>
</section>