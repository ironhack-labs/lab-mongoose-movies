<div class="container">
    <div class="container-title">
        <h2>Celebrities</h2>
        <a href="celebrities/new"><button class="add">Add Celebrity</button></a>
    </div>

    {{#each celebrities}}
    <ul class="list">
        <li class="title">
            <a href="celebrities/{{this._id}}">{{this.name}}</a>
            <div class="button">
                <a href="celebrities/{{this._id}}/edit"><button class="edit">Edit</button></a>
                <form action="celebrities/{{this._id}}/delete" method="POST">
                    <button class="delete">Delete</button>
                </form>
            </div>
        </li>
    </ul>
    {{/each}}
</div>