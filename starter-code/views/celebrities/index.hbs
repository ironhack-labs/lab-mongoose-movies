<h1>Here are the celebrities</h1>

<ul>
    {{#each celebrities}}
    <li>
        <a href="/celebrities/{{this._id}}">{{this.name}}</a>
        <form action="/celebrities/{{this._id}}/delete" method="POST"><button>Delete</button></form>
        <form action="/celebrities/{{this._id}}/edit" method="GET"><button>Edit</button></form>
        <br><br>
    </li>
    {{/each}}
    <li>
        <a href="/celebrities/new">Add celebrity</a>
    </li>
</ul>