<h1>Celebrities</h1>
<a href="/celebrities/new" class="btn btn-primary">Create</a>
{{#each celebrities}}
    <div class="card" style="width: 18rem;">
    {{!-- <img class="card-img-top" src="..." alt="Card image cap"> --}}
    <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <a href="/celebrities/{{id}}" class="btn btn-primary">Show</a>
        <form action="/celebrities/{{id}}/delete" method="POST"> 
          <button class="btn btn-danger">Delete</button>
        </form>
    </div>
    </div>
{{/each}}