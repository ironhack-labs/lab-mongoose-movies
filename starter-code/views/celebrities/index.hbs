<h2>List of celebrities</h2>
{{#each celebrities}}
<a href="/celebrities/{{_id}}"><p>{{name}}</p></a>
<form action="/celebrities/{{_id}}/delete" method="POST">
<button type="submit">delete</button>
</form>
<form action="/celebrities/{{_id}}/edit" method="Get">
<button type="submit">edit</button>
</form>
{{/each}}
<a href="/celebrities/new">Add a celebrity</a>