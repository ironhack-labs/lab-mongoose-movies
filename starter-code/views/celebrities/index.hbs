<h2>Celebrities</h2>

<div>
    {{#each celebrityList}}
    <p>{{name}}</p>
    <a href="/celebrities/{{_id}}">See more</a>
    <br>
    <form action="/celebrities/{{_id}}/edit" method="get">
        <button type="submit">Edit</button>
    </form>
    <br>
    <form action="/celebrities/{{_id}}/delete" method="post">
        <button type="submit">Delete</button>
    </form>
    {{/each}}
</div>
<br>
<a href="/celebrities/new">Create new celebrity</a>