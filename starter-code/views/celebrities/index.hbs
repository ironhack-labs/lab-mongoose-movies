<div class="container my-5">
  <div class="row">
    <div class="col-12 mb-5">
      <h2>All Celebrities</h2>
    </div>
  </div>
  <div class="row">
    {{#each celebrities as |celebrity|}}
    <div class="col-12 col-md-3 mb-5">
      <h3 class="mb-4 h4">{{celebrity.name}}</h3>
      <a href="/celebrities/{{celebrity._id}}" class="btn btn-outline-info">Ver m√°s</a>
      <form action="/celebrities/{{this._id}}/delete" method="POST" class="d-inline">
        <button type="submit" class="btn btn-outline-danger">Delete</button>
      </form>
    </div>
    {{/each}}
  </div>
</div>