<div class="indexCel">
  <a href="/">Back to Home!</a>
  <h2>LIST OF CELEBRITIES</h2>

  <ul>
    {{#each Celebrities}}
    <li>
      <a href="/celebrities/{{_id}}">{{name}}</a>
      <form action="/celebrities/{{_id}}/edit">
        <button type="submit"><i class="far fa-edit"></i></i></button>
      </form>
      <form action="/celebrities/{{_id}}/delete" method="post">
        <button type="submit"><i class="far fa-trash-alt"></i></button>
      </form>
    </li>
    {{/each}}
  </ul>
  <a href="/celebrities/new"><i class="far fa-plus-square"></i> Add new</a>
</div>
