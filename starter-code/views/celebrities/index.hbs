<h2>List of Celebrities</h2>
{{#each celebrities}}
<li>
    <a href="/celebrities/{{_id}}" title="{{name}}">{{name}}</a>
    <form action="/celebrities/{{_id}}/delete" method="POST">
        <button type="submit">Delete celebrity</button>
    </form>
    <a href="/celebrities/{{_id}}/edit">Edit celebrity</a>
</li>
{{/each }}
</ul>