<main>
    <h2 class="text-center py-5">Celebrities index</h2>
    {{#each list }}
    <div class="d-flex justify-content-between px-3 py-2">
        <a href="/celebrities/{{this.id}}" class="text-decoration-none font-weight-bold">
            {{this.name}}
        </a>
        <div class="d-flex">
            <form action="/celebrities/{{this._id}}/edit" method="GET">
                <button type="submit" class="btn btn-info px-3 mx-3">Edit</button>
            </form>
            <form action="/celebrities/{{this._id}}/delete" method="POST">
                <button type="submit" class="btn btn-danger px-3 mx-3">Delete</button>
            </form>
        </div>

    </div>

    {{/each}}
</main>