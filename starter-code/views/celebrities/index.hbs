<div class="items">
  {{#each celebrities}}
  <div class="item-container">
    <h1>Name: {{name}}</h1>

    <h2>Occupation:</h2>
    <p>{{occupation}}</p>

    <h2>Catchphrase:</h2>
    <p>{{catchPhrase}}</p>

    <div class="link-container details-btn">
      <a href="/celebrities/{{_id}}">Go to celebrity details</a>
    </div>

    <div class="link-container edit-btn">
      <a href="/celebrities/{{_id}}/edit">Edit celebrity details</a>
    </div>

    <form method="post" action="/celebrities/{{_id}}/delete">
      <input type="submit" value="delete">
    </form>
  </div>
  {{/each}}
</div>

<div class="link-container add-btn">
  <a href="/celebrities/new"> Add new Celebrity</a>
</div>