<div class="d-flex justify-content-center m-3">
  <h1 class="text-secondary">Register new Celebrity</h1>
</div>


<div class="container card mt-4 pt-3 bg-secondary">
  <form method="post" action="/celebrities/new">
    <div class="mb-3">
      <label class="form-label text-white">Celebrity Name</label>
      <input class="form-control" name="name" placeholder="Insert Celebrity Name">
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Celebrity Occupation</label>
      <input class="form-control" name="occupation" placeholder="Insert Celebrity Occupation">
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Celebrity Phrase</label>
      <input class="form-control" name="catchPhrase" placeholder="Insert Celebrity Phrase">
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-light m-3">Register New Celebrity</button>
    </div>
  </form>
</div>