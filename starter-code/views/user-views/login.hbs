<h1>Login</h1>

<form action="/login" method="POST">

<p>Username</p>
<input type="text" name="username">

<p>Password</p>
<input type="password" name="password">

<p><button style="background-color: gray">Submit</button></p>
</form>

{{#if error}}
<div class="error-message" style="color: red">{{ error }}</div>
{{/if}}