<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-6">

      <h1>Editar Celebrity <strong>{{name}}</strong></h1>

      <form action="/edit/{{_id}}" method="post">

        <div class="form-group">
          <label>NAME : </label>
          <input name="name" type="text" class="form-control" value="{{name}}">
        </div>

        <div class="form-group">
          <label>OCCUPATION :</label>
          <input name="occupation" type="text" class="form-control" value="{{occupation}}">
        </div>

        <div class="form-group">
          <label>CATCH PHRASE :</label>
          <input name="catchPhrase" type="text" class="form-control" value="{{catchPhrase}}">
        </div>
        <button type="submit" class="btn btn-dark">Guardar</button>
      </form>
    </div>
  </div>
</div>