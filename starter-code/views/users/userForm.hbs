<h2>{{#unless name}}Registration{{else}}Edit <b>{{userName}}</b>'s Profile{{/unless}}</h2>

<div class="col">
    <div class="row">
        <form action="/users/{{#if name}}{{id}}/edit{{else}}userForm{{/if}}" method="POST">
            <div class="form-group">
                <label for="name-input"> Name: </label>
                <input class="form-control"type="text" name="name" id="name-input" value="{{name}}" required>
            </div>
            <div class="form-group">
                <label for="username-input"> Username: </label>
                <input class="form-control"type="text" name="userName" id="username-input" value="{{userName}}" required>
            </div>
            <div class="form-group">
                <label for="email-input"> Email: </label>
                <input class="form-control" type="email" name="email" id="email-input" value="{{email}}" required>
            </div>
            <div class="form-group">
                <label for="username-input"> Age: </label>
                <input class="form-control" type="number" name="age" min="18" max="120" id="username-input" value="{{age}}" required>
                <p class="mt-2 text-secondary">You must be at leat 18 years old.</p>
            </div>

            <button class="btn btn-primary mt-3" type="submit">{{#unless name}}Register{{else}}Edit Profile{{/unless}}</button>
        </form>
    </div>
</div>


