{{#with celebrity}}
<h2 class="center-title">Edit {{name}}</h2>

<form method="POST" action="/celebrities/{{_id}}" class="input-container">
  <div class="form-group">
    <input type="text" class="form-control" value="{{name}}" name="name">
  </div>
  <div class="form-group">
    <input type="text" class="form-control" value="{{occupation}}" name="occupation">
  </div>
  <div class="form-group">
    <input type="text" class="form-control" value="{{catchPhrase}}" name="catchPhrase">
  </div>


  <button type="submit" class="btn btn-primary">Update</button>
</form>

{{/with}}